<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Name="myPage"
             x:Class="Dimmer.WinUI.Views.HomePage" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:converters="clr-namespace:Dimmer.Utilities.TypeConverters;assembly=Dimmer"
             xmlns:cw="clr-namespace:Dimmer.WinUI.Views.CustomViews" xmlns:lang="clr-namespace:Dimmer.Resources.Localization;assembly=Dimmer"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material" xmlns:models="clr-namespace:Dimmer.Data.ModelView;assembly=Dimmer"
             xmlns:modeltwo="clr-namespace:Dimmer.WinUI.Utils.Models" xmlns:syncf="http://schemas.syncfusion.com/maui/toolkit"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit" xmlns:uranium="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
             xmlns:vm="clr-namespace:Dimmer.WinUI.ViewModel" Title="HomePage"
             x:DataType="vm:BaseViewModelWin" Shell.NavBarIsVisible="False"
             >

    <ContentPage.Resources>
        <converters:DurationConverterFromMsToTimeSpan x:Key="DurationConverter" />
        <converters:BytesToMegabytesConverter x:Key="FileSizeConverter" />
        <converters:BytesArrayToImageSource x:Key="BytesToImageConverter" />
        <converters:BoolToInverseConverter x:Key="BoolToInverse" />
        <converters:IndexToVisibilityConverter x:Key="IndexToVisibilityConverter" />
        <converters:DateTimeToLocalDateConverter x:Key="DateTimeConverter" />
        <converters:DateTimeToLocalTimeConverter x:Key="DateTimeToTimeConverter" />
        <converters:BoolToYesNoConverter x:Key="BoolToYesNo" />
        <converters:VolumeConverter x:Key="VolConverter" />

        <DataTemplate x:Key="MultiColumnsView">
            <Grid ColumnDefinitions="0.4,*,*,*,*,*,*">
                <HorizontalStackLayout Grid.Column="0" />
                <HorizontalStackLayout Grid.Column="1" />
                <HorizontalStackLayout Grid.Column="2" />
                <HorizontalStackLayout Grid.Column="3" />
                <HorizontalStackLayout Grid.Column="4" />
                <HorizontalStackLayout Grid.Column="5" />

            </Grid>
        </DataTemplate>
    </ContentPage.Resources>

    <Grid x:Name="MainAppGrid" ColumnDefinitions="0.17*,*">
        <Grid x:Name="SideBar"
              Grid.Column="0" Margin="10,0"
              RowDefinitions="*,auto"
              >
            <ScrollView Grid.Row="0">

                <VerticalStackLayout x:Name="TopLeftPart" Spacing="15">
                    <Label Text="{Static lang:DimmerLanguage.txt_artist}" />
                    <syncf:SfChip x:Name="HomeChip"
                                  CommandParameter="0" ImageSource="house.png"
                                  Text="Home"
                                  />
                    <syncf:SfChip x:Name="ArtistsChip"
                                  CommandParameter="Artists" ImageSource="artist.png"
                                  Text="Artist"
                                  />
                    <syncf:SfChip x:Name="AlbumsChip"
                                  CommandParameter="Albums" ImageSource="musicalbum.png"
                                  Text="Albums"
                                  />
                    <syncf:SfChip x:Name="GenresChip"
                                  CommandParameter="Genres" Text="Genres"
                                  />

                    <BoxView Margin="0,10" HeightRequest="1"
                             Color="DarkSlateBlue"
                             />
                    <syncf:SfChip x:Name="LastPlayedChip"
                                  CommandParameter="LastPlayed" ImageSource="repeat.png"
                                  Text="Last Played"
                                  />



                </VerticalStackLayout>
            </ScrollView>

            <VerticalStackLayout x:Name="BottomLeft" Grid.Row="1">
                <syncf:SfChip x:Name="SettingsChip"
                              Command="{Binding SwapMediaBarPositionCommand}"
                              CommandParameter="Settings" Text="Settings"
                              >
                    <syncf:SfChip.ImageSource>
                        <FontImageSource FontFamily="FontAwesomeSolid" Glyph="cog"
                                         Color="DarkSlateBlue"
                                         />
                    </syncf:SfChip.ImageSource>
                </syncf:SfChip>
            </VerticalStackLayout>
        </Grid>

        <Grid x:Name="MainUI"
              Grid.Column="1" RowDefinitions="0.1*,*"
              >
            <Grid x:Name="SecondA"
                  Grid.Row="0" ColumnDefinitions="auto,*,auto"
                  ColumnSpacing="5" VerticalOptions="Center"
                  >

                <HorizontalStackLayout x:Name="MediaBtns"
                                       Grid.Column="0" HeightRequest="50"
                                       Spacing="10" VerticalOptions="Center"
                                       >
                    <syncf:SfChip ImageSource="skipprevious.png" StyleClass="MediaBtnChip" />
                    <syncf:SfChip ImageSource="play.png" StyleClass="MediaBtnChip" />
                    <syncf:SfChip ImageSource="skipnext.png" StyleClass="MediaBtnChip" />


                </HorizontalStackLayout>
                <Grid Grid.Column="1" VerticalOptions="Center">
                    <Slider Maximum="2" Minimum="0"
                            MinimumTrackColor="DarkSlateBlue" ThumbColor="White"
                            Value="1"
                            />

                </Grid>
                <HorizontalStackLayout Grid.Column="2" VerticalOptions="Center">
                    <syncf:SfChip ImageSource="shuffle.png" StyleClass="MediaBtnChip" />
                    <syncf:SfChip ImageSource="repeat.png" StyleClass="MediaBtnChip" />

                </HorizontalStackLayout>
            </Grid>
            <Grid Grid.Row="1" BackgroundColor="Transparent"
                  RowDefinitions="0.1*,0.1*,*"
                  >

                <Grid Grid.Row="0" ColumnDefinitions="*,*">
                    <HorizontalStackLayout Grid.Column="0">
                        <Label IsVisible="False" Text="F"/>
                    </HorizontalStackLayout>
                    
                </Grid>
                
                <Grid ColumnDefinitions="*" Grid.Row="1">
                    <Grid ColumnDefinitions="2*,*,*,*,*,*,30">
                        <Label Grid.Column="0" Text="Title" />
                        <Label Grid.Column="1" Text="Artist" />
                        <Label Grid.Column="2" Text="Album" />
                        <Label Grid.Column="3" Text="Genre" />
                        <Label Grid.Column="4" Text="Year" />
                        <Label Grid.Column="5" Text="Duration" />
                    </Grid>
                </Grid>

                <CollectionView x:Name="MainSongsColView"
                                Grid.Row="2" EmptyView="No Songs.."
                                IsVisible="True"
                                ItemsSource="{Binding NowPlayingDisplayQueue}"
                                />
            </Grid>
        </Grid>



    </Grid>

</ContentPage>