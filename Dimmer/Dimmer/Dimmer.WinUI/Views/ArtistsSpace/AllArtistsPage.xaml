<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="Dimmer.WinUI.Views.ArtistsSpace.AllArtistsPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Dimmer.WinUI.Views.ArtistsSpace" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:modeltwo="clr-namespace:Dimmer.WinUI.Utils.Models" mc:Ignorable="d"
      >

    <Page x:Name="ArtistsPage">
        <Grid RowDefinitions="Auto,*">
            <StackPanel Grid.Row="0" Orientation="Vertical">

                <SelectorBar x:Name="SelectorBar2" Grid.Row="0">

                    <SelectorBarItem x:Name="SelectorBarItemPage1"
                                     IsSelected="True" Text="Music Folders"
                                     />
                    <SelectorBarItem x:Name="SelectorBarItemPage2" Text="Page2" />
                    <SelectorBarItem x:Name="SelectorBarItemPage3" Text="Page3" />
                </SelectorBar>

                <Frame x:Name="ContentFrame"
                       Grid.Row="1" IsNavigationStackEnabled="False"
                       />
            </StackPanel>


            <ListView x:Name="collection"
                      Grid.Row="1" IsItemClickEnabled="True"
                      ItemClick="collection_ItemClick" Loaded="collection_Loaded"
                      SelectionMode="None"
                      >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,12,0,12" AutomationProperties.Name="{Binding Name}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="150" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Image x:Name="connectedElement"
                                   MaxHeight="100"
                                   Source="{Binding ImagePath}"
                                   Stretch="Fill"
                                   />

                            <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                <TextBlock Margin="0,0,0,6" HorizontalAlignment="Left"
                                           Style="{ThemeResource SubtitleTextBlockStyle}"
                                           Text="{Binding Name}"
                                           />


                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </Grid>
    </Page>
</Page>
