<?xml version="1.0" encoding="utf-8" ?>
<Window x:Class="Dimmer.WinUI.Views.SettingWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="using:Dimmer.WinUI.Views" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="SettingWindow" mc:Ignorable="d"
        >

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Page x:Name="SettingsPage" DataContext="{x:Bind ViewModel}">
        <Grid RowDefinitions="Auto,*">
            <SelectorBar x:Name="SelectorBar2"
                         Grid.Row="0" SelectionChanged="SelectorBar2_SelectionChanged"
                         >
                <SelectorBarItem x:Name="SelectorBarItemPage1"
                                 IsSelected="True" Text="Music Folders"
                                 />
                <SelectorBarItem x:Name="SelectorBarItemPage2" Text="Page2" />
                <SelectorBarItem x:Name="SelectorBarItemPage3" Text="Page3" />
            </SelectorBar>

            <Frame x:Name="ContentFrame"
                   Grid.Row="1" IsNavigationStackEnabled="False"
                   />

        </Grid>
    </Page>

</Window>
