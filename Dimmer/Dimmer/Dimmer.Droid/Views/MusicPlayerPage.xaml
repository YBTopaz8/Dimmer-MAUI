<ContentPage
    x:Class="Dimmer.Views.MusicPlayerPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:utils="clr-namespace:Dimmer.Views"
    Title="Dimmer Musics" 
    BackgroundColor="#1e1e1e"
    x:DataType="utils:MusicPlayerPage">

    <VerticalStackLayout Padding="20" BackgroundColor="Red">
        <Label
            FontSize="Large"
            HorizontalOptions="Center"
            Text="MAUI XAML Content Area" />

        <Label
            FontSize="Subtitle"
            HorizontalOptions="Center"
            Text="{Binding TrackTitle}" />
        <Label
            FontSize="Small"
            HorizontalOptions="Center"
            Text="{Binding ArtistName}" />


        <Button
            Clicked="OnMauiButtonClicked"
            Text="Test MAUI Button"
            TextColor="DarkSlateBlue" />
    </VerticalStackLayout>
</ContentPage>