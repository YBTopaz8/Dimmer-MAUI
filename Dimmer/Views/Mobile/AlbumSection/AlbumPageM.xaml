                    HorizontalOptions="Fill"
                    VerticalOptions="Center"
                    BackgroundColor="DarkSlateBlue"
                    BorderColor="DarkSlateBlue"
                    BorderWidth="2"
                    TextColor="Black"
                    CornerRadius="5"/>

                <Button Grid.Column="1" Text="Shuffle"
