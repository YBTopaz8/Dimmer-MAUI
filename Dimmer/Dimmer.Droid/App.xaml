<?xml version="1.0" encoding="utf-8" ?>
<Application x:Class="Dimmer.App" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:dx="http://schemas.devexpress.com/maui"
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary x:Name="MyDevExp" Source="/Resources/Styles/DevExpressStyles.xaml;assembly=Dimmer.Droid" />
                <ResourceDictionary x:Name="appColors" Source="/Resources/Styles/Colors.xaml;assembly=Dimmer" />
                <ResourceDictionary x:Name="appStyles" Source="/Resources/Styles/Styles.xaml;assembly=Dimmer" />
            </ResourceDictionary.MergedDictionaries>

            <Color x:Key="MyDirectColor">Darkslateblue</Color>

            <Style x:Key="MyDirectButtonStyle" TargetType="dx:DXButton">
                <Setter Property="BackgroundColor" Value="{StaticResource MyDirectColor}" />
                <Setter Property="TextColor" Value="{AppThemeBinding Dark=White,Light=Black}" />
                <Setter Property="FontSize" Value="20" />
            </Style>

            <Color x:Key="PrimaryAccentColor">#6a5acd</Color>
            <!-- Slate Blue -->
            <Color x:Key="PrimaryAccentHoverColor">#8374e6</Color>
            <Color x:Key="DestructiveColor">#e53935</Color>
            <!-- Red for delete/unlink -->
            <Color x:Key="BackgroundColor">#1e1e1e</Color>
            <Color x:Key="CardBackgroundColor">#2d2d2d</Color>
            <Color x:Key="BorderColor">#444444</Color>
            <Color x:Key="TextColor">#ffffff</Color>
            <Color x:Key="SubtleTextColor">#a0a0a0</Color>
            <Color x:Key="SuccessColor">#4CAF50</Color>


            <Color x:Key="MyAccentColor">#483D8B</Color>
            <!-- DarkSlateBlue -->
            <Color x:Key="MyAccentColorLight">#6A5ACD</Color>
            <!-- SlateBlue (for hover/pressed states) -->
            <Color x:Key="MyAccentColorDark">#3A316D</Color>
            <!-- A darker shade for borders -->

            <SolidColorBrush x:Key="MyAccentBrush" Color="{StaticResource MyAccentColor}" />
            <SolidColorBrush x:Key="MyAccentBrushLight" Color="{StaticResource MyAccentColorLight}" />
            <SolidColorBrush x:Key="MyAccentBrushDark" Color="{StaticResource MyAccentColorDark}" />

            <!-- Core Theme Colors -->
            <Color x:Key="ThemeBackgroundColor">#1C1C1C</Color>
            <!-- A very dark gray, not pure black -->
            <Color x:Key="ThemeSubtleGrayColor">#2D2D2D</Color>
            <!-- For subtle backgrounds and borders -->
            <Color x:Key="ThemeForegroundColor">#E8E8E8</Color>
            <!-- Off-white for text -->
            <Color x:Key="ThemeForegroundSubtleColor">#A0A0A0</Color>
            <!-- Gray text for secondary info -->



            <!-- 3. PRIMARY, SECONDARY, AND TERTIARY BUTTON STYLES -->

            <!-- Base style for all buttons to remove default borders and make them consistent -->
            <Style x:Key="BaseButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderWidth" Value="1"/>
                <Setter Property="Padding" Value="12,6"/>
                <Setter Property="CornerRadius" Value="4"/>
            </Style>

            <!-- Primary Button: Accent color fill -->
            <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                <Setter Property="Background" Value="{StaticResource MyAccentBrush}"/>
                <Setter Property="CornerRadius" Value="4" />
            </Style>

            <!-- Secondary Button: Accent color border -->
            <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="CornerRadius" Value="4" />
            </Style>

            <!-- Tertiary Button: Subtle, text-only button -->
            <Style x:Key="TertiaryButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="CornerRadius" Value="4" />
            </Style>



        </ResourceDictionary>
    </Application.Resources>
</Application>