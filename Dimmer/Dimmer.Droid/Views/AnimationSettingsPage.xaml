<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dimmer.Views.AnimationSettingsPage"
             Title="AnimationSettingsPage"
              xmlns:converters="clr-namespace:Dimmer.Utilities.TypeConverters;assembly=Dimmer"
 
 xmlns:dx="http://schemas.devexpress.com/maui"
 xmlns:helper="clr-namespace:Dimmer.Utils.AnimsStatics"
 xmlns:models="clr-namespace:Dimmer.Data.ModelView;assembly=Dimmer"
             Shell.NavBarIsVisible="False"
             x:DataType="vm:AnimationSettingsViewModel"
           xmlns:vm="clr-namespace:Dimmer.ViewModels">

    <dx:DXScrollView>
        <dx:DXStackLayout ItemSpacing="15" Padding="20">

            <Label Text="Select Page to Configure" FontSize="Medium" FontAttributes="Bold" />
            <dx:DXBorder Padding="0" CornerRadius="8" BorderColor="LightGray">
                <dx:FormListPickerItem  
                        ItemsSource="{Binding AppPages}"
                        SelectedItem="{Binding SelectedPageType}">
                    <dx:FormListPickerItem.ItemTemplate>
                        <DataTemplate>
                            <Label Text="{Binding ., Converter={StaticResource TypeToNameConverter}}" Padding="12" />
                        </DataTemplate>
                    </dx:FormListPickerItem.ItemTemplate>
                </dx:FormListPickerItem>
            </dx:DXBorder>

            <BoxView HeightRequest="1" Color="LightGray" Margin="0,10" />

            <!-- Animation Pickers -->
            <Label Text="Push Enter Animation (Navigating TO)" FontAttributes="Bold" />
            <Label Text="Animation when this page appears." FontSize="Small" Opacity="0.7"/>
            <dx:DXBorder Padding="0" CornerRadius="8" BorderColor="LightGray">
                <Picker ItemsSource="{Binding AvailableAnimations}"
                        ItemDisplayBinding="{Binding DisplayName}"
                        SelectedItem="{Binding SelectedPushEnter}" />
            </dx:DXBorder>

            <Label Text="Push Exit Animation (Leaving FROM)" FontAttributes="Bold" Margin="0,10,0,0"/>
            <Label Text="Animation for the previous page when this one appears." FontSize="Small" Opacity="0.7"/>
            <dx:DXBorder Padding="0" CornerRadius="8" BorderColor="LightGray">
                <Picker ItemsSource="{Binding AvailableAnimations}"
                        ItemDisplayBinding="{Binding DisplayName}"
                        SelectedItem="{Binding SelectedPushExit}" />
            </dx:DXBorder>

            <Label Text="Pop Enter Animation (Returning TO)" FontAttributes="Bold" Margin="0,10,0,0"/>
            <Label Text="Animation for the previous page when returning to it." FontSize="Small" Opacity="0.7"/>
            <dx:DXBorder Padding="0" CornerRadius="8" BorderColor="LightGray">
                <Picker ItemsSource="{Binding AvailableAnimations}"
                        ItemDisplayBinding="{Binding DisplayName}"
                        SelectedItem="{Binding SelectedPopEnter}" />
            </dx:DXBorder>

            <Label Text="Pop Exit Animation (Leaving THIS page)" FontAttributes="Bold" Margin="0,10,0,0"/>
            <Label Text="Animation for this page when you navigate back from it." FontSize="Small" Opacity="0.7"/>
            <dx:DXBorder Padding="0" CornerRadius="8" BorderColor="LightGray">
                <Picker ItemsSource="{Binding AvailableAnimations}"
                        ItemDisplayBinding="{Binding DisplayName}"
                        SelectedItem="{Binding SelectedPopExit}" />
            </dx:DXBorder>

        </dx:DXStackLayout>
    </dx:DXScrollView>
</ContentPage>