<?xml version="1.0" encoding="utf-8" ?>
<dx:BottomSheet
    x:Class="Dimmer.Views.CustomViewsParts.MoreBtmSheet"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:Dimmer.Utilities.TypeConverters;assembly=Dimmer"
    xmlns:dx="http://schemas.devexpress.com/maui"
    xmlns:helper="clr-namespace:Dimmer.Utils.AnimsStatics"
    xmlns:localTransitions="clr-namespace:Dimmer.Utils.AnimsStatics"
    xmlns:models="clr-namespace:Dimmer.Data.ModelView;assembly=Dimmer"
    xmlns:navDrawer="clr-namespace:Syncfusion.Maui.Toolkit.NavigationDrawer;assembly=Syncfusion.Maui.Toolkit"
    xmlns:progressBar="clr-namespace:Syncfusion.Maui.Toolkit;assembly=Syncfusion.Maui.Toolkit"
    xmlns:syncf="http://schemas.syncfusion.com/maui/toolkit"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewUtils="clr-namespace:Dimmer.Utilities.ViewsUtils;assembly=Dimmer"
    xmlns:vm="clr-namespace:Dimmer.ViewModels"
    x:Name="myBtmSheet"
    x:DataType="vm:BaseViewModelAnd"
    x:FieldModifier="Public"
    HalfExpandedRatio="0.6"
    StateChanged="MoreBtmSheet_StateChanged">
    <dx:BottomSheet.Content>
        <dx:DXStackLayout Margin="20" ItemSpacing="5">
            <dx:DXStackLayout ItemSpacing="10" Orientation="Horizontal">
                <dx:DXImage HeightRequest="120" Source="{Binding SelectedSong.CoverImagePath}" />
                <dx:DXStackLayout ItemSpacing="5">
                    <Label
                        FontSize="23"
                        HorizontalTextAlignment="Justify"
                        Text="{Binding SelectedSong.Title}"
                        ToolTipProperties.Text="Song Title" />
                    <dx:Chip
                        FontSize="16"
                        Text="{Binding SelectedSong.ArtistName}"
                        ToolTipProperties.Text="Artist Name" />
                    <dx:Chip
                        FontSize="17"
                        Text="{Binding SelectedSong.AlbumName}"
                        ToolTipProperties.Text="Album Name" />
                </dx:DXStackLayout>
            </dx:DXStackLayout>


            <dx:Chip
                x:Name="AddQuickNote"
                Icon="chatdots.png"
                Tap="OnAddQuickNoteClicked"
                TapCommandParameter="Black">
                <dx:Chip.Text>
                    <MultiBinding StringFormat="{}Add Quick Note To: {0}">
                        <Binding Path="SelectedSong.Title" />
                    </MultiBinding>
                </dx:Chip.Text>

            </dx:Chip>


            <dx:Chip
                x:Name="ViewArtistMFI"
                Icon="artist.png"
                Tap="QuickSearchArtist_Clicked"
                TapCommandParameter="{Binding SelectedSong}"
                Text="{Binding SelectedSong.OtherArtistsName, StringFormat='Quick View Artist : {0}'}" />
            <dx:Chip
                x:Name="ViewAlbumMFI"
                Icon="albummm.png"
                Tap="QuickSearchAlbum_Clicked"
                TapCommandParameter="{Binding SelectedSong}"
                Text="{Binding SelectedSong.AlbumName, StringFormat='Quick View Album : {0}'}" />
            <dx:Chip
                x:Name="ViewGenreMFI"
                Icon="albumm.png"
                Tap="ViewGenreMFI_Clicked"
                TapCommandParameter="{Binding .}"
                Text="{Binding SelectedSong.GenreName, StringFormat='Quick View Genre : {0}'}" />



            <dx:Chip
                Tap="OnLabelClicked"
                TapCommandParameter="OpenFileExp"
                Text="Open File in Explorer" />
            <dx:Chip
                Tap="OnLabelClicked"
                TapCommand="{Binding OpenFileInFolderCommand, Source={RelativeSource AncestorType={x:Type vm:BaseViewModelAnd}}}"
                TapCommandParameter="{Binding .}"
                Text="Open File in Folder" />
            <dx:Chip
                HeightRequest="50"
                Icon="deletesonginterfacesymbol.png"
                Tap="OnLabelClicked"
                TapCommandParameter="DeleteSys"
                Text="Delete from system" />
            <dx:Chip
                x:Name="SyncShare"
                Icon="roundtransferhorizontal.png"
                IsVisible="Hidden"
                Tap="SyncShare_Tap"
                TapCommandParameter="SyncShare"
                Text="Sync" />
            <dx:Chip
                Icon="shared.png"
                Tap="NavigateToSelectedSongPageContextMenuAsync"
                TapCommand="{Binding ShareSongDetailsAsTextCommand}"
                Text="Share Song" />
        </dx:DXStackLayout>
    </dx:BottomSheet.Content>
</dx:BottomSheet>
