                                                                IconSize="50,50"
                                                                IsIconVisible="True"
                                                                IsVisible="False"
                                                                Tap="CloseNowPlayingQueue_Tap"
                                                                VerticalOptions="End" />


                                                    </Grid>
                                                </Grid>

                                            </dx:DXExpander.Content>
                                        </dx:DXExpander>

                                    </Grid>
                                </Grid>
                            </dx:TabViewItem>
                        </dx:TabView>
                        
                    </Grid>
                    
                  

