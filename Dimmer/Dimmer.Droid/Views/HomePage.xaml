                                                FontSize="15"
                                                    BorderColor="DarkSlateBlue"
                                                    BorderThickness="0.7"
                                                    CornerRadius="25"
                                                    HorizontalOptions="End"
                                                    IsIconVisible="False"
                                                    LongPress="MoreIcon_LongPress"
                                                    PressedBackgroundColor="DarkSlateBlue"
                                                    PressedBorderColor="DarkSlateBlue"
                                                    Tap="MoreIcon_Tap"
