                                                                    <DataTrigger
                                                Binding="{Binding IsPlaying}"
                                                TargetType="Label"
                                                Value="True">
                                                                        <Setter Property="FontAttributes" Value="Bold" />
                                                                        <Setter Property="TextColor" Value="{Binding CurrentPlayingSongView.CurrentPlaySongDominantColor}" />
                                                                    </DataTrigger>
                                                                    <DataTrigger
                                                Binding="{Binding IsPlaying}"
                                                TargetType="Label"
                                                Value="False">
                                                                        <Setter Property="FontAttributes" Value="None" />
                                                                        <Setter Property="TextColor" Value="{AppThemeBinding Light=Black, Dark=White}" />
                                                                    </DataTrigger>
                                                                </Label.Triggers>
                                                            </Label>

                                                            <Label
                                        FontSize="10"
                                        HorizontalOptions="End"
                                        Text="{Binding CurrentPlayingSongView.PlayCompletedCount}" />
                                                        </VerticalStackLayout>
                                                    </DataTemplate>
                                                </dx:Chip.ContentTemplate>

                                            </dx:Chip>
                                        </Grid>
                                    </Grid>
                                </dx:DXStackLayout>
                            </dx:DXBorder.Content>

                        </dx:DXBorder>



                    </dx:DXExpander>
                </Grid>
            </dx:DXDockLayout>
        </dx:SafeKeyboardAreaView>
      
  
    </Grid>

