                                                                    HeightRequest="60"
                                                                    Icon="addcircle.png"
                                                                    IconHeight="40"
                                                                    IconWidth="40" />
                                                        </dx:DXStackLayout>
                                                    </dx:DXStackLayout>
                                                </dx:DXExpander.Content>
                                            </dx:DXExpander>
                                        </Grid>
