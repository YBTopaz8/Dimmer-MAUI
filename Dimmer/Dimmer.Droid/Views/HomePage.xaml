                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    Grid.ColumnSpan="2"
                                                    BackgroundColor="Transparent"
                                                    MaxValue="{Binding CurrentPlayingSongView.DurationInSeconds}"
                                                    MinValue="0"
                                                    Opacity="0.7"
                                                    TapReleased="ProgressSlider_TapReleased"
                                                    ValueStep="1"
                                                    VerticalOptions="End"
                                                    Value="{Binding CurrentTrackPositionSeconds}">


                                                                <dx:DXSlider.TooltipAppearance>
