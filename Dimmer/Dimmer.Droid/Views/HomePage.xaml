                                                            BackgroundColor="#626680"
                                                            FontAttributes="Bold"
                                                            FontSize="16"
                                                            TextColor="{AppThemeBinding Dark=White,
                                                                                        Light=black}" />
                                                                </dx:DXSlider.TooltipAppearance>

