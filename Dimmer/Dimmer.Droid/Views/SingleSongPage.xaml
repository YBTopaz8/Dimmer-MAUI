<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Dimmer.Views.SingleSongPage" xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:converters="clr-namespace:Dimmer.Utilities.TypeConverters;assembly=Dimmer"
             xmlns:customViewParts="clr-namespace:Dimmer.Views.CustomViewsParts" xmlns:dx="http://schemas.devexpress.com/maui"
             xmlns:models="clr-namespace:Dimmer.Data.ModelView;assembly=Dimmer" xmlns:navDrawer="clr-namespace:Syncfusion.Maui.Toolkit.NavigationDrawer;assembly=Syncfusion.Maui.Toolkit"
             xmlns:progressBar="clr-namespace:Syncfusion.Maui.Toolkit;assembly=Syncfusion.Maui.Toolkit" xmlns:syncf="http://schemas.syncfusion.com/maui/toolkit"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit" xmlns:uranium="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
             xmlns:vm="clr-namespace:Dimmer.ViewModels" Title="SingleSongPage"
             x:DataType="vm:BaseViewModelAnd"
             BackgroundColor="{AppThemeBinding Light=#F5F5F5,
                                               Dark=#1E1E1E}"
             Shell.NavBarIsVisible="False" Shell.TabBarIsVisible="False"
         xmlns:chart="http://schemas.syncfusion.com/maui/toolkit"
   xmlns:lastfmmodels="clr-namespace:Hqub.Lastfm.Entities;assembly=Hqub.Lastfm" 
            xmlns:andr="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
        >
  

    <ContentPage.Resources>
        <Style TargetType="Label" 
            
            x:Key="SectionHeader">
            <Setter Property="FontAttributes" Value="Bold"/>
        </Style>
        <DataTemplate x:Key="tooltipTemplate" x:DataType="syncf:TooltipInfo">
            <HorizontalStackLayout>
                <Label
              FontAttributes="Bold"
              FontSize="19"
              HorizontalOptions="Center"
              Text="{Binding Item.Name, StringFormat='{0}'}"
              TextColor="{AppThemeBinding Dark=White, Light=Black}"
              VerticalOptions="Center" />


                <Label
              FontAttributes="Bold"
              FontSize="21"
              HorizontalOptions="Center"
              Text="{Binding Item.YValue, StringFormat=' {0} Times'}"
              TextColor="DarkSlateBlue"
              VerticalOptions="Center" />
            </HorizontalStackLayout>
        </DataTemplate>

        <ResourceDictionary>
            <Style TargetType="syncf:SfChip" >
                <Setter Property="HeightRequest" Value="60"/>
            </Style>
        </ResourceDictionary>



        <DataTemplate x:Key="MultiColumnsView">
            <Grid ColumnDefinitions="0.4,*,*,*,*,*,*">
                <HorizontalStackLayout Grid.Column="0" />
                <HorizontalStackLayout Grid.Column="1" />
                <HorizontalStackLayout Grid.Column="2" />
                <HorizontalStackLayout Grid.Column="3" />
                <HorizontalStackLayout Grid.Column="4" />
                <HorizontalStackLayout Grid.Column="5" />

            </Grid>
        </DataTemplate>
        <converters:DurationConverterFromMsToTimeSpan x:Key="DurationConverter" />
        <converters:BytesToMegabytesConverter x:Key="FileSizeConverter" />
        <converters:BytesArrayToImageSource x:Key="BytesToImageConverter" />
        <converters:BoolToInverseConverter x:Key="BoolToInverse" />
        <converters:IndexToVisibilityConverter x:Key="IndexToVisibilityConverter" />
        <converters:DateTimeToLocalDateConverter x:Key="DateTimeConverter" />
        <converters:DateTimeToLocalTimeConverter x:Key="DateTimeToTimeConverter" />
        <converters:BoolToYesNoConverter x:Key="BoolToYesNo" />
        <converters:VolumeConverter x:Key="VolConverter" />
       
        <Style TargetType="Label" 
            
            x:Key="FieldLabel">
            <Setter Property="FontAttributes" Value="Bold"/>
        </Style>

        <DataTemplate x:Key="SimpleTemplate" x:DataType="models:SongModelView">
            <Label Text="{Binding Title}"/>
        </DataTemplate>

        <DataTemplate x:Key="GridOfFour" x:DataType="models:SongModelView">
            <Grid ColumnDefinitions="180" HorizontalOptions="Center">
                <FlyoutBase.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem 
                            Text="View" 
                            CommandParameter="{Binding .}"
                            Clicked="ViewSongMFI_Clicked"
                            x:Name="ViewSongMFI"/>

                    </MenuFlyout>
                </FlyoutBase.ContextFlyout>
                <Grid.GestureRecognizers>
                    <PointerGestureRecognizer
                        PointerEntered="SongViewPointer_PointerEntered"
                        x:Name="SongViewPointer"
                        PointerPressed="SongViewPointer_PointerPressed"
                         PointerPressedCommandParameter="{Binding .}"

                        PointerExited="SongViewPointer_PointerExited"/>
                </Grid.GestureRecognizers>
                <Image Source="{Binding CoverImagePath}" 
                       Opacity="0.6" 
                       HorizontalOptions="Start" >
                    <Image.GestureRecognizers>
                        <DragGestureRecognizer
                            CanDrag="True"
                            DragStarting="SongDrag_DragStarting"
                            x:Name="SongDrag"
                            DragStartingCommandParameter="{Binding .}"/>
                    </Image.GestureRecognizers>
                </Image>
                <Border BackgroundColor="#2C2C2C" VerticalOptions="End" 
                        StrokeShape="RoundRectangle 5,5,0,0" Padding="5,5,5,0">

                    <VerticalStackLayout >
                        <VerticalStackLayout.Resources>
                            <Style TargetType="Label">
                                <Setter Property="TextColor" Value="#999999"/>
                            </Style>
                        </VerticalStackLayout.Resources>
                        <Label Text="{Binding Title}"/>
                        <Label Text="{Binding DurationInSeconds, Converter={converters:DurationConverterFromMsToTimeSpan}}"/>
                    </VerticalStackLayout>

                </Border>
            </Grid>


        </DataTemplate>

        <ResourceDictionary>
            <Style TargetType="syncf:SfChip" >
                <Setter Property="HeightRequest" Value="60"/>
            </Style>
        </ResourceDictionary>



        

        <DataTemplate x:Key="tooltipTemplateTwo" x:DataType="syncf:TooltipInfo">
            <HorizontalStackLayout>
                <Label
FontAttributes="Bold"
FontSize="19" 
HorizontalOptions="Center"
Text="{Binding Item.Name, StringFormat='{0}'}"
TextColor="{AppThemeBinding Dark=White, Light=Black}"
VerticalOptions="Center" />


                <Label
FontAttributes="Bold"
FontSize="21"
HorizontalOptions="Center"
Text="{Binding Item.Count, StringFormat=' {0} Times'}"
TextColor="DarkSlateBlue"
VerticalOptions="Center" />
            </HorizontalStackLayout>
        </DataTemplate>
    </ContentPage.Resources>

    <dx:DXScrollView>
        <dx:DXStackLayout>
            
    <Grid x:Name="SingleSongView" RowDefinitions="auto,*">

        <Grid Grid.Row="0" ColumnDefinitions="*,auto" VerticalOptions="Start" >
            <Border BackgroundColor="{Binding BaseVM.SelectedSecondDomColor}"
                                        Opacity="0.5" IsVisible="True"  ZIndex="0"
                                        x:Name="BorderNextToImageDomm"
                                        Grid.Column="0">
            </Border>

            <VerticalStackLayout   Padding="20"  Spacing="25"  Grid.Column="0" ZIndex="1">
                <HorizontalStackLayout Spacing="20">
                    <Button
                                            BackgroundColor="Transparent"
                                            BorderWidth="1" Padding="10"
                                            HorizontalOptions="Start"
                        x:Name="ToggleViewArtist"
                                              
                        
                                            TextColor="{AppThemeBinding Dark=White,Light=Black}"
                                            Text="{Binding BaseVM.SelectedSong.ArtistName}" FontSize="19"/>
                    <Button
                        x:Name="ToggleViewAlbum"
                        Clicked="ToggleViewAlbum_Clicked"
                                            BackgroundColor="Transparent"
                                            BorderWidth="1" Padding="10"
                                            HorizontalOptions="Start"
                                              FontSize="12"
                                              
                                              
                                            TextColor="{AppThemeBinding Dark=White,Light=Black}"
                                            Text="{Binding BaseVM.SelectedSong.AlbumName}" />


                </HorizontalStackLayout>
                <Button BorderWidth="1"
                                            HorizontalOptions="Start" BackgroundColor="Transparent"
                                            Text="{Binding BaseVM.SelectedSong.Title}" FontSize="29"
                                               FontAttributes="Bold" 
                                            
                                            TextColor="{AppThemeBinding Dark=White,Light=Black}"/>
                <HorizontalStackLayout Spacing="20">
                    <Button
                                                BackgroundColor="{Binding BaseVM.SelectedSecondDomColor}"
                                                    ImageSource="play.png"
                                                BorderWidth="2"
                                            HeightRequest="60"
                                                BorderColor="DarkSlateBlue"
                                                
                                            
                                            Clicked="PlaySongGestRec_Tapped"
                                                FontAttributes="Bold"
                                                TextColor="{AppThemeBinding Dark=White,Light=Black}"
                                            >
                        <Button.Triggers>
                            <DataTrigger
Binding="{Binding BaseVM.IsPlaying}"
TargetType="Button"
Value="true">
                                <Setter Property="ImageSource" Value="pause.png" />
                            </DataTrigger>

                            <DataTrigger
Binding="{Binding BaseVM.IsPlaying}"
TargetType="Button"
Value="false">
                                <Setter Property="ImageSource" Value="play.png" />
                            </DataTrigger>
                        </Button.Triggers>
                    </Button>
                    <Button
Command="{Binding BaseVM.ToggleFavSongCommand}"
CommandParameter="{Binding BaseVM.SelectedSong}"
BackgroundColor="Transparent"
            BorderWidth="0.7"
            BorderColor="{Binding BaseVM.SelectedSecondDomColor}"
            
ImageSource="heart.png"
WidthRequest="65" HeightRequest="65"
ToolTipProperties.Text="Save To Playlist">
                        <Button.Triggers>
                            <DataTrigger
        Binding="{Binding BaseVM.SelectedSong.IsFavorite}"
        TargetType="Button"
        Value="False">
                                <Setter Property="ImageSource" Value="heartbroken.png" />

                            </DataTrigger>
                            <DataTrigger
        Binding="{Binding BaseVM.SelectedSong.IsFavorite}"
        TargetType="Button"
        Value="True">
                                <Setter Property="ImageSource" Value="heartlock.png" />


                            </DataTrigger>
                        </Button.Triggers>
                    </Button>

                    <VerticalStackLayout VerticalOptions="Center">
                        <Label Text="Dimms"  FontSize="21"
                                            TextColor="{AppThemeBinding Dark=White,Light=Black}"/>
                        <Label  HorizontalOptions="Center"
                                            TextColor="{AppThemeBinding Dark=White,Light=Black}" 
                                                        FontSize="19"
                                                        Text="{Binding BaseVM.SelectedSong.PlayCompletedCount}"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout
                                          VerticalOptions="Center"  >

                        <Label Text="Streaks"  FontSize="21"
                                            TextColor="{AppThemeBinding Dark=White,Light=Black}"/>
                        <Label  HorizontalOptions="Center"
                                            TextColor="{AppThemeBinding Dark=White,Light=Black}" 
                                                        FontSize="19"
                                                        Text="{Binding BaseVM.SongListeningStreak.Count  }"/>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
            </VerticalStackLayout>
            <Grid Grid.Column="1" >
                <Border Opacity="0.01" ZIndex="1" x:Name="BorderUnderImageDomm"
                                            BackgroundColor="{Binding BaseVM.SelectedSecondDomColor}">

                </Border>
                <Image VerticalOptions="Start"
                                        HeightRequest="250"
                                        WidthRequest="250" Opacity="0.8"
                                      
                                        Source="{Binding BaseVM.SelectedSong.CoverImagePath}"/>

            </Grid>
        </Grid>




        <ScrollView Grid.Row="1" x:Name="LeftView" IsVisible="False">
            <VerticalStackLayout Spacing="10" Padding="15">

                <VerticalStackLayout.GestureRecognizers>
                    <DropGestureRecognizer
                        AllowDrop="True"
                        DragOver="SidePage_DragOver"
                        Drop="SidePage_Drop"
                        x:Name="SidePage" />
                </VerticalStackLayout.GestureRecognizers>

                <syncf:SfExpander x:Name="TopExpanderView" Expanded="TopExpanderView_Expanded"
                                  Collapsed="TopExpanderView_Collapsed">
                    <syncf:SfExpander.Header>
                        <Border StrokeShape="RoundRectangle 8" StrokeThickness="0" >
                            <VerticalStackLayout>
                                <HorizontalStackLayout HorizontalOptions="Center">

                                    <Button Text="{Binding BaseVM.CurrentPlayingSongView.Title}" BackgroundColor="Transparent"
                                        Command="{Binding BaseVM.PlayPauseToggleCommand}"
                                        />
                                </HorizontalStackLayout>
                                <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                                    <Label Grid.Column="0" 
                                           TextColor="DarkSlateBlue"
                                           Text="{Binding BaseVM.CurrentTrackPositionPercentage, StringFormat='{0:n1}'}" />
                                    <Label Text="%"/>

                                </HorizontalStackLayout>

                            </VerticalStackLayout>
                        </Border>
                    </syncf:SfExpander.Header>

                    <syncf:SfExpander.Content>
                        <VerticalStackLayout>

                            <Grid
                   x:Name="SecondA"
                   Grid.Row="1"
                   ColumnDefinitions="auto,auto"
                   ColumnSpacing="5" HorizontalOptions="Center"
                   VerticalOptions="Center">

                                <HorizontalStackLayout
                       x:Name="MediaBtns"
                       Grid.Row="0"
                       HeightRequest="50"
                       Spacing="10"
                       VerticalOptions="Center">
                                    <syncf:SfChip
                           x:Name="SkipPrev"
                           
                           
                           Background="Transparent"
                           Command="{Binding BaseVM.PreviousTrackCommand}"
                           ImageSource="skipprevious.png"
                           StyleClass="MediaBtnChip" />
                                    <syncf:SfChip
                           x:Name="PlayPauseBtn"
                           
                           
                           Background="Transparent"
                           Command="{Binding BaseVM.PlayPauseToggleCommand}"
                           ImageSource="play.png"
                           StyleClass="MediaBtnChip">
                                        <syncf:SfChip.Triggers>
                                            <DataTrigger
                                   Binding="{Binding BaseVM.IsPlaying}"
                                   TargetType="syncf:SfChip"
                                   Value="true">
                                                <Setter Property="ImageSource" Value="pause.png" />
                                            </DataTrigger>

                                            <DataTrigger
                                   Binding="{Binding BaseVM.IsPlaying}"
                                   TargetType="syncf:SfChip"
                                   Value="false">
                                                <Setter Property="ImageSource" Value="play.png" />
                                            </DataTrigger>
                                        </syncf:SfChip.Triggers>
                                    </syncf:SfChip>
                                    <syncf:SfChip
                           x:Name="SkipNext"
                           
                           
                           Background="Transparent"
                           Command="{Binding BaseVM.NextTrackCommand}"
                           ImageSource="skipnext.png"
                           StyleClass="MediaBtnChip" />


                                </HorizontalStackLayout>

                                <Grid
                       Grid.Column="1"
                       ColumnDefinitions="auto,*,auto"
                       ColumnSpacing="10"
                       VerticalOptions="Center">
                                </Grid>
                                <HorizontalStackLayout Grid.Column="2" VerticalOptions="Center">
                                    <syncf:SfChip
                           Background="Transparent"
                           Command="{Binding BaseVM.ToggleShuffleCommand}"
                           ImageSource="shuffle.png"
                           StyleClass="MediaBtnChip">
                                        <syncf:SfChip.Triggers>
                                            <DataTrigger
                                   Binding="{Binding BaseVM.IsShuffleActive}"
                                   TargetType="syncf:SfChip"
                                   Value="True">
                                                <Setter Property="Stroke" Value="DarkSlateBlue" />


                                            </DataTrigger>
                                        </syncf:SfChip.Triggers>
                                    </syncf:SfChip>


                                </HorizontalStackLayout>



                            </Grid>
                            <Grid ColumnDefinitions="180" HorizontalOptions="Center">
                                <FlyoutBase.ContextFlyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem Text="View"
                                                 CommandParameter="{Binding BaseVM.CurrentPlayingSongView}"
                                                 Clicked="ViewSongMFI_Clicked"
                                                 x:Name="ViewSongMFI"/>

                                    </MenuFlyout>
                                </FlyoutBase.ContextFlyout>

                                <Border BackgroundColor="#2C2C2C" VerticalOptions="End" 
             StrokeShape="RoundRectangle 5,5,0,0" Padding="5,5,5,0">

                                    <VerticalStackLayout >
                                        <VerticalStackLayout.Resources>
                                            <Style TargetType="Label">
                                                <Setter Property="TextColor" Value="#999999"/>
                                            </Style>
                                        </VerticalStackLayout.Resources>
                                        <Label Text="{Binding BaseVM.CurrentPlayingSongView.Title}"/>
                                        <Label Text="{Binding BaseVM.CurrentPlayingSongView.DurationInSeconds, Converter={converters:DurationConverterFromMsToTimeSpan}}"/>
                                    </VerticalStackLayout>

                                </Border>
                            </Grid>

                        </VerticalStackLayout>
                    </syncf:SfExpander.Content>

                </syncf:SfExpander>

                <VerticalStackLayout x:Name="RestOfLeftUI">

                    <!-- Cover Art and Main Info -->
                    <Border StrokeShape="RoundRectangle 8" StrokeThickness="0"  HorizontalOptions="Center">
                        <ImageButton
                        
                        HeightRequest="200"
                        x:Name="ViewSongDetails"
                        Clicked="ViewSongDetails_Clicked"
                        WidthRequest="200"
                        Aspect="AspectFill" Source="{Binding BaseVM.SelectedSong.CoverImagePath}"/>
                    </Border>

                    <syncf:SfEffectsView
                    TouchUp="ViewSongDetails_Clicked">


                        <Label Text="{Binding BaseVM.SelectedSong.Title}" 
                       
                       FontSize="38" FontAttributes="Bold" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>
                    </syncf:SfEffectsView>


                    <syncf:SfChip
                    TextColor="{AppThemeBinding Dark=White,Light=Black}"
                    Clicked="ViewArtist_Clicked"
                    x:Name="ViewArtist" StrokeThickness="0.4"
                    CommandParameter="{Binding BaseVM.SelectedSong}"
                    Text="{Binding BaseVM.SelectedSong.OtherArtistsName}" FontSize="20" HorizontalOptions="Center" HorizontalTextAlignment="Center" Margin="0,-5,0,10"/>

                    <Label
                    TextColor="{AppThemeBinding Dark=White,Light=Black}"
                 FontAttributes="Italic"
                 x:Name="ViewAlbum"
                 LineBreakMode="TailTruncation"
                    Text="{Binding BaseVM.SelectedSong.AlbumName}" FontSize="14" HorizontalOptions="Center" 
                 HorizontalTextAlignment="Center" Margin="0,-5,0,10"/>

                    <!-- Quick Actions -->
                    <syncf:SfChip Command="{Binding BaseVM.ToggleFavSongCommand}" 
                        ShowIcon="True" 
                        CommandParameter="{Binding BaseVM.SelectedSong}"
                              ImageSize="50"
                              WidthRequest="65"
                              StrokeThickness="0"
                        >
                        <syncf:SfChip.Triggers>
                            <DataTrigger Binding="{Binding BaseVM.SelectedSong.IsFavorite}"
                                     Value="True" TargetType="syncf:SfChip">
                                <Setter Property="BackgroundColor" Value="DarkSlateBlue"/>
                                <Setter Property="ImageSource" Value="heart.png"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding BaseVM.SelectedSong.IsFavorite}"
                                     Value="False" TargetType="syncf:SfChip">
                                <Setter Property="ImageSource" Value="heart.png"/>
                                <Setter Property="BackgroundColor" Value="Transparent"/>
                            </DataTrigger>
                        </syncf:SfChip.Triggers>
                    </syncf:SfChip>

                    <!-- Tags Section -->

                    <!-- User Note Section -->
                    <Label Text="{Binding BaseVM.SelectedSong.TrackNumber, 
                        StringFormat='# : {0}'}" 
                           Style="{StaticResource SectionHeader}"/>
                    <Label Text="{Binding BaseVM.SelectedSong.ReleaseYear, StringFormat='Release Year : {0}'}" Style="{StaticResource SectionHeader}"/>
                    <Label 
                        Text="{Binding BaseVM.SelectedSong.DateCreated, 
                        StringFormat='Created on : {0: ddd, MM yyy - hh:mm}',Converter={StaticResource DateTimeConverter}}" 
                        Style="{StaticResource SectionHeader}"/>
                    <Label Text="{Binding BaseVM.SelectedSong.PlayCount, StringFormat='Number of Dimms : {0}'}" Style="{StaticResource SectionHeader}"/>
                    <Button 
                    Text="Delete"
                        CommandParameter="{Binding BaseVM.SelectedSong}" HorizontalOptions="Start"/>

                    <!-- File Properties -->
                    <Label Text="File Properties" Style="{StaticResource SectionHeader}"/>
                    <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="5">
                        <Label Grid.Row="0" Grid.Column="0" Text="Path:" Style="{StaticResource FieldLabel}"/>

                        <syncf:SfEffectsView Grid.Row="0" Grid.Column="1" x:Name="ViewFileFolder"
                                         TouchDown="ViewFileFolder_TouchDown">
                            <Label Grid.Row="0" Grid.Column="1" Text="{Binding BaseVM.SelectedSong.FilePath}" LineBreakMode="TailTruncation"/>
                        </syncf:SfEffectsView>
                        <Label Grid.Row="1" Grid.Column="0" Text="Size:" Style="{StaticResource SectionHeader}"/>
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding BaseVM.SelectedSong.FileSize, Converter={StaticResource FileSizeConverter}}"/>

                        <Label Grid.Row="2" Grid.Column="0" Text="Format:" Style="{StaticResource SectionHeader}"/>
                        <Label Grid.Row="2" Grid.Column="1" Text="{Binding BaseVM.SelectedSong.FileFormat, StringFormat='{0}'}">
                            <!--<Label.BindingContext>
                            <MultiBinding>
                                <Binding Path="SelectedSong.FileFormat"/>
                                <Binding Path="SelectedSong.BitRate"/>
                            </MultiBinding>
                        </Label.BindingContext>-->
                        </Label>

                        <Label Grid.Row="3" Grid.Column="0" Text="Date Added:" Style="{StaticResource FieldLabel}"/>
                        <Label Grid.Row="3" Grid.Column="1" Text="{Binding BaseVM.SelectedSong.DateCreated, Converter={StaticResource DateTimeConverter}}"/>
                    </Grid>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <Grid Grid.Row="1" >
            <Grid x:Name="ArtistAlbumView" 
                  IsVisible="False"
                  RowDefinitions="auto,*" >

                <VerticalStackLayout Grid.Row="0">
                    <Label Text="DD"/>
                </VerticalStackLayout>
                <dx:DXCollectionView x:Name="SongsColView" Margin="5"
                                     ItemSpanCount="3" ItemSpanSpacing="5"
                                 Grid.Row="1"   ItemTemplate="{StaticResource GridOfFour}"
                                    ItemsSource="{Binding BaseVM.SearchResults}">

                </dx:DXCollectionView>

            </Grid>

            <syncf:SfTabView x:Name="SongView" 
                             EnableSwiping="True"
                             TabBarPlacement="Bottom" IsVisible="True">

                <syncf:SfTabItem Header="Overview">
                    <syncf:SfTabItem.Content>
                        <Grid RowDefinitions="auto,*">


                            <ScrollView 
                                
                                Grid.ColumnSpan="2" Grid.Row="1"
                                  Margin="10">

                                <Grid >
                                    <VerticalStackLayout Spacing="10">
                                        <Grid ColumnDefinitions="*,*">
                                            <Border Padding="5" Grid.Column="0">

                                                <VerticalStackLayout >


                                                    <HorizontalStackLayout Spacing="10">
                                                        <VerticalStackLayout>

                                                            <Label Text="{Binding BaseVM.SongBingeFactor.Name}"/>
                                                            <Label Text="{Binding BaseVM.SongBingeFactor.Count, StringFormat='{0}'
,Converter={converters:NumberToShortStringConverter}}"/>
                                                        </VerticalStackLayout>

                                                        <VerticalStackLayout>

                                                            <Label Text="{Binding BaseVM.SongAverageListenThrough.Name}"/>
                                                            <Label 
   Text="{Binding BaseVM.SongAverageListenThrough.Value, StringFormat='{0:n2}%'}"/>

                                                        </VerticalStackLayout>

                                                    </HorizontalStackLayout>




                                                </VerticalStackLayout>

                                            </Border>
                                            <Border Grid.Column="1" Padding="5">

                                                <VerticalStackLayout >
                                                    <Label Text="Length"
                                                            FontSize="Medium" FontAttributes="Bold"/>
                                                    <Label 
                                                   Text="{Binding BaseVM.SelectedSong.DurationInSeconds, StringFormat='{0}'
                                                ,Converter={converters:DurationConverterFromMsToTimeSpan}}"/>

                                                    <Label Text="Lyrics"
                                                   
                                                            FontSize="Medium" FontAttributes="Bold"/>
                                                    <HorizontalStackLayout>

                                                        <Label
                                                            Text="{Binding BaseVM.SelectedSong.SyncLyrics.Length,
                                                StringFormat='{0} lines'}"/>
                                                        <ImageButton 
                                                            HeightRequest="30"
                                                            x:Name="ViewLyricsIndex"
                                                            Source="roundaltarrowright.png"/>
                                                    </HorizontalStackLayout>



                                                </VerticalStackLayout>

                                            </Border>
                                        </Grid>

                                        <BoxView HeightRequest="2" Color="DarkSlateBlue"/>
                                        <Label FontSize="26" Text="Album"/>
                                        <Grid ColumnDefinitions="*">

                                            <ScrollView>
                                                <HorizontalStackLayout>


                                                    <syncf:SfCircularChart
                                                          HeightRequest="500"
                                                        WidthRequest="500">
                                                        <syncf:SfCircularChart.Title>
                                                            <Label Text="Total plays distribution" HorizontalTextAlignment="Center"/>

                                                        </syncf:SfCircularChart.Title>
                                                        <syncf:DoughnutSeries
                                                                ExplodeOnTouch="True"
                                                                ShowDataLabels="True"
                                                                XBindingPath="Name"
                                                                YBindingPath="Count"
                                                                EnableAnimation="True"
                                                                
                                                                EnableTooltip="True"
                                                                TooltipTemplate="{StaticResource tooltipTemplateTwo}"
                                                                ItemsSource="{Binding BaseVM.SongPlayTypeDistribution}">

                                                        </syncf:DoughnutSeries>
                                                    </syncf:SfCircularChart>

                                                    <syncf:SfPolarChart
                                                              HeightRequest="500"
WidthRequest="500"
                                                    GridLineType="Circle">

                                                        <chart:SfPolarChart.Title>
                                                            <Label Text="Is this a morning, afternoon, or late-night song for me?" HorizontalTextAlignment="Center"/>

                                                        </chart:SfPolarChart.Title>
                                                        <chart:SfPolarChart.PrimaryAxis>
                                                            <chart:CategoryAxis>
                                                            </chart:CategoryAxis>
                                                        </chart:SfPolarChart.PrimaryAxis>

                                                        <chart:SfPolarChart.SecondaryAxis>
                                                            <chart:NumericalAxis >
                                                            </chart:NumericalAxis>
                                                        </chart:SfPolarChart.SecondaryAxis>
                                                        <syncf:PolarLineSeries ItemsSource="{Binding BaseVM.SongPlayDistributionByHour}"
                                                   ShowDataLabels="True" 
                                                                           
                                                                           TooltipTemplate="{StaticResource tooltipTemplateTwo}"
                                                                           EnableAnimation="True"
                                                                           XBindingPath="Name" EnableTooltip="True"
                                                                         YBindingPath="Count"
                                                                           />
                                                    </syncf:SfPolarChart>

                                                </HorizontalStackLayout>
                                            </ScrollView>

                                        </Grid>
                                    </VerticalStackLayout>
                                </Grid>

                            </ScrollView>
                        </Grid>
                    </syncf:SfTabItem.Content>
                </syncf:SfTabItem>

                <!-- TAB 0: METADATA EDITOR -->
                <syncf:SfTabItem Header="Edit Metadata">
                    <syncf:SfTabItem.Content>
                        <ScrollView>
                            <Grid >
                                <Image Source="{Binding BaseVM.SelectedSong.CoverImagePath}" Opacity="0.18"/>

                                <VerticalStackLayout Padding="15" Spacing="10">
                                    <Label Text="Edit the core information for this song. These changes will be saved directly to the audio file's tags."/>

                                    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,*" RowSpacing="10" ColumnDefinitions="Auto,*">
                                        <Label Grid.Row="0" Grid.Column="0" Text="Title" Style="{StaticResource FieldLabel}"/>
                                        <Entry Grid.Row="0" Grid.Column="1" Text="{Binding BaseVM.SelectedSong.Title}"/>

                                        <Label Grid.Row="1" Grid.Column="0" Text="Artist(s)" Style="{StaticResource FieldLabel}"/>
                                        <Entry Grid.Row="1" Grid.Column="1" Text="{Binding BaseVM.SelectedSong.OtherArtistsName}" Placeholder="e.g. Artist A, Artist B"/>

                                        <Label Grid.Row="2" Grid.Column="0" Text="Album" Style="{StaticResource FieldLabel}"/>
                                        <Entry Grid.Row="2" Grid.Column="1" Text="{Binding BaseVM.SelectedSong.AlbumName}"/>


                                        <Label Grid.Row="4" Grid.Column="0" Text="Genre" Style="{StaticResource FieldLabel}"/>
                                        <Entry Grid.Row="4" Grid.Column="1" Text="{Binding BaseVM.SelectedSong.GenreName}"/>

                                        <Label Grid.Row="5" Grid.Column="0" Text="Year" Style="{StaticResource FieldLabel}"/>
                                        <Entry Grid.Row="5" Grid.Column="1" Text="{Binding BaseVM.SelectedSong.ReleaseYear}" Keyboard="Numeric"/>

                                        <Label Grid.Row="6" Grid.Column="0" Text="Tags" VerticalOptions="Start" Style="{StaticResource FieldLabel}"/>
                                        <VerticalStackLayout Grid.Row="6" Grid.Column="1" Spacing="10">
                                            <syncf:SfChipGroup ItemsSource="{Binding BaseVM.SelectedSong.UserNotes}">

                                                <syncf:SfChipGroup.ItemTemplate>
                                                    <DataTemplate x:DataType="models:UserNoteModelView">
                                                        <Label Margin="10" Text="{Binding UserMessageText}">
                                                            <!--<FlyoutBase.ContextFlyout>
                                                                    <MenuFlyout>
                                                                        <MenuFlyoutItem Text="Edit"/>
                                                                        <MenuFlyoutItem IsDestructive="True"
                            Text="Delete"/>
                                                                    </MenuFlyout>
                                                                </FlyoutBase.ContextFlyout>-->
                                                        </Label>
                                                    </DataTemplate>
                                                </syncf:SfChipGroup.ItemTemplate>
                                            </syncf:SfChipGroup>
                                            <HorizontalStackLayout IsVisible="False">
                                                <Entry Placeholder="Add a new tag..." Text="{Binding BaseVM.CurrentNoteToSave}" HorizontalOptions="Fill"/>

                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>
                                    </Grid>

                                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="10" Margin="0,20,0,0">
                                        <Button Text="Reset" />
                                        <Button Text="Save Changes"  FontAttributes="Bold"/>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </Grid>
                        </ScrollView>
                    </syncf:SfTabItem.Content>
                </syncf:SfTabItem>

                <!-- TAB 1: LYRICS MANAGEMENT -->
                <syncf:SfTabItem Header="Lyrics" IsVisible="Hidden">
                    <syncf:SfTabItem.Content>
                        <Grid RowDefinitions="Auto, *">
                            <VerticalStackLayout>
                                <Label Text="{Binding BaseVM.SelectedSong.EmbeddedSync.Count,StringFormat='Sync Lyrics Count: {0}'}"/>
                            </VerticalStackLayout>
                            <Grid Grid.Row="1"  ColumnDefinitions="*">

                                <CollectionView Grid.Column="0" 
                                            ItemsSource="{Binding BaseVM.SelectedSong.EmbeddedSync}" >
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate x:DataType="models:LyricPhraseModelView">
                                            <Grid ColumnDefinitions="0.3*,*,0.3*">
                                                <Border Grid.Column="0" StrokeThickness="1">
                                                    <Label Text="{Binding TimeStampMs}"/>
                                                </Border>

                                                <Border Grid.Column="1">

                                                    <Label 
                                                    TextColor="{AppThemeBinding Dark=White,Light=Black}"
                                                    Text="{Binding Text}"/>
                                                </Border>

                                                <HorizontalStackLayout Grid.Column="2">
                                                    <ImageButton Source="edit.png"/>
                                                </HorizontalStackLayout>
                                            </Grid>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>

                            </Grid>
                        </Grid>
                    </syncf:SfTabItem.Content>
                </syncf:SfTabItem>

                <!-- TAB 2: MANUAL LYRICS SYNCER -->
                <syncf:SfTabItem Header="Lyrics search">
                    <syncf:SfTabItem.Content>
                        <VerticalStackLayout Grid.Row="0" IsVisible="True" Padding="15">
                            <Label Text="Find Lyrics Online" Style="{StaticResource SectionHeader}"/>
                            <VerticalStackLayout HorizontalOptions="Start" WidthRequest="300" Spacing="10">
                                <Entry Placeholder="Song Title" Text="{Binding LyricsTrackNameSearch}" HorizontalOptions="Fill"/>
                                <Entry Placeholder="Artist Name" Text="{Binding LyricsArtistNameSearch}" HorizontalOptions="Fill"/>
                                <Entry Placeholder="Album Name" Text="{Binding LyricsAlbumNameSearch}" HorizontalOptions="Fill"/>
                                <Button Text="Search" Command="{Binding BaseVM.SearchLyricsCommand}"/>
                            </VerticalStackLayout>
                            <ActivityIndicator IsRunning="{Binding IsLyricsSearchBusy}"/>
                            <CollectionView ItemsSource="{Binding LyricsSearchResults}" EmptyView="No results found.">
                                <CollectionView.ItemsLayout>
                                    <GridItemsLayout Span="3"
                    Orientation="Vertical"                HorizontalItemSpacing="10"
                                    VerticalItemSpacing="10"
                                    />
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="models:LrcLibSearchResult">
                                        <Border>
                                            <VerticalStackLayout>
                                                <Label Text="{Binding Name}"/>
                                                <Label Text="{Binding ArtistName}"/>
                                                <Label Text="{Binding Duration,Converter={converters:DurationConverterFromMsToTimeSpan}}"/>
                                                <Label Text="{Binding Instrumental,StringFormat='Is Instrumental: {0}'}"/>
                                                <Label Text="{Binding SyncedLyrics}"/>
                                                <BoxView HeightRequest="2" Color="DarkSlateBlue"/>
                                            </VerticalStackLayout>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>

                    </syncf:SfTabItem.Content>
                </syncf:SfTabItem>

                <!-- Tab 3: Cover Image Management -->
                <syncf:SfTabItem Header="Cover Image">
                    <syncf:SfTabItem.Content>
                        <Grid RowDefinitions="auto,*">
                            <Image Source="{Binding BaseVM.SelectedSong.CoverImagePath}"
                                   Opacity="0.2" Aspect="AspectFit"/>
                            <VerticalStackLayout 
                                Spacing="10"
                                Grid.Row="0">

                                <Editor 
                                            Text="{Binding BaseVM.SelectedSong.Title}"/>

                                <Editor 
                                            Text="{Binding BaseVM.SelectedSong.ArtistName}"/>

                                <Editor 
                                            Text="{Binding BaseVM.SelectedSong.AlbumName}"/>


                                <HorizontalStackLayout>
                                    <syncf:SfChip
                                        ImageSource="searchh.png"
                                        Clicked="SearchSongOnline_Clicked" 
                                        
                                        x:Name="SearchSongOnline"/>
                                    <syncf:SfChip ImageSource="folderopen.png"
              Command="{Binding BaseVM.PickSongImageFromFolderCommand}"
              x:Name="PickSongImageFromFolder"/>
                                </HorizontalStackLayout>

                                <HorizontalStackLayout Spacing="40">
                                    <VerticalStackLayout>
                                        <Label Text="Current Image" FontSize="Header"/>
                                        <Image HeightRequest="400"
                                               WidthRequest="400"
                                               Source="{Binding BaseVM.SelectedSong.CoverImagePath}"/>
                                    </VerticalStackLayout>
                                    <VerticalStackLayout>
                                        <Label Text="Current Image" FontSize="Header"/>
                                        <Image HeightRequest="400"
                                               WidthRequest="400"
                                               Source="{Binding BaseVM.SelectedSongLastFMData.Images[5].Url}"/>
                                    </VerticalStackLayout>
                                </HorizontalStackLayout>

                            </VerticalStackLayout>

                            <CollectionView ItemsSource="{Binding BaseVM.SelectedSongLastFMData.Images}" Grid.Row="1">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="lastfmmodels:Image">
                                        <Border StrokeShape="RoundRectangle 8" StrokeThickness="0" Margin="5">
                                            <VerticalStackLayout>

                                                <Image Source="{Binding Url}" Aspect="AspectFill" HeightRequest="200" WidthRequest="200"/>

                                                <HorizontalStackLayout>

                                                    <syncf:SfChip ImageSource="savea.png"
                                                              x:Name="SaveImageFromLastFM"
                                                              Clicked="SaveImageFromLastFM_Clicked"
                                                              CommandParameter="{Binding .}"/>

                                                </HorizontalStackLayout>
                                            </VerticalStackLayout>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </Grid>

                    </syncf:SfTabItem.Content>
                </syncf:SfTabItem>


            </syncf:SfTabView>
        </Grid>
    </Grid>

        </dx:DXStackLayout>
    </dx:DXScrollView>
</ContentPage>
