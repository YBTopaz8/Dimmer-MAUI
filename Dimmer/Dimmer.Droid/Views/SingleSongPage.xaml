<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Dimmer.Views.SingleSongPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:andr="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
    xmlns:chart="http://schemas.syncfusion.com/maui/toolkit"
    xmlns:converters="clr-namespace:Dimmer.Utilities.TypeConverters;assembly=Dimmer"
    xmlns:customViewParts="clr-namespace:Dimmer.Views.CustomViewsParts"
    xmlns:dx="http://schemas.devexpress.com/maui"
    xmlns:lastfmmodels="clr-namespace:Hqub.Lastfm.Entities;assembly=Hqub.Lastfm"
    xmlns:localTransitions="clr-namespace:Dimmer.Utils.AnimsStatics"
    xmlns:models="clr-namespace:Dimmer.Data.ModelView;assembly=Dimmer"
    xmlns:navDrawer="clr-namespace:Syncfusion.Maui.Toolkit.NavigationDrawer;assembly=Syncfusion.Maui.Toolkit"
    xmlns:progressBar="clr-namespace:Syncfusion.Maui.Toolkit;assembly=Syncfusion.Maui.Toolkit"
    xmlns:syncf="http://schemas.syncfusion.com/maui/toolkit"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:uranium="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
    xmlns:vm="clr-namespace:Dimmer.ViewModels"
    Title="SingleSongPage"
    x:DataType="vm:BaseViewModelAnd"
    BackgroundColor="{AppThemeBinding Light=#F5F5F5,
                                      Dark=#1E1E1E}"
    Shell.NavBarIsVisible="False"
    Shell.TabBarIsVisible="False">



    <ContentPage.Resources>
        <converters:DurationConverterFromMsToTimeSpan x:Key="DurationConverter" />
        <converters:BytesToMegabytesConverter x:Key="FileSizeConverter" />
        <converters:BytesArrayToImageSource x:Key="BytesToImageConverter" />
        <converters:BoolToInverseConverter x:Key="BoolToInverse" />
        <converters:IndexToVisibilityConverter x:Key="IndexToVisibilityConverter" />
        <converters:DateTimeToLocalDateConverter x:Key="DateTimeConverter" />
        <converters:DateTimeToLocalTimeConverter x:Key="DateTimeToTimeConverter" />
        <converters:BoolToYesNoConverter x:Key="BoolToYesNo" />
        <converters:VolumeConverter x:Key="VolConverter" />
        <Style x:Key="SectionHeader" TargetType="Label">
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>
        <Style x:Key="FieldLabel" TargetType="Label">
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>



        <DataTemplate x:Key="GridOfFour" x:DataType="models:SongModelView">
            <Grid ColumnDefinitions="*" HorizontalOptions="Center">
                <FlyoutBase.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem
                            x:Name="ViewSongMFI"
                            Clicked="ViewSongMFI_Clicked"
                            CommandParameter="{Binding .}"
                            Text="View" />

                    </MenuFlyout>
                </FlyoutBase.ContextFlyout>
                <Grid.GestureRecognizers>
                    <PointerGestureRecognizer
                        x:Name="SongViewPointer"
                        PointerEntered="SongViewPointer_PointerEntered"
                        PointerExited="SongViewPointer_PointerExited" />
                </Grid.GestureRecognizers>

                <HorizontalStackLayout HorizontalOptions="End" VerticalOptions="Start">
                    <Label Text="{Binding RankInArtist}" />
                </HorizontalStackLayout>

                <Image
                    HorizontalOptions="Start"
                    Opacity="0.7"
                    Source="{Binding CoverImagePath}">
                    <Image.GestureRecognizers>
                        <DragGestureRecognizer
                            x:Name="SongDrag"
                            CanDrag="True"
                            DragStarting="SongDrag_DragStarting"
                            DragStartingCommandParameter="{Binding .}" />
                    </Image.GestureRecognizers>
                </Image>
                <Border
                    Padding="5,5,5,0"
                    BackgroundColor="#2C2C2C"
                    StrokeShape="RoundRectangle 5,5,0,0"
                    VerticalOptions="End">

                    <VerticalStackLayout x:Name="DetailsView">
                        <VerticalStackLayout.Resources>
                            <Style TargetType="Label">
                                <Setter Property="TextColor" Value="#999999" />
                            </Style>
                        </VerticalStackLayout.Resources>
                        <Label
                            FontSize="Title"
                            Text="{Binding Title}"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}" />
                        <Label Text="{Binding DurationInSeconds, Converter={converters:DurationConverterFromMsToTimeSpan}}" />
                        <Label
                            FontAttributes="Bold"
                            HorizontalTextAlignment="End"
                            Text="{Binding PlayCompletedCount, StringFormat='{0} Dimms'}"
                            TextColor="SlateBlue">
                            <Label.Triggers>
                                <DataTrigger
                                    Binding="{Binding PlayCompletedCount}"
                                    TargetType="Label"
                                    Value="0">
                                    <Setter Property="FontAttributes" Value="None" />
                                    <Setter Property="TextColor" Value="White" />
                                    <Setter Property="Text" Value="0 Dimm" />
                                </DataTrigger>
                                <DataTrigger
                                    Binding="{Binding PlayCompletedCount}"
                                    TargetType="Label"
                                    Value="1">
                                    <Setter Property="FontAttributes" Value="Italic" />
                                    <Setter Property="TextColor" Value="MediumSlateBlue" />
                                    <Setter Property="Text" Value="1 Dimm" />
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>
                    </VerticalStackLayout>

                </Border>
            </Grid>


        </DataTemplate>

        <ResourceDictionary>
            <Style TargetType="syncf:SfChip">
                <Setter Property="HeightRequest" Value="60" />
            </Style>
        </ResourceDictionary>



        <DataTemplate x:Key="MultiColumnsView">
            <Grid ColumnDefinitions="0.4,*,*,*,*,*,*">
                <HorizontalStackLayout Grid.Column="0" />
                <HorizontalStackLayout Grid.Column="1" />
                <HorizontalStackLayout Grid.Column="2" />
                <HorizontalStackLayout Grid.Column="3" />
                <HorizontalStackLayout Grid.Column="4" />
                <HorizontalStackLayout Grid.Column="5" />

            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="ListeninClickTooltipTemplate" x:DataType="syncf:TooltipInfo">
            <HorizontalStackLayout>
                <Label
                    FontAttributes="Bold"
                    FontSize="21"
                    HorizontalOptions="Center"
                    Text="{Binding Item.Value, StringFormat='{0} Dimms '}"
                    TextColor="DarkSlateBlue"
                    VerticalOptions="Center" />
                <Label
                    FontAttributes="Bold"
                    FontSize="19"
                    HorizontalOptions="Center"
                    Text="{Binding Item.Label, StringFormat=' at {0}'}"
                    TextColor="{AppThemeBinding Dark=White,
                                                Light=Black}"
                    VerticalOptions="Center" />




            </HorizontalStackLayout>
        </DataTemplate>
    </ContentPage.Resources>

    <Grid
        x:Name="SingleSongView"
        BackgroundColor="Transparent"
        RowDefinitions="auto,*">

        <Grid
            Grid.Row="0"
            ColumnDefinitions="auto,*"
            VerticalOptions="Start">
            <Border
                x:Name="BorderNextToImageDomm"
                Grid.Row="1"
                BackgroundColor="{Binding SelectedSecondDomColor}"
                IsVisible="True"
                Opacity="0.5"
                ZIndex="1" />

            <VerticalStackLayout
                Grid.Column="1"
                Padding="20"
                BackgroundColor="Transparent"
                Spacing="25"
                ZIndex="0">
                <HorizontalStackLayout Spacing="20">
                    <dx:Chip
                        x:Name="ToggleViewArtist"
                        Padding="10"
                        BackgroundColor="Transparent"
                        BorderThickness="1"
                        FontSize="19"
                        HorizontalOptions="Start"
                        Tap="ToggleViewArtist_Clicked"
                        Text="{Binding SelectedSong.OtherArtistsName}"
                        TextColor="{AppThemeBinding Dark=White,
                                                    Light=Black}" />
                    <Button
                        x:Name="ToggleViewAlbum"
                        Padding="10"
                        BackgroundColor="Transparent"
                        BorderWidth="1"
                        Clicked="ToggleViewAlbum_Clicked"
                        FontSize="12"
                        HorizontalOptions="Start"
                        Text="{Binding SelectedSong.AlbumName}"
                        TextColor="{AppThemeBinding Dark=White,
                                                    Light=Black}" />

                    <Image
                        HeightRequest="60"
                        IsVisible="{Binding SelectedSong.SyncLyrics.Length, Converter={converters:CollectionSizeToVisibility}}"
                        Source="lyrics.png" />

                </HorizontalStackLayout>
                <dx:Chip
                    BackgroundColor="Transparent"
                    BorderThickness="1"
                    FontAttributes="Bold"
                    FontSize="29"
                    HorizontalOptions="Start"
                    Text="{Binding SelectedSong.Title}"
                    TextColor="{AppThemeBinding Dark=White,
                                                Light=Black}" />
                <HorizontalStackLayout Spacing="20">
                    <dx:DXButton
                        BorderColor="{Binding SelectedSecondDomColor}"
                        BorderThickness="2"
                        Clicked="PlaySongGestRec_Tapped"
                        HeightRequest="60"
                        Icon="play.png"
                        WidthRequest="60">
                        <dx:DXButton.Triggers>
                            <DataTrigger
                                Binding="{Binding IsPlaying}"
                                TargetType="dx:DXButton"
                                Value="true">
                                <Setter Property="Icon" Value="pause.png" />
                            </DataTrigger>

                            <DataTrigger
                                Binding="{Binding IsPlaying}"
                                TargetType="dx:DXButton"
                                Value="false">
                                <Setter Property="Icon" Value="play.png" />
                            </DataTrigger>
                        </dx:DXButton.Triggers>
                    </dx:DXButton>
                    <Button
                        BackgroundColor="Transparent"
                        BorderColor="{Binding SelectedSecondDomColor}"
                        BorderWidth="0.7"
                        Command="{Binding AddFavoriteRatingToSongCommand}"
                        CommandParameter="{Binding SelectedSong}"
                        HeightRequest="65"
                        ImageSource="heart.png"
                        ToolTipProperties.Text="Save Has Favorite"
                        WidthRequest="65">
                        <Button.Triggers>
                            <DataTrigger
                                Binding="{Binding SelectedSong.IsFavorite}"
                                TargetType="Button"
                                Value="False">
                                <Setter Property="ImageSource" Value="heartbroken.png" />

                            </DataTrigger>
                            <DataTrigger
                                Binding="{Binding SelectedSong.IsFavorite}"
                                TargetType="Button"
                                Value="True">
                                <Setter Property="ImageSource" Value="heartlock.png" />


                            </DataTrigger>
                        </Button.Triggers>
                    </Button>

                    <VerticalStackLayout VerticalOptions="Center">
                        <Label
                            FontSize="21"
                            Text="Dimms"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}" />
                        <Label
                            FontSize="19"
                            HorizontalOptions="Center"
                            Text="{Binding SelectedSong.PlayCompletedCount}"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}" />
                    </VerticalStackLayout>

                    <VerticalStackLayout VerticalOptions="Center">

                        <Label
                            FontSize="21"
                            Text="Track Number"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}" />
                        <Label
                            FontSize="19"
                            HorizontalOptions="Center"
                            Text="{Binding SelectedSong.TrackNumber}"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}" />

                    </VerticalStackLayout>

                    <VerticalStackLayout VerticalOptions="Center">

                        <Label
                            FontSize="21"
                            Text="Disc Number"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}"
                            ToolTipProperties.Text="Album Disc Number" />
                        <Label
                            FontSize="19"
                            HorizontalOptions="Center"
                            Text="{Binding SelectedSong.DiscNumber}"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}" />
                    </VerticalStackLayout>

                    <VerticalStackLayout VerticalOptions="Center">

                        <Label
                            FontSize="21"
                            Text="Global Rank"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}" />
                        <Label
                            FontSize="19"
                            HorizontalOptions="Center"
                            Text="{Binding SelectedSong.GlobalRank}"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}" />
                    </VerticalStackLayout>

                    <Button
                        Command="{Binding LoadStatsForSelectedSongCommand}"
                        CommandParameter="{Binding SelectedSong}"
                        Text="Reload" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Grid>




        <Grid Grid.Row="1">
            <Grid
                x:Name="ArtistAlbumView"
                IsVisible="False"
                RowDefinitions="auto,*">

                <VerticalStackLayout Grid.Row="0">
                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">

                        <Label
                            FontSize="Header"
                            HorizontalTextAlignment="Center"
                            IsVisible="True"
                            Text="{Binding SelectedSong.ArtistName}" />

                        <Label
                            HorizontalOptions="End"
                            Text="{Binding SearchResults.Count, StringFormat='{0} Songs'}"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>

                </VerticalStackLayout>
                <CollectionView
                    x:Name="SongsColView"
                    Grid.Row="1"
                    ItemTemplate="{StaticResource GridOfFour}"
                    ItemsSource="{Binding SearchResults}">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout
                            HorizontalItemSpacing="10"
                            Orientation="Vertical"
                            Span="6"
                            VerticalItemSpacing="10" />
                    </CollectionView.ItemsLayout>
                </CollectionView>

            </Grid>

            <syncf:SfTabView
                x:Name="SongTabView"
                BackgroundColor="Transparent"
                EnableSwiping="False"
                IsVisible="True"
                SelectionChanged="SongTabView_SelectionChanged"
                TabBarPlacement="Bottom">

                <syncf:SfTabItem Header="Overview">
                    <syncf:SfTabItem.Content>
                        <Grid RowDefinitions="auto,*">


                            <Grid
                                Grid.Row="1"
                                Grid.ColumnSpan="2"
                                Margin="10">
                                <Grid RowDefinitions="auto,*" RowSpacing="10">
                                    <Grid
                                        Grid.Row="0"
                                        ColumnDefinitions="*,*"
                                        ColumnSpacing="10">
                                        <Border
                                            Grid.Column="0"
                                            Padding="10"
                                            Stroke="{Binding CurrentPlaySongDominantColor}">

                                            <VerticalStackLayout>


                                                <HorizontalStackLayout Spacing="10">
                                                    <VerticalStackLayout>

                                                        <Label Text="{Binding SelectedSong.EddingtonNumber, StringFormat='Eddington Number : {0}'}" />
                                                        <Label Text="{Binding SelectedSong.PopularityScore, StringFormat='Popularity Score : {0}'}" />
                                                        <Label Text="{Binding SelectedSong.TrackNumber, StringFormat='Popularity Score : {0}'}" />
                                                    </VerticalStackLayout>

                                                    <VerticalStackLayout>

                                                        <Label Text="{Binding SongAverageListenThrough.Name}" />
                                                        <Label Text="{Binding SongAverageListenThrough.Value, StringFormat='{0:n2}%'}" />

                                                    </VerticalStackLayout>

                                                </HorizontalStackLayout>




                                            </VerticalStackLayout>

                                        </Border>
                                        <Border
                                            Grid.Column="1"
                                            Padding="10"
                                            Stroke="{Binding CurrentPlaySongDominantColor}"
                                            ToolTipProperties.Text="{Binding SelectedSong.SyncLyrics, StringFormat='Lyrics: {0}'}">

                                            <VerticalStackLayout>
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="Medium"
                                                    Text="Length" />
                                                <Label Text="{Binding SelectedSong.DurationInSeconds, StringFormat='{0}', Converter={converters:DurationConverterFromMsToTimeSpan}}" />

                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="Medium"
                                                    Text="Lyrics" />
                                                <HorizontalStackLayout>

                                                    <Label Text="{Binding SelectedSong.SyncLyrics.Length, StringFormat='{0} Xters'}" />
                                                    <ImageButton
                                                        x:Name="ViewLyricsIndex"
                                                        HeightRequest="30"
                                                        Source="roundaltarrowright.png" />
                                                </HorizontalStackLayout>



                                            </VerticalStackLayout>

                                        </Border>
                                    </Grid>

                                    <Grid Grid.Row="1" ColumnDefinitions="*,*">

                                        <CollectionView
                                            Grid.Column="0"
                                            HorizontalOptions="Start"
                                            ItemsSource="{Binding SelectedSong.PlayEvents}"
                                            WidthRequest="340">
                                            <CollectionView.ItemsLayout>
                                                <LinearItemsLayout ItemSpacing="10" Orientation="Vertical" />
                                            </CollectionView.ItemsLayout>
                                            <CollectionView.ItemTemplate>
                                                <DataTemplate x:DataType="models:DimmerPlayEventView">
                                                    <Border
                                                        Margin="10,10"
                                                        BackgroundColor="Transparent"
                                                        Stroke="DarkSlateBlue"
                                                        StrokeThickness="1">
                                                        <Border.Triggers>
                                                            <DataTrigger
                                                                Binding="{Binding PlayTypeStr}"
                                                                TargetType="Border"
                                                                Value="Play">
                                                                <Setter Property="Stroke" Value="DarkSlateBlue" />
                                                            </DataTrigger>
                                                            <DataTrigger
                                                                Binding="{Binding PlayTypeStr}"
                                                                TargetType="Border"
                                                                Value="Completed">
                                                                <Setter Property="Stroke" Value="ForestGreen" />
                                                            </DataTrigger>
                                                            <DataTrigger
                                                                Binding="{Binding PlayTypeStr}"
                                                                TargetType="Border"
                                                                Value="Skipped">
                                                                <Setter Property="Stroke" Value="LightCoral" />
                                                            </DataTrigger>


                                                            <DataTrigger
                                                                Binding="{Binding PlayTypeStr}"
                                                                TargetType="Border"
                                                                Value="Seeked">
                                                                <Setter Property="Stroke" Value="LightSteelBlue" />
                                                            </DataTrigger>

                                                            <DataTrigger
                                                                Binding="{Binding PlayTypeStr}"
                                                                TargetType="Border"
                                                                Value="Pause">
                                                                <Setter Property="Stroke" Value="RosyBrown" />
                                                            </DataTrigger>


                                                        </Border.Triggers>
                                                        <HorizontalStackLayout Padding="10" Spacing="10">
                                                            <Label Text="{Binding PlayTypeStr}" WidthRequest="80" />
                                                            <Label Text="{Binding DatePlayed, Converter={converters:DateTimeOffsetToLocalDateConverter}}" WidthRequest="180" />
                                                            <Label IsVisible="False" Text="{Binding PositionInSeconds, StringFormat='{0:n2}s'}">
                                                                <Label.Triggers>
                                                                    <DataTrigger
                                                                        Binding="{Binding PlayTypeStr}"
                                                                        TargetType="Label"
                                                                        Value="Seeked">
                                                                        <Setter Property="IsVisible" Value="True" />
                                                                    </DataTrigger>
                                                                    <DataTrigger
                                                                        Binding="{Binding PlayTypeStr}"
                                                                        TargetType="Label"
                                                                        Value="Pause">
                                                                        <Setter Property="IsVisible" Value="True" />
                                                                    </DataTrigger>
                                                                </Label.Triggers>
                                                            </Label>
                                                        </HorizontalStackLayout>
                                                    </Border>
                                                </DataTemplate>
                                            </CollectionView.ItemTemplate>
                                        </CollectionView>

                                        <VerticalStackLayout Grid.Column="1">
                                            <Label Text="Collection View Filters" />
                                            <CheckBox x:Name="ShowOnlyCompletedPlays" CheckedChanged="ShowOnlyCompletedPlays_CheckedChanged" />
                                            <CheckBox x:Name="ShowOnlySkippedPlays" CheckedChanged="ShowOnlySkippedPlays_CheckedChanged" />

                                        </VerticalStackLayout>

                                    </Grid>
                                </Grid>
                            </Grid>

                        </Grid>
                    </syncf:SfTabItem.Content>
                </syncf:SfTabItem>


                <syncf:SfTabItem Header="Edit Lyrics">
                    <syncf:SfTabItem.Content>
                        <Grid
                            Margin="5"
                            ColumnDefinitions="*,*"
                            ColumnSpacing="10">


                            <VerticalStackLayout Grid.Column="0" Spacing="10">

                                <HorizontalStackLayout Spacing="10">

                                    <Button
                                        x:Name="PasteFromClipBoard"
                                        BackgroundColor="Transparent"
                                        BorderWidth="1"
                                        Clicked="PasteFromClipBoard_Clicked"
                                        HeightRequest="40"
                                        ImageSource="clipboard.png"
                                        Text="Paste From Clipboard"
                                        ToolTipProperties.Text="Paste From Clipboard"
                                        VerticalOptions="Start">
                                        <Button.Behaviors>
                                            <toolkit:IconTintColorBehavior TintColor="DarkSlateBlue" />
                                        </Button.Behaviors>
                                    </Button>
                                    <Button
                                        x:Name="LoadFromTxtFile"
                                        BackgroundColor="Transparent"
                                        BorderWidth="1"
                                        Command="{Binding LoadPlainLyricsFromFileCommand}"
                                        HeightRequest="40"
                                        ImageSource="fileinfoa.png"
                                        Text="Load From Text File"
                                        VerticalOptions="Start">
                                        <Button.Behaviors>
                                            <toolkit:IconTintColorBehavior TintColor="DarkSlateBlue" />
                                        </Button.Behaviors>
                                    </Button>

                                </HorizontalStackLayout>
                                <Editor
                                    x:Name="PlainLyricsEditor"
                                    HeightRequest="400"
                                    Placeholder="Paste Plain Lyrics Here" />
                            </VerticalStackLayout>


                            <Grid
                                Grid.Column="1"
                                RowDefinitions="*,auto"
                                RowSpacing="10">

                                <CollectionView ItemsSource="{Binding LyricsInEditor}">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate x:DataType="models:LyricEditingLineViewModel">
                                            <Grid
                                                Margin="10"
                                                ColumnDefinitions="auto,*,auto,auto"
                                                ColumnSpacing="10">

                                                <Label Grid.Column="0" Text="{Binding Timestamp}" />
                                                <Editor
                                                    x:Name="SyncLyricEditor"
                                                    Grid.Column="1"
                                                    Text="{Binding Text}"
                                                    TextChanged="SyncLyricEditor_TextChanged" />
                                                <ImageButton
                                                    x:Name="DeleteCurrentLyricLineBtn"
                                                    Grid.Column="2"
                                                    Clicked="DeleteCurrentLyricLineBtn_Clicked"
                                                    CommandParameter="{Binding .}"
                                                    Source="delete.png" />
                                                <ImageButton
                                                    x:Name="TimestampCurrentLyricLineBtn"
                                                    Grid.Column="3"
                                                    Clicked="TimestampCurrentLyricLineBtn_Clicked"
                                                    CommandParameter="{Binding .}"
                                                    Source="time.png" />
                                            </Grid>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>

                                <HorizontalStackLayout
                                    Grid.Row="1"
                                    HorizontalOptions="Center"
                                    Spacing="10">

                                    <Button Command="{Binding SaveTimestampedLyricsCommand}" Text="Save Lyrics" />
                                    <Button
                                        BackgroundColor="DarkRed"
                                        Command="{Binding CancelLyricsEditingSessionCommand}"
                                        Text="Cancel" />
                                </HorizontalStackLayout>
                            </Grid>
                        </Grid>
                    </syncf:SfTabItem.Content>
                </syncf:SfTabItem>


                <syncf:SfTabItem Header="Lyrics search">
                    <syncf:SfTabItem.Content>
                        <VerticalStackLayout
                            Grid.Row="0"
                            Padding="15"
                            IsVisible="True">
                            <Label Style="{StaticResource SectionHeader}" Text="Find Lyrics Online" />
                            <VerticalStackLayout
                                HorizontalOptions="Start"
                                Spacing="10"
                                WidthRequest="300">
                                <Entry
                                    x:Name="SongTitleEntry"
                                    Focused="SongTitleEntry_Focused"
                                    HorizontalOptions="Fill"
                                    Placeholder="Song Title"
                                    Text="{Binding LyricsTrackNameSearch}" />
                                <Entry
                                    x:Name="SongArtistNameEntry"
                                    Focused="SongArtistNameEntry_Focused"
                                    HorizontalOptions="Fill"
                                    Placeholder="Artist Name"
                                    ReturnCommandParameter="art"
                                    Text="{Binding LyricsArtistNameSearch}" />
                                <Entry
                                    x:Name="SongAlbumName"
                                    Focused="SongAlbumName_Focused"
                                    HorizontalOptions="Fill"
                                    Placeholder="Album Name"
                                    ReturnCommandParameter="alb"
                                    Text="{Binding LyricsAlbumNameSearch}" />
                                <Button Command="{Binding SearchLyricsCommand}" Text="Search" />
                            </VerticalStackLayout>
                            <ActivityIndicator IsRunning="{Binding IsLyricsSearchBusy}" />
                            <CollectionView EmptyView="No results found." ItemsSource="{Binding LyricsSearchResults}">
                                <CollectionView.ItemsLayout>
                                    <GridItemsLayout
                                        HorizontalItemSpacing="10"
                                        Orientation="Vertical"
                                        Span="3"
                                        VerticalItemSpacing="10" />
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="models:LrcLibSearchResult">
                                        <Border>
                                            <VerticalStackLayout>
                                                <Label Text="{Binding Name}" />
                                                <Label Text="{Binding ArtistName}" />
                                                <Label Text="{Binding Duration, Converter={converters:DurationConverterFromMsToTimeSpan}}" />
                                                <Label Text="{Binding Instrumental, StringFormat='Is Instrumental: {0}'}" />
                                                <Label Text="{Binding SyncedLyrics}" />
                                                <BoxView HeightRequest="2" Color="DarkSlateBlue" />
                                            </VerticalStackLayout>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>

                    </syncf:SfTabItem.Content>
                </syncf:SfTabItem>
                <syncf:SfTabItem Header="Stats">
                    <syncf:SfTabItem.Content>
                        <Grid RowDefinitions="auto,*" />
                    </syncf:SfTabItem.Content>
                </syncf:SfTabItem>
                <!--  TAB 0: METADATA EDITOR  -->
                <syncf:SfTabItem Header="Edit Metadata">
                    <syncf:SfTabItem.Content>
                        <ScrollView>
                            <Grid>
                                <Image
                                    Aspect="AspectFit"
                                    IsVisible="False"
                                    Opacity="0.10"
                                    Source="{Binding SelectedSong.CoverImagePath}" />

                                <VerticalStackLayout Padding="15" Spacing="10">
                                    <Label Text="Edit the core information for this song. These changes will be saved directly to the audio file's tags." />

                                    <Grid
                                        ColumnDefinitions="Auto,*"
                                        RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,*"
                                        RowSpacing="10">
                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Style="{StaticResource FieldLabel}"
                                            Text="Title" />
                                        <Entry
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Text="{Binding SelectedSong.Title}" />

                                        <Label
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Style="{StaticResource FieldLabel}"
                                            Text="Artist(s)" />
                                        <HorizontalStackLayout Grid.Row="1" Grid.Column="1">
                                            <Entry Placeholder="e.g. Artist A, Artist B" Text="{Binding SelectedSong.OtherArtistsName}" />
                                            <Picker ItemDisplayBinding="{Binding Name}" ItemsSource="{Binding AllArtistsInDb}" />
                                            <Button Command="{Binding LoadAllArtistsFromOurDatabaseCommand}" />
                                        </HorizontalStackLayout>
                                        <Label
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            Style="{StaticResource FieldLabel}"
                                            Text="Album" />
                                        <Entry
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            Text="{Binding SelectedSong.AlbumName}" />


                                        <Label
                                            Grid.Row="4"
                                            Grid.Column="0"
                                            Style="{StaticResource FieldLabel}"
                                            Text="Genre" />
                                        <Entry
                                            Grid.Row="4"
                                            Grid.Column="1"
                                            Text="{Binding SelectedSong.GenreName}" />

                                        <Label
                                            Grid.Row="5"
                                            Grid.Column="0"
                                            Style="{StaticResource FieldLabel}"
                                            Text="Year" />
                                        <Entry
                                            Grid.Row="5"
                                            Grid.Column="1"
                                            Keyboard="Numeric"
                                            Text="{Binding SelectedSong.ReleaseYear}" />

                                        <Label
                                            Grid.Row="6"
                                            Grid.Column="0"
                                            Style="{StaticResource FieldLabel}"
                                            Text="Tags"
                                            VerticalOptions="Start" />
                                        <VerticalStackLayout
                                            Grid.Row="6"
                                            Grid.Column="1"
                                            Spacing="10">
                                            <syncf:SfChipGroup ItemsSource="{Binding SelectedSong.UserNoteAggregatedText}">

                                                <syncf:SfChipGroup.ItemTemplate>
                                                    <DataTemplate x:DataType="models:UserNoteModelView">
                                                        <Label Margin="10" Text="{Binding UserMessageText}">
                                                            <!--<FlyoutBase.ContextFlyout>
                                                                    <MenuFlyout>
                                                                        <MenuFlyoutItem Text="Edit"/>
                                                                        <MenuFlyoutItem IsDestructive="True"
                            Text="Delete"/>
                                                                    </MenuFlyout>
                                                                </FlyoutBase.ContextFlyout>-->
                                                        </Label>
                                                    </DataTemplate>
                                                </syncf:SfChipGroup.ItemTemplate>
                                            </syncf:SfChipGroup>
                                            <HorizontalStackLayout IsVisible="False">
                                                <Entry
                                                    HorizontalOptions="Fill"
                                                    Placeholder="Add a new tag..."
                                                    Text="{Binding CurrentNoteToSave}" />

                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>
                                    </Grid>

                                    <HorizontalStackLayout
                                        Margin="0,20,0,0"
                                        HorizontalOptions="Center"
                                        Spacing="10">
                                        <Button Text="Reset" />
                                        <Button FontAttributes="Bold" Text="Save Changes" />
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </Grid>
                        </ScrollView>
                    </syncf:SfTabItem.Content>
                </syncf:SfTabItem>

                <!--  TAB 1: LYRICS MANAGEMENT  -->
                <syncf:SfTabItem Header="Lyrics" IsVisible="True">
                    <syncf:SfTabItem.Content>
                        <Grid RowDefinitions="Auto, *">
                            <VerticalStackLayout>
                                <Label Text="{Binding SelectedSong.SyncLyrics.Length, StringFormat='Sync Lyrics Count: {0}'}" />
                            </VerticalStackLayout>
                            <Grid Grid.Row="1" ColumnDefinitions="*">

                                <Grid Grid.Column="0" ColumnDefinitions="auto,*">
                                    <VerticalStackLayout Grid.Column="0" Spacing="20">
                                        <Button Command="{Binding ContributeToLrcLibCommand}" Text="Contribute To LrcLib" />

                                        <ScrollView HeightRequest="500">

                                            <Label CharacterSpacing="2" Text="{Binding SelectedSong.SyncLyrics}" />

                                        </ScrollView>
                                    </VerticalStackLayout>
                                    <CollectionView Grid.Column="1" ItemsSource="{Binding SelectedSong.EmbeddedSync}">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate x:DataType="models:LyricPhraseModelView">
                                                <Grid ColumnDefinitions="0.3*,*,0.3*">
                                                    <Border Grid.Column="0" StrokeThickness="1">
                                                        <Label Text="{Binding TimeStampMs}" />
                                                    </Border>

                                                    <Border Grid.Column="1">

                                                        <Label Text="{Binding Text}" TextColor="{AppThemeBinding Dark=White, Light=Black}" />
                                                    </Border>

                                                    <HorizontalStackLayout Grid.Column="2">
                                                        <ImageButton Source="edit.png" />
                                                    </HorizontalStackLayout>
                                                </Grid>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </Grid>
                            </Grid>
                        </Grid>
                    </syncf:SfTabItem.Content>
                </syncf:SfTabItem>


                <!--  TAB 2: MANUAL LYRICS SYNCER  -->

                <!--  Tab 3: Cover Image Management  -->
                <syncf:SfTabItem Header="Cover Image">
                    <syncf:SfTabItem.Content>
                        <Grid RowDefinitions="auto,*">
                            <Image
                                Aspect="AspectFit"
                                Opacity="0.2"
                                Source="{Binding SelectedSong.CoverImagePath}" />
                            <VerticalStackLayout Grid.Row="0" Spacing="10">

                                <Editor Text="{Binding SelectedSong.Title}" />

                                <Editor Text="{Binding SelectedSong.ArtistName}" />

                                <Editor Text="{Binding SelectedSong.AlbumName}" />


                                <HorizontalStackLayout Spacing="15">
                                    <ImageButton
                                        x:Name="SearchSongOnline"
                                        Clicked="SearchSongOnline_Clicked"
                                        Source="searchd.png">
                                        <ImageButton.Behaviors>
                                            <toolkit:IconTintColorBehavior TintColor="DarkSlateBlue" />
                                        </ImageButton.Behaviors>
                                    </ImageButton>
                                    <ImageButton
                                        x:Name="PickSongImageFromFolder"
                                        Command="{Binding PickSongImageFromFolderCommand}"
                                        Source="folderopen.png">
                                        <ImageButton.Behaviors>
                                            <toolkit:IconTintColorBehavior TintColor="DarkSlateBlue" />
                                        </ImageButton.Behaviors>
                                    </ImageButton>

                                    <ImageButton
                                        x:Name="SaveCurrentCoverToDisc"
                                        Clicked="SaveCurrentCoverToDisc_Clicked"
                                        Source="savea.png">
                                        <ImageButton.Behaviors>
                                            <toolkit:IconTintColorBehavior TintColor="DarkSlateBlue" />
                                        </ImageButton.Behaviors>
                                    </ImageButton>
                                </HorizontalStackLayout>

                                <HorizontalStackLayout Spacing="40">
                                    <VerticalStackLayout>
                                        <FlyoutBase.ContextFlyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem
                                                    x:Name="ApplyCurrentImageToCurrPlayingSong"
                                                    Clicked="ApplyCurrentImageToCurrentPlayingSong_Clicked"
                                                    Text="Apply This Image To Current Playing Song" />
                                                <MenuFlyoutItem
                                                    x:Name="ApplyCurrentImageToAllSongsInAlbum"
                                                    Clicked="ApplyCurrentImageToAllSongsInAlbum_Clicked"
                                                    Text="Apply This Image To All Songs In Album" />
                                                <MenuFlyoutItem
                                                    x:Name="ApplyCurrentImageToMainArtist"
                                                    Clicked="ApplyCurrentImageToMainArtist_Clicked"
                                                    Text="Apply This Image To Main Artist In Album" />
                                            </MenuFlyout>
                                        </FlyoutBase.ContextFlyout>
                                        <Label FontSize="Header" Text="Current Image" />
                                        <Image
                                            HeightRequest="500"
                                            Source="{Binding SelectedSong.CoverImagePath}"
                                            WidthRequest="500" />
                                    </VerticalStackLayout>
                                    <VerticalStackLayout>
                                        <Label FontSize="Header" Text="Current Image" />
                                        <Image
                                            HeightRequest="400"
                                            Source="{Binding SelectedSongLastFMData.Images[5].Url}"
                                            WidthRequest="400" />
                                    </VerticalStackLayout>
                                </HorizontalStackLayout>

                            </VerticalStackLayout>

                            <CollectionView Grid.Row="1" ItemsSource="{Binding SelectedSongLastFMData.Images}">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="lastfmmodels:Image">
                                        <Border
                                            Margin="5"
                                            StrokeShape="RoundRectangle 8"
                                            StrokeThickness="0">
                                            <VerticalStackLayout>

                                                <Image
                                                    Aspect="AspectFill"
                                                    HeightRequest="200"
                                                    Source="{Binding Url}"
                                                    WidthRequest="200" />

                                                <HorizontalStackLayout>

                                                    <syncf:SfChip
                                                        x:Name="SaveImageFromLastFM"
                                                        Clicked="SaveImageFromLastFM_Clicked"
                                                        CommandParameter="{Binding .}"
                                                        ImageSource="savea.png" />

                                                </HorizontalStackLayout>
                                            </VerticalStackLayout>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </Grid>

                    </syncf:SfTabItem.Content>
                </syncf:SfTabItem>


            </syncf:SfTabView>
        </Grid>

    </Grid>
</ContentPage>
