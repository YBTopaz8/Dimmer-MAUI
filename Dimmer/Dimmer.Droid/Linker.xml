<?xml version="1.0" encoding="UTF-8" ?>
<linker>
	<!-- Keep your Shared Project Code -->
	<assembly fullname="Dimmer" preserve="all" >
		<type fullname="Dimmer.Data.Models.*" />
		<type fullname="Dimmer.Data.ModelView.*" />
		<type fullname="Dimmer.Orchestration.*" />
		<type fullname="*" />
	</assembly>

	<!-- Keep Android Project Code -->
	<assembly fullname="Dimmer.Droid" preserve="all" >
		<type fullname="*" />
	</assembly>

	<!-- Keep AutoMapper -->
	<assembly fullname="AutoMapper" preserve="all" />
	
	<!-- Keep Configuration/JSON libraries -->
	<assembly fullname="Microsoft.Extensions.Configuration" />
	<assembly fullname="Microsoft.Extensions.Configuration.Json" />
	<assembly fullname="System.Text.Json" />

	<assembly fullname="Xamarin.AndroidX.AppCompat" />
	<assembly fullname="Xamarin.AndroidX.Fragment" />
	<assembly fullname="Xamarin.AndroidX.Core" />
	<assembly fullname="Xamarin.Google.Android.Material" />
	<assembly fullname="Realm" preserve="all">
		<type fullname="*" />
	</assembly>
</linker>