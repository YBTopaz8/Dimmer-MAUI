<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:dx="http://schemas.devexpress.com/maui"
                    >

    <Style TargetType="dx:DXToggleButton">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource MyDirectColor}, Dark=Red}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource MyDirectColor}, Dark=Blue}" />
    </Style>

    <Style TargetType="dx:Chip">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource MyDirectColor}, Dark=Red}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource MyDirectColor}, Dark=Blue}" />
    </Style>



</ResourceDictionary>
