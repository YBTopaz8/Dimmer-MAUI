<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Dimmer.WinUI.Views.CustomViews.WinuiViews.VolumeTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dimmer.WinUI.Views.CustomViews.WinuiViews"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <Button x:Name="DeviceNameText" 
                   Content="{x:Bind MyViewModel.SelectedAudioDevice.Name}"
                   FontSize="22"/>

            <Slider Minimum="0" Maximum="100" 
                Value="{x:Bind MyViewModel.DeviceVolumeLevel}"/>
        </StackPanel>
    </Grid>
</UserControl>
