<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Dimmer.WinUI.Views.CustomViews.WinuiViews.NowPlayingCarousel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Dimmer.WinUI.Views.CustomViews.WinuiViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <FlipView
            x:Name="SongCarouselFlipView"
            ItemsSource="{x:Bind MyViewModel.CarouselItems, Mode=OneWay}"
            SelectedIndex="1"
            SelectionChanged="SongCarouselFlipView_SelectionChanged">
            <FlipView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="20">
                        <Border
                            Width="400"
                            Height="400"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="12"
                            Shadow="{StaticResource SharedShadow}">
                            <Grid>
                                <Image
                                    Stretch="UniformToFill"
                                    Source="{Binding CoverImagePath}" />
                                <Border
                                    VerticalAlignment="Bottom"
                                    Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                                    CornerRadius="0,0,12,12">
                                    <StackPanel Padding="16">
                                        <TextBlock
                                            FontSize="20"
                                            FontWeight="SemiBold"
                                            Text="{Binding Title}"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="NoWrap" />
                                        <TextBlock
                                            FontSize="14"
                                            Opacity="0.8"
                                            Text="{Binding OtherArtistsName}"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="NoWrap" />
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>
                </DataTemplate>
            </FlipView.ItemTemplate>
            <FlipView.ItemContainerTransitions>
                <TransitionCollection>
                    <AddDeleteThemeTransition />
                    <ContentThemeTransition />
                    <ReorderThemeTransition />
                    <EntranceThemeTransition IsStaggeringEnabled="False" />
                </TransitionCollection>
            </FlipView.ItemContainerTransitions>
        </FlipView>
    </Grid>
</UserControl>
