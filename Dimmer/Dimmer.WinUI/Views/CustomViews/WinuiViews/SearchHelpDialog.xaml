<?xml version="1.0" encoding="utf-8" ?>
<ContentDialog
    x:Class="Dimmer.WinUI.Views.CustomViews.WinuiViews.SearchHelpDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Dimmer.WinUI.Views.CustomViews.WinuiViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Search Help"
    Width="600"
    DefaultButton="Primary"
    PrimaryButtonText="Close"
    mc:Ignorable="d">

    <Grid RowDefinitions="Auto,*">
        <TabView>
            <!--  Fields  -->
            <TabViewItem Header="Fields">
                <ScrollViewer>
                    <ItemsControl  x:Name="FieldsList">
                        <!--  Filled in code-behind  -->
                    </ItemsControl>
                </ScrollViewer>
            </TabViewItem>

            <!--  Examples  -->
            <TabViewItem Header="Examples">
                <ScrollViewer>
                    <StackPanel x:Name="ExamplesList" Padding="12" />
                </ScrollViewer>
            </TabViewItem>

            <!--  Natural Language  -->
            <TabViewItem Header="Commands">
                <ScrollViewer>
                    <ItemsControl x:Name="NaturalList" />
                </ScrollViewer>
            </TabViewItem>

        </TabView>
    </Grid>
</ContentDialog>