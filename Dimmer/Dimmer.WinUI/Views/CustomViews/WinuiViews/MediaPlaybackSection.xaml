<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Dimmer.WinUI.Views.CustomViews.WinuiViews.MediaPlaybackSection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:Dimmer.WinUI.Utils.Converters"
    xmlns:convertersWinUI="using:Dimmer.WinUI.Utils.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Dimmer.WinUI.Views.CustomViews.WinuiViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <convertersWinUI:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
                <convertersWinUI:IsNullToVisibilityConverter x:Key="IsNullToVisibilityConverter" />
                <convertersWinUI:RepeatModeConverter x:Key="RepeatModeConverter" />
                <convertersWinUI:BoolToInverseVisibilityConverter x:Key="BoolToInverseVisibilityConverter" />
                <convertersWinUI:BoolToPlayingPauseConv x:Key="BoolToPlayingPauseConverter" />
            </ResourceDictionary>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <StackPanel
            x:Name="TopPanel"
            Grid.Row="0"
            Background="Transparent"
            PointerReleased="TopPanel_PointerReleased">
            <Grid Padding="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">

                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="30"
                            IsTextSelectionEnabled="True"
                            Text="{Binding CurrentPlayingSongView.Title}"
                            TextDecorations="Underline" />


                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            FontSize="24"
                            FontStyle="Italic"
                            IsTextSelectionEnabled="True"
                            Text="{Binding CurrentPlayingSongView.ArtistName}" />

                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            FontSize="20"
                            IsTextSelectionEnabled="True"
                            Text="{Binding CurrentPlayingSongView.AlbumName}" />

                        <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal">


                            <TextBlock
                                VerticalAlignment="Bottom"
                                FontSize="22"
                                Text="{Binding CurrentTrackPositionSeconds, Converter={StaticResource DurationConverter}}" />
                            <TextBlock
                                VerticalAlignment="Bottom"
                                FontSize="22"
                                Text="/" />

                            <TextBlock
                                VerticalAlignment="Bottom"
                                FontSize="22"
                                Text="{Binding CurrentTrackDurationSeconds, Converter={StaticResource DurationConverter}}" />

                        </StackPanel>

                        <Button Background="Transparent" Visibility="{Binding CurrentPlayingSongView.HasSyncedLyrics, Converter={StaticResource BoolToVisibilityConverter}}">
                            <FontIcon
                                Width="19"
                                Height="19"
                                Glyph="&#xEC71;" />
                        </Button>
                    </StackPanel>
                    <StackPanel
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="10">

                        <Button
                            x:Name="BackButton"
                            Background="Transparent"
                            Click="BackButton_Click"
                            Content="&#xE72B;"
                            FontFamily="Segoe MDL2 Assets"
                            Visibility="Collapsed" />

                    </StackPanel>
                    <StackPanel
                        x:Name="TopPanelTwo"
                        Margin="0,0,0,0"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal"
                        Spacing="10">
                        <ToggleButton IsChecked="{Binding IsShuffleActive}">
                            <SymbolIcon Symbol="Shuffle" />
                        </ToggleButton>
                        <Button
                            x:Name="PrevBtn"
                            AccessKey="B"
                            Command="{Binding PreviousTrackCommand}">
                            <FontIcon Glyph="&#xE892;" />
                        </Button>
                        <ToggleButton
                            x:Name="PlayBtn"
                            AccessKey="P"
                            Command="{Binding PlayPauseToggleCommand}"
                            Content="{Binding IsDimmerPlaying, Converter={StaticResource BoolToPlayingPauseConverter}}"
                            IsChecked="{Binding IsDimmerPlaying}" />
                        <Button
                            x:Name="NextBtn"
                            AccessKey="N"
                            AccessKeyDisplayRequested="NextBtn_AccessKeyDisplayRequested"
                            AccessKeyInvoked="NextBtn_AccessKeyInvoked"
                            Command="{Binding NextTrackCommand}">
                            <SymbolIcon Symbol="Next" />
                        </Button>

                        <Button Command="{x:Bind MyViewModel.ToggleRepeatModeCommand}" Content="{Binding CurrentRepeatMode, Converter={StaticResource RepeatModeConverter}}" />
                        <Button
                            x:Name="LastFMBtn"
                            Background="Transparent"
                            BorderThickness="3"
                            Click="LastFMBtn_Click"
                            Content="LastFM"
                            CornerRadius="10" />


                        
                    </StackPanel>

                </StackPanel>
            </Grid>


        </StackPanel>
        <InfoBar
            Grid.Row="0"
            IsOpen="{x:Bind MyViewModel.IsAchievementNotificationVisible, Mode=OneWay}"
            Severity="Success"
            Title="{x:Bind MyViewModel.UnlockedAch.Name, Mode=OneWay}"
            Message="{x:Bind MyViewModel.UnlockedAch.Description, Mode=OneWay}"
            IsClosable="True"
            IsIconVisible="True"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            Margin="0,10,20,0"
            Width="350"
            Canvas.ZIndex="100">
            <!-- Add a Shadow for depth since it is floating -->
            <InfoBar.Shadow>
                <ThemeShadow />
            </InfoBar.Shadow>
            <!-- Add animation so it slides in nicely -->
            <InfoBar.Transitions>
                <TransitionCollection>
                    <EntranceThemeTransition FromVerticalOffset="-50" />
                </TransitionCollection>
            </InfoBar.Transitions>
        </InfoBar>

    </Grid>
</UserControl>
