<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Dimmer.WinUI.Views.CustomViews.WinuiViews.MediaPlaybackSection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dimmer.WinUI.Views.CustomViews.WinuiViews"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:converters="using:Dimmer.WinUI.Utils.Converters"
        xmlns:convertersWinUI="using:Dimmer.WinUI.Utils.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" >
    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <convertersWinUI:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
                <convertersWinUI:BoolToInverseVisibilityConverter x:Key="BoolToInverseVisibilityConverter"/>
                <convertersWinUI:BoolToPlayingPauseConv x:Key="BoolToPlayingPauseConverter"/>
            </ResourceDictionary>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" x:Name="TopPanel" Background="Transparent"
              PointerReleased="TopPanel_PointerReleased">
            <Grid 
            Padding="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">

                    <StackPanel  Orientation="Horizontal" Spacing="10"  HorizontalAlignment="Center">

                        <Button
x:Name="BackButton" Background="Transparent"
Click="BackButton_Click"  Visibility="{Binding IsBackButtonVisible}"
                            
Content="&#xE72B;"
FontFamily="Segoe MDL2 Assets" />
                        <TextBlock 
    VerticalAlignment="Center"
    Text="{Binding CurrentTrackPositionSeconds, Converter={StaticResource DurationConverter}}"
    />
                        <Slider Value="{Binding CurrentTrackPositionPercentage}"
    Minimum="0" Maximum="100" VerticalAlignment="Center"
       Width="400"/>

                        <TextBlock 
                        VerticalAlignment="Center"
                        Text="{Binding CurrentTrackDurationSeconds, Converter={StaticResource DurationConverter}}"
                        />


                    </StackPanel>
                    <StackPanel
                    x:Name="TopPanelTwo"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal" Margin="0,0,0,0"
                    Spacing="10">
                        <Button Content="Prev" 
                                x:Name="PrevBtn" AccessKey="B"
                                Command="{Binding PreviousTrackCommand}"/>
                        <ToggleButton Content="{Binding IsDimmerPlaying,
                            Converter={StaticResource BoolToPlayingPauseConverter}}" x:Name="PlayBtn"
                                Command="{Binding PlayPauseToggleCommand}"
                                AccessKey="P" IsChecked="{Binding IsDimmerPlaying}"
                                />
                        <Button AccessKey="N"
                                AccessKeyDisplayRequested="NextBtn_AccessKeyDisplayRequested"
                                AccessKeyInvoked="NextBtn_AccessKeyInvoked"
                            Command="{Binding NextTrackCommand}"
                            Content="Next" x:Name="NextBtn" />


                        <TextBlock
                        HorizontalAlignment="Center"
                        IsTextSelectionEnabled="True" VerticalAlignment="Center"
                        Text="{Binding CurrentPlayingSongView.Title}"
                        TextDecorations="Underline" />


                        <TextBlock
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        FontStyle="Italic"
                        IsTextSelectionEnabled="True"
                        Text="{Binding CurrentPlayingSongView.ArtistName}" />

                        <TextBlock VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        IsTextSelectionEnabled="True"
                        Text="{Binding CurrentPlayingSongView.AlbumName}" />

                    </StackPanel>
               
                </StackPanel>
            </Grid>


        </StackPanel>
    </Grid>
</UserControl>
