<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Dimmer.WinUI.Views.CustomViews.WinuiViews.SongLyricsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Dimmer.WinUI.Views.CustomViews.WinuiViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Dimmer.Data.ModelView"
    mc:Ignorable="d">

    <Grid ColumnSpacing="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  LEFT: Search & Sources  -->
        <Grid Grid.Column="0" RowDefinitions="Auto,Auto,*">
            <TextBlock
                Margin="0,0,0,10"
                FontSize="18"
                FontWeight="Bold"
                Text="Find Lyrics" />

            <StackPanel Grid.Row="1" Spacing="10">
                <TextBox Header="Title" Text="{x:Bind ViewModel.LyricsTrackNameSearch, Mode=TwoWay}" />
                <TextBox Header="Artist" Text="{x:Bind ViewModel.LyricsArtistNameSearch, Mode=TwoWay}" />
                <TextBox Header="Album" Text="{x:Bind ViewModel.LyricsAlbumNameSearch, Mode=TwoWay}" />
                <Button
                    HorizontalAlignment="Stretch"
                    Command="{x:Bind ViewModel.SearchLyricsCommand}"
                    Content="Search LrcLib" />
            </StackPanel>

            <ListView
                Grid.Row="2"
                Margin="0,15,0,0"
                ItemsSource="{x:Bind ViewModel.LyricsSearchResults, Mode=OneWay}"
                SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid
                            Margin="0,0,0,8"
                            Padding="10"
                            Background="#1A1A1A"
                            CornerRadius="8">
                            <StackPanel>
                                <TextBlock FontWeight="Bold" Text="{Binding Name}" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="#999"
                                    Text="{Binding ArtistName}" />
                                <TextBlock
                                    FontSize="10"
                                    Foreground="MediumSlateBlue"
                                    Text="{Binding SyncedLyrics, Converter={StaticResource BoolToStringConverter}, ConverterParameter='Synced|Plain'}" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!--  RIGHT: Editor & Sync  -->
        <Grid Grid.Column="1" RowDefinitions="Auto,*">
            <StackPanel
                Margin="0,0,0,10"
                Orientation="Horizontal"
                Spacing="10">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="18"
                    FontWeight="Bold"
                    Text="Editor" />
                <AppBarSeparator />
                <Button Content="Paste Clipboard" />
                <Button
                    Command="{x:Bind ViewModel.SaveTimestampedLyricsCommand}"
                    Content="Save Lyrics"
                    Style="{StaticResource AccentButtonStyle}" />
            </StackPanel>

            <Pivot Grid.Row="1">
                <!--  Plain Text Editor  -->
                <PivotItem Header="Plain Text">
                    <TextBox
                        AcceptsReturn="True"
                        Background="#111"
                        BorderThickness="0"
                        FontFamily="Consolas"
                        Text="{x:Bind ViewModel.SelectedSong.UnSyncLyrics, Mode=TwoWay}"
                        TextWrapping="Wrap" />
                </PivotItem>

                <!--  Synced Line Editor  -->
                <PivotItem Header="Synced Lines">
                    <ListView ItemsSource="{x:Bind ViewModel.LyricsInEditor, Mode=OneWay}" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="5" ColumnDefinitions="Auto,*,Auto">
                                    <Border
                                        Margin="0,0,10,0"
                                        Padding="8,4"
                                        Background="#222"
                                        CornerRadius="4">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontFamily="Consolas"
                                            Foreground="MediumSlateBlue"
                                            Text="{Binding Timestamp}" />
                                    </Border>

                                    <TextBox
                                        Grid.Column="1"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Text="{Binding Text, Mode=TwoWay}" />

                                    <StackPanel
                                        Grid.Column="2"
                                        Orientation="Horizontal"
                                        Spacing="5">
                                        <Button
                                            Padding="5"
                                            Background="Transparent"
                                            ToolTipService.ToolTip="Set Time to Now">
                                            <FontIcon FontSize="12" Glyph="&#xE916;" />
                                        </Button>
                                        <Button
                                            Padding="5"
                                            Background="Transparent"
                                            Foreground="Red">
                                            <FontIcon FontSize="12" Glyph="&#xE74D;" />
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </PivotItem>
            </Pivot>
        </Grid>
    </Grid>
</UserControl>