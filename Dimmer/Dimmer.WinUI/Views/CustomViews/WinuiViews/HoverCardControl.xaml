<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Dimmer.WinUI.Views.CustomViews.WinuiViews.HoverCardControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dimmer.WinUI.Views.CustomViews.WinuiViews"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border
        x:Name="CardBorder"
        Width="250"
        Height="300"
        AllowFocusOnInteraction="False"
        Background="Transparent"
        BorderBrush="DarkSlateBlue"
        BorderThickness="1"
        CornerRadius="12"
        IsHitTestVisible="True"
        PointerEntered="CardBorder_PointerEntered"
        PointerExited="CardBorder_PointerExited">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Image
                Grid.Row="0"
                Source="Assets/sample.jpg"
                Stretch="UniformToFill" />
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <TextBlock
                    FontSize="18"
                    FontWeight="SemiBold"
                    Text="Track Title" />
                <TextBlock
                    FontSize="14"
                    Opacity="0.7"
                    Text="Artist Name" />
            </StackPanel>

            <StackPanel
                x:Name="ExtraPanel"
                Grid.Row="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Opacity="0"
                Orientation="Horizontal"
                RenderTransformOrigin="0.5,0.5"
                Spacing="10"
                Visibility="Visible">
                <StackPanel.RenderTransform>
                    <TranslateTransform Y="20" />
                </StackPanel.RenderTransform>
                <Button Content="Download" />
                <Button Content="Favorite" />
            </StackPanel>
        </Grid>
    </Border>

</UserControl>
