<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Name="myPage"
    x:Class="Dimmer.WinUI.Views.SingleSongPages.SingleSongPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:Dimmer.Utilities.TypeConverters;assembly=Dimmer"
    xmlns:cw="clr-namespace:Dimmer.WinUI.Views.CustomViews"
    xmlns:lang="clr-namespace:Dimmer.Resources.Localization;assembly=Dimmer"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    xmlns:models="clr-namespace:Dimmer.Data.ModelView;assembly=Dimmer"
    xmlns:modelsDb="clr-namespace:Dimmer.Data.Models;assembly=Dimmer"
    xmlns:modeltwo="clr-namespace:Dimmer.WinUI.Utils.Models"
    xmlns:syncf="http://schemas.syncfusion.com/maui/toolkit"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:uranium="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
    xmlns:vm="clr-namespace:Dimmer.WinUI.ViewModel"
    xmlns:lastfmmodels="clr-namespace:Hqub.Lastfm.Entities;assembly=Hqub.Lastfm"
    xmlns:windows="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.WindowsSpecific;assembly=Microsoft.Maui.Controls"
    x:DataType="vm:BaseViewModelWin"
    Shell.NavBarIsVisible="False"
    >

    <ContentPage.Resources>
        <converters:DurationConverterFromMsToTimeSpan x:Key="DurationConverter" />
        <converters:BytesToMegabytesConverter x:Key="FileSizeConverter" />
        <converters:BytesArrayToImageSource x:Key="BytesToImageConverter" />
        <converters:BoolToInverseConverter x:Key="BoolToInverse" />
        <converters:IndexToVisibilityConverter x:Key="IndexToVisibilityConverter" />
        <converters:DateTimeToLocalDateConverter x:Key="DateTimeConverter" />
        <converters:DateTimeToLocalTimeConverter x:Key="DateTimeToTimeConverter" />
        <converters:BoolToYesNoConverter x:Key="BoolToYesNo" />
        <converters:VolumeConverter x:Key="VolConverter" />
        <Style x:Key="SectionHeader" TargetType="Label">
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>
        <Style x:Key="FieldLabel" TargetType="Label">
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>



        <DataTemplate x:Key="GridOfFour" x:DataType="models:SongModelView">
            <Grid ColumnDefinitions="*" HorizontalOptions="Center">
                <FlyoutBase.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem x:Name="ViewSongMFI"
                            Text="View"
                            CommandParameter="{Binding .}"
                            Clicked="ViewSongMFI_Clicked"
                            />

                    </MenuFlyout>
                </FlyoutBase.ContextFlyout>
                <Grid.GestureRecognizers>
                    <PointerGestureRecognizer x:Name="SongViewPointer"
                        PointerEntered="SongViewPointer_PointerEntered"
                        PointerExited="SongViewPointer_PointerExited"
                        />
                </Grid.GestureRecognizers>



                <Image
                    Source="{Binding CoverImagePath}"
                    Opacity="0.7"
                    HorizontalOptions="Start"
                    HeightRequest="180"
                    >
                    <Image.GestureRecognizers>
                        <DragGestureRecognizer x:Name="SongDrag"
                            CanDrag="True"
                            DragStarting="SongDrag_DragStarting"
                            DragStartingCommandParameter="{Binding .}"
                            />
                    </Image.GestureRecognizers>
                </Image>
                
                
                <Border
                    Padding="5,5,5,0"
                    BackgroundColor="#2C2C2C"
                    VerticalOptions="End"
                    StrokeShape="RoundRectangle 5,5,0,0"
                    >

                    <VerticalStackLayout x:Name="DetailsView" HeightRequest="60">
                        <VerticalStackLayout.Resources>
                            <Style TargetType="Label">
                                <Setter Property="TextColor" Value="#999999" />
                            </Style>
                        </VerticalStackLayout.Resources>
                        <Label
                            Text="{Binding Title}"
                            FontSize="Small"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}"
                            />
                        <Label FontSize="14" Text="{Binding DurationInSeconds, Converter={converters:DurationConverterFromMsToTimeSpan}}" />
                        <Label
                            Text="{Binding PlayCompletedCount, StringFormat='{0} Dimms'}"
                            TextColor="SlateBlue"
                            FontAttributes="Bold"
                            HorizontalTextAlignment="End"
                            >
                            <Label.Triggers>
                                <DataTrigger
                                    TargetType="Label"
                                    Binding="{Binding PlayCompletedCount}"
                                    Value="0"
                                    >
                                    <Setter Property="FontAttributes" Value="None" />
                                    <Setter Property="TextColor" Value="White" />
                                    <Setter Property="Text" Value="0 Dimm" />
                                </DataTrigger>
                                <DataTrigger
                                    TargetType="Label"
                                    Binding="{Binding PlayCompletedCount}"
                                    Value="1"
                                    >
                                    <Setter Property="FontAttributes" Value="Italic" />
                                    <Setter Property="TextColor" Value="MediumSlateBlue" />
                                    <Setter Property="Text" Value="1 Dimm" />
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>
                    </VerticalStackLayout>

                </Border>
            </Grid>


        </DataTemplate>

        <ResourceDictionary>
            <Style TargetType="syncf:SfChip">
                <Setter Property="HeightRequest" Value="60" />
            </Style>
        </ResourceDictionary>



        <DataTemplate x:Key="MultiColumnsView">
            <Grid ColumnDefinitions="0.4,*,*,*,*,*,*">
                <HorizontalStackLayout Grid.Column="0" />
                <HorizontalStackLayout Grid.Column="1" />
                <HorizontalStackLayout Grid.Column="2" />
                <HorizontalStackLayout Grid.Column="3" />
                <HorizontalStackLayout Grid.Column="4" />
                <HorizontalStackLayout Grid.Column="5" />

            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="ListeninClickTooltipTemplate" x:DataType="syncf:TooltipInfo">
            <HorizontalStackLayout>
                <Label
                    FontAttributes="Bold"
                    FontSize="21"
                    HorizontalOptions="Center"
                    Text="{Binding Item.Value, StringFormat='{0} Dimms '}"
                    TextColor="DarkSlateBlue"
                    VerticalOptions="Center"
                    />
                <Label
                    FontAttributes="Bold"
                    FontSize="19"
                    HorizontalOptions="Center"
                    Text="{Binding Item.Label, StringFormat=' at {0}'}"
                    TextColor="{AppThemeBinding Dark=White,
                                                Light=Black}"
                    VerticalOptions="Center"
                    />




            </HorizontalStackLayout>
        </DataTemplate>
    </ContentPage.Resources>

    <Grid x:Name="SingleSongView"
        RowDefinitions="auto,*"
        BackgroundColor="Transparent"
        >

        <Grid
            Grid.Row="0"
            ColumnDefinitions="auto,*"
            VerticalOptions="Start"
            >
            <Border x:Name="BorderNextToImageDomm"
                Grid.Column="1"
                BackgroundColor="{Binding SelectedSecondDomColor}"
                Opacity="0.5"
                IsVisible="True"
                ZIndex="0"
                />

            <VerticalStackLayout
                Grid.Column="1"
                Padding="20"
                Spacing="25"
                HeightRequest="260"
                ZIndex="1"
                >
                <HorizontalStackLayout Spacing="20">
                    <Button x:Name="ToggleViewArtist"
                        Padding="10"
                        windows:VisualElement.AccessKey="A"
                        windows:VisualElement.AccessKeyPlacement="Bottom"
                        BackgroundColor="Transparent"
                        BorderWidth="1"
                        HorizontalOptions="Start"
                        Clicked="ToggleViewArtist_Clicked"
                        TextColor="{AppThemeBinding Dark=White,
                                                    Light=Black}"
                        Text="{Binding SelectedSong.OtherArtistsName}"
                        FontSize="19"
                        />
                    <Button x:Name="ToggleViewAlbum"
                        Padding="10"
                        windows:VisualElement.AccessKey="D"
                        windows:VisualElement.AccessKeyPlacement="Bottom"
                        Clicked="ToggleViewAlbum_Clicked"
                        BackgroundColor="Transparent"
                        BorderWidth="1"
                        HorizontalOptions="Start"
                        FontSize="12"
                        TextColor="{AppThemeBinding Dark=White,
                                                    Light=Black}"
                        Text="{Binding SelectedSong.AlbumName}"
                        />

                    <Image
                        Source="lyrics.png"
                        HeightRequest="60"
                        IsVisible="{Binding SelectedSong.SyncLyrics.Length, Converter={converters:CollectionSizeToVisibility}}"
                        />

                </HorizontalStackLayout>
                <Button
                    windows:VisualElement.AccessKey="T"
                    BorderWidth="1"
                    HorizontalOptions="Start"
                    BackgroundColor="Transparent"
                    Text="{Binding SelectedSong.Title}"
                    FontSize="29"
                    FontAttributes="Bold"
                    TextColor="{AppThemeBinding Dark=White,
                                                Light=Black}"
                    />
                <HorizontalStackLayout Spacing="20">
                    <Button
                        windows:VisualElement.AccessKey="S"
                        windows:VisualElement.AccessKeyPlacement="Bottom"
                        BackgroundColor="{Binding SelectedSecondDomColor}"
                        ImageSource="play.png"
                        BorderWidth="2"
                        HeightRequest="60"
                        BorderColor="DarkSlateBlue"
                        Clicked="PlaySongGestRec_Tapped"
                        FontAttributes="Bold"
                        TextColor="{AppThemeBinding Dark=White,
                                                    Light=Black}"
                        >
                        <Button.Triggers>
                            <DataTrigger
                                Binding="{Binding IsPlaying}"
                                TargetType="Button"
                                Value="true"
                                >
                                <Setter Property="ImageSource" Value="pause.png" />
                            </DataTrigger>

                            <DataTrigger
                                Binding="{Binding IsPlaying}"
                                TargetType="Button"
                                Value="false"
                                >
                                <Setter Property="ImageSource" Value="play.png" />
                            </DataTrigger>
                        </Button.Triggers>
                    </Button>
                    <Button
                        windows:VisualElement.AccessKey="H"
                        Command="{Binding AddFavoriteRatingToSongCommand}"
                        CommandParameter="{Binding SelectedSong}"
                        BackgroundColor="Transparent"
                        BorderWidth="0.7"
                        BorderColor="{Binding SelectedSecondDomColor}"
                        ImageSource="heart.png"
                        WidthRequest="65"
                        HeightRequest="65"
                        ToolTipProperties.Text="Save Has Favorite"
                        >
                        <Button.Triggers>
                            <DataTrigger
                                Binding="{Binding SelectedSong.IsFavorite}"
                                TargetType="Button"
                                Value="False"
                                >
                                <Setter Property="ImageSource" Value="heartbroken.png" />

                            </DataTrigger>
                            <DataTrigger
                                Binding="{Binding SelectedSong.IsFavorite}"
                                TargetType="Button"
                                Value="True"
                                >
                                <Setter Property="ImageSource" Value="heartlock.png" />


                            </DataTrigger>
                        </Button.Triggers>
                    </Button>

                    <VerticalStackLayout VerticalOptions="Center">
                        <Label
                            Text="Dimms"
                            FontSize="21"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}"
                            />
                        <Label
                            HorizontalOptions="Center"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}"
                            FontSize="19"
                            Text="{Binding SelectedSong.PlayCompletedCount}"
                            />
                    </VerticalStackLayout>

                    <VerticalStackLayout VerticalOptions="Center">

                        <Label
                            Text="Track Number"
                            FontSize="21"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}"
                            />
                        <Label
                            HorizontalOptions="Center"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}"
                            FontSize="19"
                            Text="{Binding SelectedSong.TrackNumber}"
                            />

                    </VerticalStackLayout>

                    <VerticalStackLayout VerticalOptions="Center">

                        <Label
                            Text="Disc Number"
                            ToolTipProperties.Text="Album Disc Number"
                            FontSize="21"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}"
                            />
                        <Label
                            HorizontalOptions="Center"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}"
                            FontSize="19"
                            Text="{Binding SelectedSong.DiscNumber}"
                            />
                    </VerticalStackLayout>

                    <VerticalStackLayout VerticalOptions="Center">

                        <Label
                            Text="Global Rank"
                            FontSize="21"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}"
                            />
                        <Label
                            HorizontalOptions="Center"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}"
                            FontSize="19"
                            Text="{Binding SelectedSong.GlobalRank}"
                            />
                    </VerticalStackLayout>
                    <Button x:Name="MoreBtn"
                        Rotation="90"
                        BackgroundColor="Transparent"
                        HeightRequest="70"
                        Clicked="MoreBtn_Clicked"
                        BorderWidth="1"
                        BorderColor="DarkSlateBlue"
                        ImageSource="more1.png"
                        >
                        <FlyoutBase.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem
                                    Text="View on Last FM"
                                    IconImageSource="lastfm.png"
                                    Command="{Binding OpenSongInOnlineSearchCommand}"
                                    CommandParameter="lastFM"
                                    />
                                <MenuFlyoutItem
                                    Text="View on Google"
                                    IconImageSource="google.png"
                                    Command="{Binding OpenSongInOnlineSearchCommand}"
                                    CommandParameter="google"
                                    />
                                <MenuFlyoutItem
                                    Text="View on YouTube"
                                    IconImageSource="lastfm.png"
                                    Command="{Binding OpenSongInOnlineSearchCommand}"
                                    CommandParameter="youtube"
                                    />
                                <MenuFlyoutItem
                                    Text="View on Spotify"
                                    IconImageSource="lastfm.png"
                                    Command="{Binding OpenSongInOnlineSearchCommand}"
                                    CommandParameter="spotify"
                                    />
                                <MenuFlyoutItem
                                    Text="View on Deezer"
                                    IconImageSource="lastfm.png"
                                    Command="{Binding OpenSongInOnlineSearchCommand}"
                                    CommandParameter="deezer"
                                    />
                                <MenuFlyoutItem
                                    Text="Share Title Only"
                                    Clicked="ShowBtmSheet_Clicked"
                                    IconImageSource="textitalicsquare.png"
                                    />
                            </MenuFlyout>
                        </FlyoutBase.ContextFlyout>
                    </Button>
                    <Button
                        Text="Reload"
                        Command="{Binding LoadStatsForSelectedSongCommand}"
                        CommandParameter="{Binding SelectedSong}"
                        />
                </HorizontalStackLayout>
            </VerticalStackLayout>
            <Grid Grid.Column="0" BackgroundColor="Transparent">
                <Border x:Name="BorderUnderImageDomm"
                    Opacity="0.01"
                    ZIndex="1"
                    BackgroundColor="{Binding SelectedSecondDomColor}"
                    />
                <Image
                    VerticalOptions="Start"
                    HeightRequest="260"
                    Opacity="0.6"
                    Source="{Binding SelectedSong.CoverImagePath}"
                    />

            </Grid>
        </Grid>




        <ScrollView x:Name="LeftView"
            Grid.Row="1"
            IsVisible="False"
            >
            <VerticalStackLayout Padding="15" Spacing="10">

                <VerticalStackLayout.GestureRecognizers>
                    <DropGestureRecognizer x:Name="SidePage"
                        AllowDrop="True"
                        DragOver="SidePage_DragOver"
                        Drop="SidePage_Drop"
                        />
                </VerticalStackLayout.GestureRecognizers>

                <syncf:SfExpander x:Name="TopExpanderView"
                    Expanded="TopExpanderView_Expanded"
                    Collapsed="TopExpanderView_Collapsed"
                    >
                    <syncf:SfExpander.Header>
                        <Border StrokeShape="RoundRectangle 8" StrokeThickness="0">
                            <VerticalStackLayout>
                                <HorizontalStackLayout HorizontalOptions="Center">

                                    <Button
                                        Text="{Binding CurrentPlayingSongView.Title}"
                                        BackgroundColor="Transparent"
                                        Command="{Binding PlayPauseToggleCommand}"
                                        />
                                </HorizontalStackLayout>
                                <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                                    <Label
                                        Grid.Column="0"
                                        TextColor="DarkSlateBlue"
                                        Text="{Binding CurrentTrackPositionPercentage, StringFormat='{0:n1}'}"
                                        />
                                    <Label Text="%" />

                                </HorizontalStackLayout>

                            </VerticalStackLayout>
                        </Border>
                    </syncf:SfExpander.Header>

                    <syncf:SfExpander.Content>
                        <VerticalStackLayout>

                            <Grid x:Name="SecondA"
                                Grid.Row="1"
                                ColumnDefinitions="auto,auto"
                                ColumnSpacing="5"
                                HorizontalOptions="Center"
                                VerticalOptions="Center"
                                >

                                <HorizontalStackLayout x:Name="MediaBtns"
                                    Grid.Row="0"
                                    HeightRequest="50"
                                    Spacing="10"
                                    VerticalOptions="Center"
                                    >
                                    <syncf:SfChip x:Name="SkipPrev"
                                        windows:VisualElement.AccessKey="B"
                                        windows:VisualElement.AccessKeyPlacement="Right"
                                        Background="Transparent"
                                        Command="{Binding PreviousTrackCommand}"
                                        ImageSource="skipprevious.png"
                                        StyleClass="MediaBtnChip"
                                        />
                                    <syncf:SfChip x:Name="PlayPauseBtn"
                                        windows:VisualElement.AccessKey="P"
                                        windows:VisualElement.AccessKeyPlacement="Right"
                                        Background="Transparent"
                                        Command="{Binding PlayPauseToggleCommand}"
                                        ImageSource="play.png"
                                        StyleClass="MediaBtnChip"
                                        >
                                        <syncf:SfChip.Triggers>
                                            <DataTrigger
                                                Binding="{Binding IsPlaying}"
                                                TargetType="syncf:SfChip"
                                                Value="true"
                                                >
                                                <Setter Property="ImageSource" Value="pause.png" />
                                            </DataTrigger>

                                            <DataTrigger
                                                Binding="{Binding IsPlaying}"
                                                TargetType="syncf:SfChip"
                                                Value="false"
                                                >
                                                <Setter Property="ImageSource" Value="play.png" />
                                            </DataTrigger>
                                        </syncf:SfChip.Triggers>
                                    </syncf:SfChip>
                                    <syncf:SfChip x:Name="SkipNext"
                                        windows:VisualElement.AccessKey="N"
                                        windows:VisualElement.AccessKeyPlacement="Right"
                                        Background="Transparent"
                                        Command="{Binding NextTrackCommand}"
                                        ImageSource="skipnext.png"
                                        StyleClass="MediaBtnChip"
                                        />


                                </HorizontalStackLayout>

                                <Grid
                                    Grid.Column="1"
                                    ColumnDefinitions="auto,*,auto"
                                    ColumnSpacing="10"
                                    VerticalOptions="Center"
                                    />
                                <HorizontalStackLayout Grid.Column="2" VerticalOptions="Center">
                                    <syncf:SfChip
                                        Background="Transparent"
                                        Command="{Binding ToggleShuffleCommand}"
                                        ImageSource="shuffle.png"
                                        StyleClass="MediaBtnChip"
                                        >
                                        <syncf:SfChip.Triggers>
                                            <DataTrigger
                                                Binding="{Binding IsShuffleActive}"
                                                TargetType="syncf:SfChip"
                                                Value="True"
                                                >
                                                <Setter Property="Stroke" Value="DarkSlateBlue" />


                                            </DataTrigger>
                                        </syncf:SfChip.Triggers>
                                    </syncf:SfChip>


                                </HorizontalStackLayout>



                            </Grid>
                            <Grid ColumnDefinitions="180" HorizontalOptions="Center">
                                <FlyoutBase.ContextFlyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem x:Name="ViewSongMFI"
                                            Text="View"
                                            CommandParameter="{Binding CurrentPlayingSongView}"
                                            Clicked="ViewSongMFI_Clicked"
                                            />

                                    </MenuFlyout>
                                </FlyoutBase.ContextFlyout>

                                <Border
                                    Padding="5,5,5,0"
                                    BackgroundColor="#2C2C2C"
                                    VerticalOptions="End"
                                    StrokeShape="RoundRectangle 5,5,0,0"
                                    >

                                    <VerticalStackLayout>
                                        <VerticalStackLayout.Resources>
                                            <Style TargetType="Label">
                                                <Setter Property="TextColor" Value="#999999" />
                                            </Style>
                                        </VerticalStackLayout.Resources>
                                        <Label Text="{Binding CurrentPlayingSongView.Title}" />
                                        <Label Text="{Binding CurrentPlayingSongView.DurationInSeconds, Converter={converters:DurationConverterFromMsToTimeSpan}}" />
                                    </VerticalStackLayout>

                                </Border>
                            </Grid>

                        </VerticalStackLayout>
                    </syncf:SfExpander.Content>

                </syncf:SfExpander>

                <VerticalStackLayout x:Name="RestOfLeftUI">

                    <!--  Cover Art and Main Info  -->
                    <Border
                        StrokeShape="RoundRectangle 8"
                        StrokeThickness="0"
                        HorizontalOptions="Center"
                        >
                        <ImageButton x:Name="ViewSongDetails"
                            windows:VisualElement.AccessKey="V"
                            HeightRequest="200"
                            Clicked="ViewSongDetails_Clicked"
                            WidthRequest="200"
                            Aspect="AspectFill"
                            Source="{Binding SelectedSong.CoverImagePath}"
                            />
                    </Border>

                    <syncf:SfEffectsView windows:VisualElement.AccessKey="T" TouchUp="ViewSongDetails_Clicked">

                        <Label
                            Text="{Binding SelectedSong.Title}"
                            FontSize="38"
                            FontAttributes="Bold"
                            HorizontalOptions="Center"
                            HorizontalTextAlignment="Center"
                            />
                    </syncf:SfEffectsView>


                    <syncf:SfChip x:Name="ViewArtist"
                        Margin="0,-5,0,10"
                        TextColor="{AppThemeBinding Dark=White,
                                                    Light=Black}"
                        Clicked="ViewArtist_Clicked"
                        StrokeThickness="0.4"
                        CommandParameter="{Binding SelectedSong}"
                        Text="{Binding SelectedSong.OtherArtistsName}"
                        FontSize="20"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        />

                    <Label x:Name="ViewAlbum"
                        Margin="0,-5,0,10"
                        TextColor="{AppThemeBinding Dark=White,
                                                    Light=Black}"
                        FontAttributes="Italic"
                        LineBreakMode="TailTruncation"
                        Text="{Binding SelectedSong.AlbumName}"
                        FontSize="14"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        />

                    <!--  Quick Actions  -->
                    <syncf:SfChip
                        Command="{Binding AddFavoriteRatingToSongCommand}"
                        ShowIcon="True"
                        CommandParameter="{Binding SelectedSong}"
                        ImageSize="50"
                        WidthRequest="65"
                        StrokeThickness="0"
                        >
                        <syncf:SfChip.Triggers>
                            <DataTrigger
                                Binding="{Binding SelectedSong.IsFavorite}"
                                TargetType="syncf:SfChip"
                                Value="True"
                                >
                                <Setter Property="BackgroundColor" Value="DarkSlateBlue" />
                                <Setter Property="ImageSource" Value="heart.png" />
                            </DataTrigger>
                            <DataTrigger
                                Binding="{Binding SelectedSong.IsFavorite}"
                                TargetType="syncf:SfChip"
                                Value="False"
                                >
                                <Setter Property="ImageSource" Value="heart.png" />
                                <Setter Property="BackgroundColor" Value="Transparent" />
                            </DataTrigger>
                        </syncf:SfChip.Triggers>
                    </syncf:SfChip>

                    <!--  Tags Section  -->

                    <!--  User Note Section  -->
                    <Label Text="{Binding SelectedSong.TrackNumber, StringFormat='# : {0}'}" Style="{StaticResource SectionHeader}" />
                    <Label Text="{Binding SelectedSong.ReleaseYear, StringFormat='Release Year : {0}'}" Style="{StaticResource SectionHeader}" />
                    <Label Text="{Binding SelectedSong.DateCreated, StringFormat='Created on : {0: ddd, MM yyy - hh:mm}', Converter={StaticResource DateTimeConverter}}" Style="{StaticResource SectionHeader}" />
                    <Label Text="{Binding SelectedSong.PlayCount, StringFormat='Number of Dimms : {0}'}" Style="{StaticResource SectionHeader}" />
                    <Button
                        Text="Delete"
                        CommandParameter="{Binding SelectedSong}"
                        HorizontalOptions="Start"
                        />

                    <!--  File Properties  -->
                    <Label Text="File Properties" Style="{StaticResource SectionHeader}" />
                    <Grid
                        ColumnDefinitions="Auto, *"
                        RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                        RowSpacing="5"
                        >
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            Text="Path:"
                            Style="{StaticResource FieldLabel}"
                            />

                        <syncf:SfEffectsView x:Name="ViewFileFolder"
                            Grid.Row="0"
                            Grid.Column="1"
                            TouchDown="ViewFileFolder_TouchDown"
                            >
                            <Label
                                Grid.Row="0"
                                Grid.Column="1"
                                Text="{Binding SelectedSong.FilePath}"
                                LineBreakMode="TailTruncation"
                                />
                        </syncf:SfEffectsView>
                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            Text="Size:"
                            Style="{StaticResource SectionHeader}"
                            />
                        <Label
                            Grid.Row="1"
                            Grid.Column="1"
                            Text="{Binding SelectedSong.FileSize, Converter={StaticResource FileSizeConverter}}"
                            />

                        <Label
                            Grid.Row="2"
                            Grid.Column="0"
                            Text="Format:"
                            Style="{StaticResource SectionHeader}"
                            />
                        <Label
                            Grid.Row="2"
                            Grid.Column="1"
                            Text="{Binding SelectedSong.FileFormat, StringFormat='{0}'}"
                            >
                            <!--<Label.BindingContext>
                            <MultiBinding>
                                <Binding Path="SelectedSong.FileFormat"/>
                                <Binding Path="SelectedSong.BitRate"/>
                            </MultiBinding>
                        </Label.BindingContext>-->
                        </Label>

                        <Label
                            Grid.Row="3"
                            Grid.Column="0"
                            Text="Date Added:"
                            Style="{StaticResource FieldLabel}"
                            />
                        <Label
                            Grid.Row="3"
                            Grid.Column="1"
                            Text="{Binding SelectedSong.DateCreated, Converter={StaticResource DateTimeConverter}}"
                            />
                    </Grid>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <Grid Grid.Row="1">
            <Grid x:Name="ArtistAlbumView"
                IsVisible="False"
                RowDefinitions="auto,*"
                >

                <VerticalStackLayout Grid.Row="0">
                    <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">

                        <Label
                            IsVisible="True"
                            Text="{Binding SelectedSong.ArtistName}"
                            HorizontalTextAlignment="Center"
                            FontSize="Header"
                            />

                        <Label
                            Text="{Binding SearchResults.Count, StringFormat='{0} Songs'}"
                            VerticalOptions="Center"
                            HorizontalOptions="End"
                            />
                    </HorizontalStackLayout>

                </VerticalStackLayout>
                <CollectionView x:Name="SongsColView"
                    Grid.Row="1"
                    ItemTemplate="{StaticResource GridOfFour}"
                    ItemsSource="{Binding SearchResults}"
                    >
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout
                            Span="6"
                            VerticalItemSpacing="10"
                            HorizontalItemSpacing="10"
                            Orientation="Vertical"
                            />
                    </CollectionView.ItemsLayout>
                </CollectionView>

            </Grid>

            <syncf:SfTabView x:Name="SongTabView"
                SelectionChanged="SongTabView_SelectionChanged"
                BackgroundColor="Transparent"
                EnableSwiping="True"
                TabBarPlacement="Top"
                IsVisible="True"
                >

                <syncf:SfTabItem Header="Overview">
                    <syncf:SfTabItem.Content>
                        <Grid RowDefinitions="auto,*">


                            <Grid
                                Grid.Row="1"
                                Grid.ColumnSpan="2"
                                Margin="10"
                                >
                                <Grid RowDefinitions="auto,*" RowSpacing="10">
                                    <Grid
                                        Grid.Row="0"
                                        ColumnDefinitions="*,*"
                                        ColumnSpacing="10"
                                        >
                                        <Border
                                            Grid.Column="0"
                                            Padding="10"
                                            Stroke="{Binding CurrentPlaySongDominantColor}"
                                            >

                                            <VerticalStackLayout>


                                                <HorizontalStackLayout Spacing="10">
                                                    <VerticalStackLayout>

                                                        <Label Text="{Binding SelectedSong.EddingtonNumber, StringFormat='Eddington Number : {0}'}" />
                                                        <Label Text="{Binding SelectedSong.PopularityScore, StringFormat='Popularity Score : {0}'}" />
                                                        <Label Text="{Binding SelectedSong.TrackNumber, StringFormat='Popularity Score : {0}'}" />
                                                    </VerticalStackLayout>

                                                    <VerticalStackLayout>

                                                        <Label Text="{Binding SongAverageListenThrough.Name}" />
                                                        <Label Text="{Binding SongAverageListenThrough.Value, StringFormat='{0:n2}%'}" />

                                                    </VerticalStackLayout>

                                                </HorizontalStackLayout>




                                            </VerticalStackLayout>

                                        </Border>
                                        <Border
                                            Grid.Column="1"
                                            Padding="10"
                                            Stroke="{Binding CurrentPlaySongDominantColor}"
                                            ToolTipProperties.Text="{Binding SelectedSong.SyncLyrics, StringFormat='Lyrics: {0}'}"
                                            >

                                            <VerticalStackLayout>
                                                <Label
                                                    Text="Length"
                                                    FontSize="Medium"
                                                    FontAttributes="Bold"
                                                    />
                                                <Label Text="{Binding SelectedSong.DurationInSeconds, StringFormat='{0}', Converter={converters:DurationConverterFromMsToTimeSpan}}" />

                                                <Label
                                                    Text="Lyrics"
                                                    FontSize="Medium"
                                                    FontAttributes="Bold"
                                                    />
                                                <HorizontalStackLayout>

                                                    <Label Text="{Binding SelectedSong.SyncLyrics.Length, StringFormat='{0} Xters'}" />
                                                    <ImageButton x:Name="ViewLyricsIndex"
                                                        HeightRequest="30"
                                                        Clicked="ViewLyricsIndex_Clicked"
                                                        Source="roundaltarrowright.png"
                                                        />
                                                </HorizontalStackLayout>



                                            </VerticalStackLayout>

                                        </Border>
                                    </Grid>

                                    <Grid Grid.Row="1" ColumnDefinitions="*,*">

                                        <CollectionView
                                            Grid.Column="0"
                                            HorizontalOptions="Start"
                                            WidthRequest="340"
                                            ItemsSource="{Binding SelectedSong.PlayEvents}"
                                            >
                                            <CollectionView.ItemsLayout>
                                                <LinearItemsLayout ItemSpacing="10" Orientation="Vertical" />
                                            </CollectionView.ItemsLayout>
                                            <CollectionView.ItemTemplate>
                                                <DataTemplate x:DataType="models:DimmerPlayEventView">
                                                    <Border
                                                        Margin="10,10"
                                                        Stroke="DarkSlateBlue"
                                                        BackgroundColor="Transparent"
                                                        StrokeThickness="1"
                                                        >
                                                        <Border.Triggers>
                                                            <DataTrigger
                                                                TargetType="Border"
                                                                Binding="{Binding PlayTypeStr}"
                                                                Value="Play"
                                                                >
                                                                <Setter Property="Stroke" Value="DarkSlateBlue" />
                                                            </DataTrigger>
                                                            <DataTrigger
                                                                TargetType="Border"
                                                                Binding="{Binding PlayTypeStr}"
                                                                Value="Completed"
                                                                >
                                                                <Setter Property="Stroke" Value="ForestGreen" />
                                                            </DataTrigger>
                                                            <DataTrigger
                                                                TargetType="Border"
                                                                Binding="{Binding PlayTypeStr}"
                                                                Value="Skipped"
                                                                >
                                                                <Setter Property="Stroke" Value="LightCoral" />
                                                            </DataTrigger>


                                                            <DataTrigger
                                                                TargetType="Border"
                                                                Binding="{Binding PlayTypeStr}"
                                                                Value="Seeked"
                                                                >
                                                                <Setter Property="Stroke" Value="LightSteelBlue" />
                                                            </DataTrigger>

                                                            <DataTrigger
                                                                TargetType="Border"
                                                                Binding="{Binding PlayTypeStr}"
                                                                Value="Pause"
                                                                >
                                                                <Setter Property="Stroke" Value="RosyBrown" />
                                                            </DataTrigger>


                                                        </Border.Triggers>
                                                        <HorizontalStackLayout Padding="10" Spacing="10">
                                                            <Label Text="{Binding PlayTypeStr}" WidthRequest="80" />
                                                            <Label Text="{Binding DatePlayed, Converter={converters:DateTimeOffsetToLocalDateConverter}}" WidthRequest="180" />
                                                            <Label Text="{Binding PositionInSeconds, StringFormat='{0:n2}s'}" IsVisible="False">
                                                                <Label.Triggers>
                                                                    <DataTrigger
                                                                        TargetType="Label"
                                                                        Binding="{Binding PlayTypeStr}"
                                                                        Value="Seeked"
                                                                        >
                                                                        <Setter Property="IsVisible" Value="True" />
                                                                    </DataTrigger>
                                                                    <DataTrigger
                                                                        TargetType="Label"
                                                                        Binding="{Binding PlayTypeStr}"
                                                                        Value="Pause"
                                                                        >
                                                                        <Setter Property="IsVisible" Value="True" />
                                                                    </DataTrigger>
                                                                </Label.Triggers>
                                                            </Label>
                                                        </HorizontalStackLayout>
                                                    </Border>
                                                </DataTemplate>
                                            </CollectionView.ItemTemplate>
                                        </CollectionView>

                                        <VerticalStackLayout Grid.Column="1">
                                            <Label Text="Collection View Filters" />
                                            <CheckBox x:Name="ShowOnlyCompletedPlays" CheckedChanged="ShowOnlyCompletedPlays_CheckedChanged" />
                                            <CheckBox x:Name="ShowOnlySkippedPlays" CheckedChanged="ShowOnlySkippedPlays_CheckedChanged" />

                                        </VerticalStackLayout>

                                    </Grid>
                                </Grid>
                            </Grid>

                        </Grid>
                    </syncf:SfTabItem.Content>
                </syncf:SfTabItem>


                <syncf:SfTabItem Header="Edit Lyrics">
                    <syncf:SfTabItem.Content>
                        <Grid
                            Margin="5"
                            ColumnDefinitions="*,*"
                            ColumnSpacing="10"
                            >


                            <VerticalStackLayout Grid.Column="0" Spacing="10">

                                <HorizontalStackLayout Spacing="10">

                                    <Button x:Name="PasteFromClipBoard"
                                        VerticalOptions="Start"
                                        Text="Paste From Clipboard"
                                        ToolTipProperties.Text="Paste From Clipboard"
                                        Clicked="PasteFromClipBoard_Clicked"
                                        BackgroundColor="Transparent"
                                        ImageSource="clipboard.png"
                                        HeightRequest="40"
                                        BorderWidth="1"
                                        >
                                        <Button.Behaviors>
                                            <toolkit:IconTintColorBehavior TintColor="DarkSlateBlue" />
                                        </Button.Behaviors>
                                    </Button>
                                    <Button x:Name="LoadFromTxtFile"
                                        VerticalOptions="Start"
                                        Text="Load From Text File"
                                        Command="{Binding LoadPlainLyricsFromFileCommand}"
                                        HeightRequest="40"
                                        BackgroundColor="Transparent"
                                        BorderWidth="1"
                                        ImageSource="fileinfoa.png"
                                        >
                                        <Button.Behaviors>
                                            <toolkit:IconTintColorBehavior TintColor="DarkSlateBlue" />
                                        </Button.Behaviors>
                                    </Button>

                                </HorizontalStackLayout>
                                <Editor x:Name="PlainLyricsEditor"
                                    HeightRequest="400"
                                    Placeholder="Paste Plain Lyrics Here"
                                    />
                            </VerticalStackLayout>


                            <Grid
                                Grid.Column="1"
                                RowDefinitions="*,auto"
                                RowSpacing="10"
                                >

                                <CollectionView ItemsSource="{Binding LyricsInEditor}">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate x:DataType="models:LyricEditingLineViewModel">
                                            <Grid
                                                Margin="10"
                                                ColumnSpacing="10"
                                                ColumnDefinitions="auto,*,auto,auto"
                                                >

                                                <Label Grid.Column="0" Text="{Binding Timestamp}" />
                                                <Editor x:Name="SyncLyricEditor"
                                                    Grid.Column="1"
                                                    TextChanged="SyncLyricEditor_TextChanged"
                                                    Text="{Binding Text}"
                                                    />
                                                <ImageButton x:Name="DeleteCurrentLyricLineBtn"
                                                    Grid.Column="2"
                                                    Source="delete.png"
                                                    Clicked="DeleteCurrentLyricLineBtn_Clicked"
                                                    CommandParameter="{Binding .}"
                                                    />
                                                <ImageButton x:Name="TimestampCurrentLyricLineBtn"
                                                    Grid.Column="3"
                                                    Source="time.png"
                                                    Clicked="TimestampCurrentLyricLineBtn_Clicked"
                                                    CommandParameter="{Binding .}"
                                                    />
                                            </Grid>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>

                                <HorizontalStackLayout
                                    Grid.Row="1"
                                    HorizontalOptions="Center"
                                    Spacing="10"
                                    >

                                    <Button Text="Save Lyrics" Command="{Binding SaveTimestampedLyricsCommand}" />
                                    <Button
                                        Text="Cancel"
                                        BackgroundColor="DarkRed"
                                        Command="{Binding CancelLyricsEditingSessionCommand}"
                                        />
                                </HorizontalStackLayout>
                            </Grid>
                        </Grid>
                    </syncf:SfTabItem.Content>
                </syncf:SfTabItem>


                <syncf:SfTabItem Header="Lyrics search">
                    <syncf:SfTabItem.Content>
                        <VerticalStackLayout
                            Grid.Row="0"
                            Padding="15"
                            IsVisible="True"
                            >
                            <Label Text="Find Lyrics Online" Style="{StaticResource SectionHeader}" />
                            <VerticalStackLayout
                                HorizontalOptions="Start"
                                WidthRequest="300"
                                Spacing="10"
                                >
                                <Entry x:Name="SongTitleEntry"
                                    Placeholder="Song Title"
                                    Text="{Binding LyricsTrackNameSearch}"
                                    HorizontalOptions="Fill"
                                    Focused="SongTitleEntry_Focused"
                                    />
                                <Entry x:Name="SongArtistNameEntry"
                                    Placeholder="Artist Name"
                                    ReturnCommandParameter="art"
                                    Focused="SongArtistNameEntry_Focused"
                                    Text="{Binding LyricsArtistNameSearch}"
                                    HorizontalOptions="Fill"
                                    />
                                <Entry x:Name="SongAlbumName"
                                    Placeholder="Album Name"
                                    Text="{Binding LyricsAlbumNameSearch}"
                                    ReturnCommandParameter="alb"
                                    Focused="SongAlbumName_Focused"
                                    HorizontalOptions="Fill"
                                    />
                                <Button Text="Search" Command="{Binding SearchLyricsCommand}" />
                            </VerticalStackLayout>
                            <ActivityIndicator IsRunning="{Binding IsLyricsSearchBusy}" />
                            <CollectionView ItemsSource="{Binding LyricsSearchResults}" EmptyView="No results found.">
                                <CollectionView.ItemsLayout>
                                    <GridItemsLayout
                                        Span="3"
                                        Orientation="Vertical"
                                        HorizontalItemSpacing="10"
                                        VerticalItemSpacing="10"
                                        />
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="models:LrcLibSearchResult">
                                        <Border>
                                            <VerticalStackLayout>
                                                <Label Text="{Binding Name}" />
                                                <Label Text="{Binding ArtistName}" />
                                                <Label Text="{Binding Duration, Converter={converters:DurationConverterFromMsToTimeSpan}}" />
                                                <Label Text="{Binding Instrumental, StringFormat='Is Instrumental: {0}'}" />
                                                <Label Text="{Binding SyncedLyrics}" />
                                                <BoxView HeightRequest="2" Color="DarkSlateBlue" />
                                            </VerticalStackLayout>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>

                    </syncf:SfTabItem.Content>
                </syncf:SfTabItem>
                <syncf:SfTabItem Header="Stats">
                    <syncf:SfTabItem.Content>
                        <Grid RowDefinitions="auto,*">
                            <syncf:SfCircularChart>
                                <syncf:PolarLineSeries ItemsSource="{Binding SelectedSong.PlayEvents}" XBindingPath="" />
                            </syncf:SfCircularChart>
                        </Grid>
                    </syncf:SfTabItem.Content>
                </syncf:SfTabItem>
                <!--  TAB 0: METADATA EDITOR  -->
                <syncf:SfTabItem Header="Edit Metadata">
                    <syncf:SfTabItem.Content>
                        <ScrollView>
                            <Grid>
                                <Image
                                    Source="{Binding SelectedSong.CoverImagePath}"
                                    Aspect="AspectFit"
                                    IsVisible="False"
                                    Opacity="0.10"
                                    />

                                <VerticalStackLayout Padding="15" Spacing="10">
                                    <Label Text="Edit the core information for this song. These changes will be saved directly to the audio file's tags." />

                                    <Grid
                                        RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,*"
                                        RowSpacing="10"
                                        ColumnDefinitions="Auto,*"
                                        >
                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Text="Title"
                                            Style="{StaticResource FieldLabel}"
                                            />
                                        <Entry
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Text="{Binding SelectedSong.Title}"
                                            />

                                        <Label
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Text="Artist(s)"
                                            Style="{StaticResource FieldLabel}"
                                            />
                                        <HorizontalStackLayout Grid.Row="1" Grid.Column="1">
                                            <Entry Text="{Binding SelectedSong.OtherArtistsName}" Placeholder="e.g. Artist A, Artist B" />
                                            <Picker ItemsSource="{Binding AllArtistsInDb}" ItemDisplayBinding="{Binding Name}" />
                                            <Button Command="{Binding LoadAllArtistsFromOurDatabaseCommand}" />
                                        </HorizontalStackLayout>
                                        <Label
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            Text="Album"
                                            Style="{StaticResource FieldLabel}"
                                            />
                                        <Entry
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            Text="{Binding SelectedSong.AlbumName}"
                                            />


                                        <Label
                                            Grid.Row="4"
                                            Grid.Column="0"
                                            Text="Genre"
                                            Style="{StaticResource FieldLabel}"
                                            />
                                        <Entry
                                            Grid.Row="4"
                                            Grid.Column="1"
                                            Text="{Binding SelectedSong.GenreName}"
                                            />

                                        <Label
                                            Grid.Row="5"
                                            Grid.Column="0"
                                            Text="Year"
                                            Style="{StaticResource FieldLabel}"
                                            />
                                        <Entry
                                            Grid.Row="5"
                                            Grid.Column="1"
                                            Text="{Binding SelectedSong.ReleaseYear}"
                                            Keyboard="Numeric"
                                            />

                                        <Label
                                            Grid.Row="6"
                                            Grid.Column="0"
                                            Text="Tags"
                                            VerticalOptions="Start"
                                            Style="{StaticResource FieldLabel}"
                                            />
                                        <VerticalStackLayout
                                            Grid.Row="6"
                                            Grid.Column="1"
                                            Spacing="10"
                                            >
                                            <syncf:SfChipGroup ItemsSource="{Binding SelectedSong.UserNoteAggregatedText}">

                                                <syncf:SfChipGroup.ItemTemplate>
                                                    <DataTemplate x:DataType="models:UserNoteModelView">
                                                        <Label Margin="10" Text="{Binding UserMessageText}">
                                                            <!--<FlyoutBase.ContextFlyout>
                                                                    <MenuFlyout>
                                                                        <MenuFlyoutItem Text="Edit"/>
                                                                        <MenuFlyoutItem IsDestructive="True"
                            Text="Delete"/>
                                                                    </MenuFlyout>
                                                                </FlyoutBase.ContextFlyout>-->
                                                        </Label>
                                                    </DataTemplate>
                                                </syncf:SfChipGroup.ItemTemplate>
                                            </syncf:SfChipGroup>
                                            <HorizontalStackLayout IsVisible="False">
                                                <Entry
                                                    Placeholder="Add a new tag..."
                                                    Text="{Binding CurrentNoteToSave}"
                                                    HorizontalOptions="Fill"
                                                    />

                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>
                                    </Grid>

                                    <HorizontalStackLayout
                                        Margin="0,20,0,0"
                                        HorizontalOptions="Center"
                                        Spacing="10"
                                        >
                                        <Button Text="Reset" />
                                        <Button Text="Save Changes" FontAttributes="Bold" />
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </Grid>
                        </ScrollView>
                    </syncf:SfTabItem.Content>
                </syncf:SfTabItem>

                <!--  TAB 1: LYRICS MANAGEMENT  -->
                <syncf:SfTabItem Header="Lyrics" IsVisible="True">
                    <syncf:SfTabItem.Content>
                        <Grid RowDefinitions="Auto, *">
                            <VerticalStackLayout>
                                <Label Text="{Binding SelectedSong.SyncLyrics.Length, StringFormat='Sync Lyrics Count: {0}'}" />
                            </VerticalStackLayout>
                            <Grid Grid.Row="1" ColumnDefinitions="*">

                                <Grid Grid.Column="0" ColumnDefinitions="auto,*">
                                    <VerticalStackLayout Grid.Column="0" Spacing="20">
                                        <Button Text="Contribute To LrcLib" Command="{Binding ContributeToLrcLibCommand}" />

                                        <ScrollView HeightRequest="500">

                                            <Label CharacterSpacing="2" Text="{Binding SelectedSong.SyncLyrics}" />

                                        </ScrollView>
                                    </VerticalStackLayout>
                                    <CollectionView Grid.Column="1" ItemsSource="{Binding SelectedSong.EmbeddedSync}">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate x:DataType="models:LyricPhraseModelView">
                                                <Grid ColumnDefinitions="0.3*,*,0.3*">
                                                    <Border Grid.Column="0" StrokeThickness="1">
                                                        <Label Text="{Binding TimeStampMs}" />
                                                    </Border>

                                                    <Border Grid.Column="1">

                                                        <Label TextColor="{AppThemeBinding Dark=White, Light=Black}" Text="{Binding Text}" />
                                                    </Border>

                                                    <HorizontalStackLayout Grid.Column="2">
                                                        <ImageButton Source="edit.png" />
                                                    </HorizontalStackLayout>
                                                </Grid>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </Grid>
                            </Grid>
                        </Grid>
                    </syncf:SfTabItem.Content>
                </syncf:SfTabItem>


                <!--  TAB 2: MANUAL LYRICS SYNCER  -->

                <!--  Tab 3: Cover Image Management  -->
                <syncf:SfTabItem Header="Cover Image">
                    <syncf:SfTabItem.Content>
                        <Grid RowDefinitions="auto,*">
                            <Image
                                Source="{Binding SelectedSong.CoverImagePath}"
                                Opacity="0.2"
                                Aspect="AspectFit"
                                />
                            <VerticalStackLayout Grid.Row="0" Spacing="10">

                                <Editor Text="{Binding SelectedSong.Title}" />

                                <Editor Text="{Binding SelectedSong.ArtistName}" />

                                <Editor Text="{Binding SelectedSong.AlbumName}" />


                                <HorizontalStackLayout Spacing="15">
                                    <ImageButton x:Name="SearchSongOnline"
                                        Source="searchd.png"
                                        Clicked="SearchSongOnline_Clicked"
                                        >
                                        <ImageButton.Behaviors>
                                            <toolkit:IconTintColorBehavior TintColor="DarkSlateBlue" />
                                        </ImageButton.Behaviors>
                                    </ImageButton>
                                    <ImageButton x:Name="PickSongImageFromFolder"
                                        Source="folderopen.png"
                                        Command="{Binding PickSongImageFromFolderCommand}"
                                        >
                                        <ImageButton.Behaviors>
                                            <toolkit:IconTintColorBehavior TintColor="DarkSlateBlue" />
                                        </ImageButton.Behaviors>
                                    </ImageButton>

                                    <ImageButton x:Name="SaveCurrentCoverToDisc"
                                        Source="savea.png"
                                        Clicked="SaveCurrentCoverToDisc_Clicked"
                                        >
                                        <ImageButton.Behaviors>
                                            <toolkit:IconTintColorBehavior TintColor="DarkSlateBlue" />
                                        </ImageButton.Behaviors>
                                    </ImageButton>
                                </HorizontalStackLayout>

                                <HorizontalStackLayout Spacing="40">
                                    <VerticalStackLayout>
                                        <FlyoutBase.ContextFlyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem x:Name="ApplyCurrentImageToCurrPlayingSong"
                                                    Text="Apply This Image To Current Playing Song"
                                                    Clicked="ApplyCurrentImageToCurrentPlayingSong_Clicked"
                                                    />
                                                <MenuFlyoutItem x:Name="ApplyCurrentImageToAllSongsInAlbum"
                                                    Text="Apply This Image To All Songs In Album"
                                                    Clicked="ApplyCurrentImageToAllSongsInAlbum_Clicked"
                                                    />
                                                <MenuFlyoutItem x:Name="ApplyCurrentImageToMainArtist"
                                                    Text="Apply This Image To Main Artist In Album"
                                                    Clicked="ApplyCurrentImageToMainArtist_Clicked"
                                                    />
                                            </MenuFlyout>
                                        </FlyoutBase.ContextFlyout>
                                        <Label Text="Current Image" FontSize="Header" />
                                        <Image Aspect="Center" Source="{Binding SelectedSong.CoverImagePath}" />
                                    </VerticalStackLayout>
                                    <VerticalStackLayout>
                                        <Label Text="Current Image" FontSize="Header" />
                                        <Image
                                            HeightRequest="400"
                                            WidthRequest="400"
                                            Source="{Binding SelectedSongLastFMData.Images[5].Url}"
                                            />
                                    </VerticalStackLayout>
                                </HorizontalStackLayout>

                            </VerticalStackLayout>

                            <CollectionView Grid.Row="1" ItemsSource="{Binding SelectedSongLastFMData.Images}">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="lastfmmodels:Image">
                                        <Border
                                            Margin="5"
                                            StrokeShape="RoundRectangle 8"
                                            StrokeThickness="0"
                                            >
                                            <VerticalStackLayout>

                                                <Image
                                                    Source="{Binding Url}"
                                                    Aspect="AspectFill"
                                                    HeightRequest="200"
                                                    WidthRequest="200"
                                                    />

                                                <HorizontalStackLayout>

                                                    <syncf:SfChip x:Name="SaveImageFromLastFM"
                                                        ImageSource="savea.png"
                                                        Clicked="SaveImageFromLastFM_Clicked"
                                                        CommandParameter="{Binding .}"
                                                        />

                                                </HorizontalStackLayout>
                                            </VerticalStackLayout>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </Grid>

                    </syncf:SfTabItem.Content>
                </syncf:SfTabItem>


            </syncf:SfTabView>
        </Grid>

        <syncf:SfPopup x:Name="SongDetailsPopup">
            <syncf:SfPopup.HeaderTemplate>
                <DataTemplate>
                    <VerticalStackLayout>
                        <Label Text="Song Details" FontSize="20" />

                    </VerticalStackLayout>
                </DataTemplate>
            </syncf:SfPopup.HeaderTemplate>
            <syncf:SfPopup.ContentTemplate>
                <DataTemplate>
                    <Border>

                        <VerticalStackLayout>
                            <Grid ColumnDefinitions="*,*">
                                <Label Grid.Column="0" Text="" />
                                <Label Grid.Column="1" Text="{Binding SelectedSong.Title}" />
                            </Grid>
                            <Grid ColumnDefinitions="*,*">
                                <Label Grid.Column="0" Text="" />
                                <Label Grid.Column="1" Text="{Binding SelectedSong.ArtistName}" />
                            </Grid>
                            <Grid ColumnDefinitions="*,*">
                                <Label Grid.Column="0" Text="" />
                                <Label Grid.Column="1" Text="{Binding SelectedSong.AlbumName}" />
                            </Grid>
                            <Grid ColumnDefinitions="*,*">
                                <Label Grid.Column="0" Text="" />
                                <Label Grid.Column="1" Text="{Binding SelectedSong.OtherArtistsName}" />
                            </Grid>
                            <Grid ColumnDefinitions="*,*">
                                <Label Grid.Column="0" Text="File Path" />
                                <Button x:Name="OpenFileInFileExplorer"
                                    Grid.Column="1"
                                    BackgroundColor="Transparent"
                                    Clicked="OpenFileInFileExplorer_Clicked"
                                    ToolTipProperties.Text="{Binding SelectedSong.FilePath}"
                                    Text="{Binding SelectedSong.FilePath}"
                                    />
                            </Grid>
                            <Grid ColumnDefinitions="*,*">
                                <Label Grid.Column="0" Text="Cover Image" />
                                <ImageButton
                                    Grid.Column="1"
                                    Source="{Binding SelectedSong.CoverImagePath}"
                                    Clicked="SaveCurrentCoverToDisc_Clicked"
                                    ToolTipProperties.Text="{Binding SelectedSong.CoverImagePath}"
                                    />
                            </Grid>
                            <Grid ColumnDefinitions="*,*">
                                <Label Grid.Column="0" Text="" />
                                <ImageButton Grid.Column="1" Source="{Binding SelectedSong.DurationInSeconds, Converter={converters:DurationConverterFromMsToTimeSpan}}" />
                            </Grid>
                            <Grid ColumnDefinitions="*,*">
                                <Label Grid.Column="0" Text="Total Dims" />
                                <ImageButton Grid.Column="1" Source="{Binding SelectedSong.PlayCompletedCount}" />
                            </Grid>
                            <Grid ColumnDefinitions="*,*">
                                <Label Grid.Column="0" Text="Last Played" />
                                <ImageButton Grid.Column="1" Source="{Binding SelectedSong.LastPlayed, Converter={converters:DateTimeOffsetToLocalDateConverter}}" />
                            </Grid>
                            <Grid ColumnDefinitions="*,*">
                                <Label Grid.Column="0" Text="Skip Count" />
                                <ImageButton Grid.Column="1" Source="{Binding SelectedSong.SkipCount}" />
                            </Grid>
                        </VerticalStackLayout>

                    </Border>
                </DataTemplate>
            </syncf:SfPopup.ContentTemplate>
        </syncf:SfPopup>
    </Grid>
</ContentPage>
