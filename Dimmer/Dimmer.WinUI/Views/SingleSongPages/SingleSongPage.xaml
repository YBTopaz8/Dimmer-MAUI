<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Dimmer.WinUI.Views.SingleSongPages.SingleSongPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:Dimmer.Utilities.TypeConverters;assembly=Dimmer"
    xmlns:cw="clr-namespace:Dimmer.WinUI.Views.CustomViews"
    xmlns:lang="clr-namespace:Dimmer.Resources.Localization;assembly=Dimmer"
    xmlns:lastfmmodels="clr-namespace:Hqub.Lastfm.Entities;assembly=Hqub.Lastfm"
    xmlns:libSanity="clr-namespace:Dimmer.Data.ModelView.LibSanityModels;assembly=Dimmer"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    xmlns:models="clr-namespace:Dimmer.Data.ModelView;assembly=Dimmer"
    xmlns:modelsDb="clr-namespace:Dimmer.Data.Models;assembly=Dimmer"
    xmlns:modeltwo="clr-namespace:Dimmer.WinUI.Utils.Models"
    xmlns:syncf="http://schemas.syncfusion.com/maui/toolkit"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:uranium="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
    xmlns:vm="clr-namespace:Dimmer.WinUI.ViewModel"
    xmlns:windows="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.WindowsSpecific;assembly=Microsoft.Maui.Controls"
    x:Name="myPage"
    x:DataType="vm:BaseViewModelWin"
    Shell.FlyoutBehavior="Locked"
    Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <converters:DurationConverterFromMsToTimeSpan x:Key="DurationConverter" />
        <converters:BytesToMegabytesConverter x:Key="FileSizeConverter" />
        <converters:BytesArrayToImageSource x:Key="BytesToImageConverter" />
        <converters:BoolToInverseConverter x:Key="BoolToInverse" />
        <converters:IndexToVisibilityConverter x:Key="IndexToVisibilityConverter" />
        <converters:DateTimeToLocalDateConverter x:Key="DateTimeConverter" />
        <converters:DateTimeToLocalTimeConverter x:Key="DateTimeToTimeConverter" />
        <converters:BoolToYesNoConverter x:Key="BoolToYesNo" />
        <converters:VolumeConverter x:Key="VolConverter" />
        <Style x:Key="SectionHeader" TargetType="Label">
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>
        <Style x:Key="FieldLabel" TargetType="Label">
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>



        <DataTemplate x:Key="GridOfFour" x:DataType="models:SongModelView">
            <Grid ColumnDefinitions="*" HorizontalOptions="Center">
                <FlyoutBase.ContextFlyout>
                    <MenuFlyout>
                        <MenuFlyoutItem
                            x:Name="ViewSongMFI"
                            Clicked="ViewSongMFI_Clicked"
                            CommandParameter="{Binding .}"
                            Text="View" />

                    </MenuFlyout>
                </FlyoutBase.ContextFlyout>
                <Grid.GestureRecognizers>
                    <PointerGestureRecognizer
                        x:Name="SongViewPointer"
                        PointerEntered="SongViewPointer_PointerEntered"
                        PointerExited="SongViewPointer_PointerExited" />
                </Grid.GestureRecognizers>



                <Image
                    HeightRequest="180"
                    HorizontalOptions="Start"
                    Opacity="0.7"
                    Source="{Binding CoverImagePath}">
                    <Image.GestureRecognizers>
                        <DragGestureRecognizer
                            x:Name="SongDrag"
                            CanDrag="True"
                            DragStarting="SongDrag_DragStarting"
                            DragStartingCommandParameter="{Binding .}" />
                    </Image.GestureRecognizers>
                </Image>


                <Border
                    Padding="5,5,5,0"
                    BackgroundColor="#2C2C2C"
                    StrokeShape="RoundRectangle 5,5,0,0"
                    VerticalOptions="End">

                    <VerticalStackLayout x:Name="DetailsView" HeightRequest="60">
                        <VerticalStackLayout.Resources>
                            <Style TargetType="Label">
                                <Setter Property="TextColor" Value="#999999" />
                            </Style>
                        </VerticalStackLayout.Resources>
                        <Label
                            FontSize="Small"
                            Text="{Binding Title}"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}" />
                        <Label FontSize="14" Text="{Binding DurationInSeconds, Converter={converters:DurationConverterFromMsToTimeSpan}}" />
                        <Label
                            FontAttributes="Bold"
                            HorizontalTextAlignment="End"
                            Text="{Binding PlayCompletedCount, StringFormat='{0} Dimms'}"
                            TextColor="SlateBlue">
                            <Label.Triggers>
                                <DataTrigger
                                    Binding="{Binding PlayCompletedCount}"
                                    TargetType="Label"
                                    Value="0">
                                    <Setter Property="FontAttributes" Value="None" />
                                    <Setter Property="TextColor" Value="White" />
                                    <Setter Property="Text" Value="0 Dimm" />
                                </DataTrigger>
                                <DataTrigger
                                    Binding="{Binding PlayCompletedCount}"
                                    TargetType="Label"
                                    Value="1">
                                    <Setter Property="FontAttributes" Value="Italic" />
                                    <Setter Property="TextColor" Value="MediumSlateBlue" />
                                    <Setter Property="Text" Value="1 Dimm" />
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>
                    </VerticalStackLayout>

                </Border>
            </Grid>


        </DataTemplate>

        <ResourceDictionary>
            <Style TargetType="syncf:SfChip">
                <Setter Property="HeightRequest" Value="60" />
            </Style>
        </ResourceDictionary>



        <DataTemplate x:Key="MultiColumnsView">
            <Grid ColumnDefinitions="0.4,*,*,*,*,*,*">
                <HorizontalStackLayout Grid.Column="0" />
                <HorizontalStackLayout Grid.Column="1" />
                <HorizontalStackLayout Grid.Column="2" />
                <HorizontalStackLayout Grid.Column="3" />
                <HorizontalStackLayout Grid.Column="4" />
                <HorizontalStackLayout Grid.Column="5" />

            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="ListeninClickTooltipTemplate" x:DataType="syncf:TooltipInfo">
            <HorizontalStackLayout>
                <Label
                    FontAttributes="Bold"
                    FontSize="21"
                    HorizontalOptions="Center"
                    Text="{Binding Item.Value, StringFormat='{0} Dimms '}"
                    TextColor="DarkSlateBlue"
                    VerticalOptions="Center" />
                <Label
                    FontAttributes="Bold"
                    FontSize="19"
                    HorizontalOptions="Center"
                    Text="{Binding Item.Label, StringFormat=' at {0}'}"
                    TextColor="{AppThemeBinding Dark=White,
                                                Light=Black}"
                    VerticalOptions="Center" />




            </HorizontalStackLayout>
        </DataTemplate>
    </ContentPage.Resources>

    <Grid
        x:Name="SingleSongView"
        BackgroundColor="Transparent"
        RowDefinitions="auto,*">

        <Grid
            Grid.Row="0"
            ColumnDefinitions="auto,*"
            VerticalOptions="Start">
            <Border
                x:Name="BorderNextToImageDomm"
                Grid.Column="1"
                BackgroundColor="{Binding SelectedSecondDomColor}"
                IsVisible="True"
                Opacity="0.5"
                ZIndex="0" />

            <VerticalStackLayout
                Grid.Column="1"
                Padding="20"
                HeightRequest="260"
                Spacing="25"
                ZIndex="1">
                <HorizontalStackLayout Spacing="20">
                    <Button
                        x:Name="ToggleViewArtist"
                        Padding="10"
                        windows:VisualElement.AccessKey="A"
                        windows:VisualElement.AccessKeyPlacement="Bottom"
                        BackgroundColor="Transparent"
                        BorderWidth="1"
                        Clicked="ToggleViewArtist_Clicked"
                        FontSize="19"
                        HorizontalOptions="Start"
                        Text="{Binding SelectedSong.OtherArtistsName}"
                        TextColor="{AppThemeBinding Dark=White,
                                                    Light=Black}" />
                    <Button
                        x:Name="ToggleViewAlbum"
                        Padding="10"
                        windows:VisualElement.AccessKey="D"
                        windows:VisualElement.AccessKeyPlacement="Bottom"
                        BackgroundColor="Transparent"
                        BorderWidth="1"
                        Clicked="ToggleViewAlbum_Clicked"
                        FontSize="12"
                        HorizontalOptions="Start"
                        Text="{Binding SelectedSong.AlbumName}"
                        TextColor="{AppThemeBinding Dark=White,
                                                    Light=Black}" />

                    <Image
                        HeightRequest="60"
                        IsVisible="{Binding SelectedSong.SyncLyrics.Length, Converter={converters:CollectionSizeToVisibility}}"
                        Source="lyrics.png" />

                </HorizontalStackLayout>
                <Button
                    windows:VisualElement.AccessKey="T"
                    BackgroundColor="Transparent"
                    BorderWidth="1"
                    FontAttributes="Bold"
                    FontSize="29"
                    HorizontalOptions="Start"
                    Text="{Binding SelectedSong.Title}"
                    TextColor="{AppThemeBinding Dark=White,
                                                Light=Black}" />
                <HorizontalStackLayout Spacing="20">
                    <Button
                        windows:VisualElement.AccessKey="S"
                        windows:VisualElement.AccessKeyPlacement="Bottom"
                        BackgroundColor="{Binding SelectedSecondDomColor}"
                        BorderColor="DarkSlateBlue"
                        BorderWidth="2"
                        Clicked="PlaySongGestRec_Tapped"
                        FontAttributes="Bold"
                        HeightRequest="60"
                        ImageSource="play.png"
                        TextColor="{AppThemeBinding Dark=White,
                                                    Light=Black}">
                        <Button.Triggers>
                            <DataTrigger
                                Binding="{Binding IsPlaying}"
                                TargetType="Button"
                                Value="true">
                                <Setter Property="ImageSource" Value="pause.png" />
                            </DataTrigger>

                            <DataTrigger
                                Binding="{Binding IsPlaying}"
                                TargetType="Button"
                                Value="false">
                                <Setter Property="ImageSource" Value="play.png" />
                            </DataTrigger>
                        </Button.Triggers>
                    </Button>
                    <Button
                        windows:VisualElement.AccessKey="H"
                        BackgroundColor="Transparent"
                        BorderColor="{Binding SelectedSecondDomColor}"
                        BorderWidth="0.7"
                        Command="{Binding AddFavoriteRatingToSongCommand}"
                        CommandParameter="{Binding SelectedSong}"
                        HeightRequest="65"
                        ImageSource="heart.png"
                        ToolTipProperties.Text="Save Has Favorite"
                        WidthRequest="65">
                        <Button.Triggers>
                            <DataTrigger
                                Binding="{Binding SelectedSong.IsFavorite}"
                                TargetType="Button"
                                Value="False">
                                <Setter Property="ImageSource" Value="heartbroken.png" />

                            </DataTrigger>
                            <DataTrigger
                                Binding="{Binding SelectedSong.IsFavorite}"
                                TargetType="Button"
                                Value="True">
                                <Setter Property="ImageSource" Value="heartlock.png" />


                            </DataTrigger>
                        </Button.Triggers>
                    </Button>

                    <VerticalStackLayout VerticalOptions="Center">
                        <Label
                            FontSize="21"
                            Text="Dimms"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}" />
                        <Label
                            FontSize="19"
                            HorizontalOptions="Center"
                            Text="{Binding SelectedSong.PlayCompletedCount}"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}" />
                    </VerticalStackLayout>

                    <VerticalStackLayout VerticalOptions="Center">

                        <Label
                            FontSize="21"
                            Text="Track Number"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}" />
                        <Label
                            FontSize="19"
                            HorizontalOptions="Center"
                            Text="{Binding SelectedSong.TrackNumber}"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}" />

                    </VerticalStackLayout>

                    <VerticalStackLayout VerticalOptions="Center">

                        <Label
                            FontSize="21"
                            Text="Disc Number"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}"
                            ToolTipProperties.Text="Album Disc Number" />
                        <Label
                            FontSize="19"
                            HorizontalOptions="Center"
                            Text="{Binding SelectedSong.DiscNumber}"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}" />
                    </VerticalStackLayout>

                    <VerticalStackLayout VerticalOptions="Center">

                        <Label
                            FontSize="21"
                            Text="Global Rank"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}" />
                        <Label
                            FontSize="19"
                            HorizontalOptions="Center"
                            Text="{Binding SelectedSong.GlobalRank}"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}" />
                    </VerticalStackLayout>
                    <Button
                        x:Name="MoreBtn"
                        BackgroundColor="Transparent"
                        BorderColor="DarkSlateBlue"
                        BorderWidth="1"
                        Clicked="MoreBtn_Clicked"
                        HeightRequest="70"
                        ImageSource="more1.png"
                        Rotation="90">
                        <FlyoutBase.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem
                                    Command="{Binding OpenSongInOnlineSearchCommand}"
                                    CommandParameter="lastFM"
                                    IconImageSource="lastfm.png"
                                    Text="View on Last FM" />
                                <MenuFlyoutItem
                                    Command="{Binding OpenSongInOnlineSearchCommand}"
                                    CommandParameter="google"
                                    IconImageSource="google.png"
                                    Text="View on Google" />
                                <MenuFlyoutItem
                                    Command="{Binding OpenSongInOnlineSearchCommand}"
                                    CommandParameter="youtube"
                                    IconImageSource="lastfm.png"
                                    Text="View on YouTube" />
                                <MenuFlyoutItem
                                    Command="{Binding OpenSongInOnlineSearchCommand}"
                                    CommandParameter="spotify"
                                    IconImageSource="lastfm.png"
                                    Text="View on Spotify" />
                                <MenuFlyoutItem
                                    Command="{Binding OpenSongInOnlineSearchCommand}"
                                    CommandParameter="deezer"
                                    IconImageSource="lastfm.png"
                                    Text="View on Deezer" />
                                <MenuFlyoutItem
                                    Clicked="ShowBtmSheet_Clicked"
                                    IconImageSource="textitalicsquare.png"
                                    Text="Share Title Only" />
                            </MenuFlyout>
                        </FlyoutBase.ContextFlyout>
                    </Button>
                    <Button
                        Command="{Binding LoadStatsForSelectedSongCommand}"
                        CommandParameter="{Binding SelectedSong}"
                        Text="Reload" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
            <Grid Grid.Column="0" BackgroundColor="Transparent">
                <Border
                    x:Name="BorderUnderImageDomm"
                    BackgroundColor="{Binding SelectedSecondDomColor}"
                    Opacity="0.01"
                    ZIndex="1" />
                <Image
                    HeightRequest="260"
                    Opacity="0.6"
                    Source="{Binding SelectedSong.CoverImagePath}"
                    VerticalOptions="Start" />

            </Grid>
        </Grid>




        <ScrollView
            x:Name="LeftView"
            Grid.Row="1"
            IsVisible="False">
            <VerticalStackLayout Padding="15" Spacing="10">

                <VerticalStackLayout.GestureRecognizers>
                    <DropGestureRecognizer
                        x:Name="SidePage"
                        AllowDrop="True"
                        DragOver="SidePage_DragOver"
                        Drop="SidePage_Drop" />
                </VerticalStackLayout.GestureRecognizers>

                <syncf:SfExpander
                    x:Name="TopExpanderView"
                    Collapsed="TopExpanderView_Collapsed"
                    Expanded="TopExpanderView_Expanded">
                    <syncf:SfExpander.Header>
                        <Border StrokeShape="RoundRectangle 8" StrokeThickness="0">
                            <VerticalStackLayout>
                                <HorizontalStackLayout HorizontalOptions="Center">

                                    <Button
                                        BackgroundColor="Transparent"
                                        Command="{Binding PlayPauseToggleCommand}"
                                        Text="{Binding CurrentPlayingSongView.Title}" />
                                </HorizontalStackLayout>
                                <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                                    <Label
                                        Grid.Column="0"
                                        Text="{Binding CurrentTrackPositionPercentage, StringFormat='{0:n1}'}"
                                        TextColor="DarkSlateBlue" />
                                    <Label Text="%" />

                                </HorizontalStackLayout>

                            </VerticalStackLayout>
                        </Border>
                    </syncf:SfExpander.Header>

                    <syncf:SfExpander.Content>
                        <VerticalStackLayout>

                            <Grid
                                x:Name="SecondA"
                                Grid.Row="1"
                                ColumnDefinitions="auto,auto"
                                ColumnSpacing="5"
                                HorizontalOptions="Center"
                                VerticalOptions="Center">

                                <HorizontalStackLayout
                                    x:Name="MediaBtns"
                                    Grid.Row="0"
                                    HeightRequest="50"
                                    Spacing="10"
                                    VerticalOptions="Center">
                                    <syncf:SfChip
                                        x:Name="SkipPrev"
                                        windows:VisualElement.AccessKey="B"
                                        windows:VisualElement.AccessKeyPlacement="Right"
                                        Background="Transparent"
                                        Command="{Binding PreviousTrackCommand}"
                                        ImageSource="skipprevious.png"
                                        StyleClass="MediaBtnChip" />
                                    <syncf:SfChip
                                        x:Name="PlayPauseBtn"
                                        windows:VisualElement.AccessKey="P"
                                        windows:VisualElement.AccessKeyPlacement="Right"
                                        Background="Transparent"
                                        Command="{Binding PlayPauseToggleCommand}"
                                        ImageSource="play.png"
                                        StyleClass="MediaBtnChip">
                                        <syncf:SfChip.Triggers>
                                            <DataTrigger
                                                Binding="{Binding IsPlaying}"
                                                TargetType="syncf:SfChip"
                                                Value="true">
                                                <Setter Property="ImageSource" Value="pause.png" />
                                            </DataTrigger>

                                            <DataTrigger
                                                Binding="{Binding IsPlaying}"
                                                TargetType="syncf:SfChip"
                                                Value="false">
                                                <Setter Property="ImageSource" Value="play.png" />
                                            </DataTrigger>
                                        </syncf:SfChip.Triggers>
                                    </syncf:SfChip>
                                    <syncf:SfChip
                                        x:Name="SkipNext"
                                        windows:VisualElement.AccessKey="N"
                                        windows:VisualElement.AccessKeyPlacement="Right"
                                        Background="Transparent"
                                        Command="{Binding NextTrackCommand}"
                                        ImageSource="skipnext.png"
                                        StyleClass="MediaBtnChip" />


                                </HorizontalStackLayout>

                                <Grid
                                    Grid.Column="1"
                                    ColumnDefinitions="auto,*,auto"
                                    ColumnSpacing="10"
                                    VerticalOptions="Center" />
                                <HorizontalStackLayout Grid.Column="2" VerticalOptions="Center">
                                    <syncf:SfChip
                                        Background="Transparent"
                                        Command="{Binding ToggleShuffleCommand}"
                                        ImageSource="shuffle.png"
                                        StyleClass="MediaBtnChip">
                                        <syncf:SfChip.Triggers>
                                            <DataTrigger
                                                Binding="{Binding IsShuffleActive}"
                                                TargetType="syncf:SfChip"
                                                Value="True">
                                                <Setter Property="Stroke" Value="DarkSlateBlue" />


                                            </DataTrigger>
                                        </syncf:SfChip.Triggers>
                                    </syncf:SfChip>


                                </HorizontalStackLayout>



                            </Grid>
                            <Grid ColumnDefinitions="180" HorizontalOptions="Center">
                                <FlyoutBase.ContextFlyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem
                                            x:Name="ViewSongMFI"
                                            Clicked="ViewSongMFI_Clicked"
                                            CommandParameter="{Binding CurrentPlayingSongView}"
                                            Text="View" />

                                    </MenuFlyout>
                                </FlyoutBase.ContextFlyout>

                                <Border
                                    Padding="5,5,5,0"
                                    BackgroundColor="#2C2C2C"
                                    StrokeShape="RoundRectangle 5,5,0,0"
                                    VerticalOptions="End">

                                    <VerticalStackLayout>
                                        <VerticalStackLayout.Resources>
                                            <Style TargetType="Label">
                                                <Setter Property="TextColor" Value="#999999" />
                                            </Style>
                                        </VerticalStackLayout.Resources>
                                        <Label Text="{Binding CurrentPlayingSongView.Title}" />
                                        <Label Text="{Binding CurrentPlayingSongView.DurationInSeconds, Converter={converters:DurationConverterFromMsToTimeSpan}}" />
                                    </VerticalStackLayout>

                                </Border>
                            </Grid>

                        </VerticalStackLayout>
                    </syncf:SfExpander.Content>

                </syncf:SfExpander>

                <VerticalStackLayout x:Name="RestOfLeftUI">

                    <!--  Cover Art and Main Info  -->
                    <Border
                        HorizontalOptions="Center"
                        StrokeShape="RoundRectangle 8"
                        StrokeThickness="0">
                        <ImageButton
                            x:Name="ViewSongDetails"
                            windows:VisualElement.AccessKey="V"
                            Aspect="AspectFill"
                            Clicked="ViewSongDetails_Clicked"
                            HeightRequest="200"
                            Source="{Binding SelectedSong.CoverImagePath}"
                            WidthRequest="200" />
                    </Border>

                    <syncf:SfEffectsView windows:VisualElement.AccessKey="T" TouchUp="ViewSongDetails_Clicked">

                        <Label
                            FontAttributes="Bold"
                            FontSize="38"
                            HorizontalOptions="Center"
                            HorizontalTextAlignment="Center"
                            Text="{Binding SelectedSong.Title}" />
                    </syncf:SfEffectsView>


                    <syncf:SfChip
                        x:Name="ViewArtist"
                        Margin="0,-5,0,10"
                        Clicked="ViewArtist_Clicked"
                        CommandParameter="{Binding SelectedSong}"
                        FontSize="20"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        StrokeThickness="0.4"
                        Text="{Binding SelectedSong.OtherArtistsName}"
                        TextColor="{AppThemeBinding Dark=White,
                                                    Light=Black}" />

                    <Label
                        x:Name="ViewAlbum"
                        Margin="0,-5,0,10"
                        FontAttributes="Italic"
                        FontSize="14"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        LineBreakMode="TailTruncation"
                        Text="{Binding SelectedSong.AlbumName}"
                        TextColor="{AppThemeBinding Dark=White,
                                                    Light=Black}" />

                    <!--  Quick Actions  -->
                    <syncf:SfChip
                        Command="{Binding AddFavoriteRatingToSongCommand}"
                        CommandParameter="{Binding SelectedSong}"
                        ImageSize="50"
                        ShowIcon="True"
                        StrokeThickness="0"
                        WidthRequest="65">
                        <syncf:SfChip.Triggers>
                            <DataTrigger
                                Binding="{Binding SelectedSong.IsFavorite}"
                                TargetType="syncf:SfChip"
                                Value="True">
                                <Setter Property="BackgroundColor" Value="DarkSlateBlue" />
                                <Setter Property="ImageSource" Value="heart.png" />
                            </DataTrigger>
                            <DataTrigger
                                Binding="{Binding SelectedSong.IsFavorite}"
                                TargetType="syncf:SfChip"
                                Value="False">
                                <Setter Property="ImageSource" Value="heart.png" />
                                <Setter Property="BackgroundColor" Value="Transparent" />
                            </DataTrigger>
                        </syncf:SfChip.Triggers>
                    </syncf:SfChip>

                    <!--  Tags Section  -->

                    <!--  User Note Section  -->
                    <Label Style="{StaticResource SectionHeader}" Text="{Binding SelectedSong.TrackNumber, StringFormat='# : {0}'}" />
                    <Label Style="{StaticResource SectionHeader}" Text="{Binding SelectedSong.ReleaseYear, StringFormat='Release Year : {0}'}" />
                    <Label Style="{StaticResource SectionHeader}" Text="{Binding SelectedSong.DateCreated, StringFormat='Created on : {0: ddd, MM yyy - hh:mm}', Converter={StaticResource DateTimeConverter}}" />
                    <Label Style="{StaticResource SectionHeader}" Text="{Binding SelectedSong.PlayCount, StringFormat='Number of Dimms : {0}'}" />
                    <Button
                        CommandParameter="{Binding SelectedSong}"
                        HorizontalOptions="Start"
                        Text="Delete" />

                    <!--  File Properties  -->
                    <Label Style="{StaticResource SectionHeader}" Text="File Properties" />
                    <Grid
                        ColumnDefinitions="Auto, *"
                        RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                        RowSpacing="5">
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            Style="{StaticResource FieldLabel}"
                            Text="Path:" />

                        <syncf:SfEffectsView
                            x:Name="ViewFileFolder"
                            Grid.Row="0"
                            Grid.Column="1"
                            TouchDown="ViewFileFolder_TouchDown">
                            <Label
                                Grid.Row="0"
                                Grid.Column="1"
                                LineBreakMode="TailTruncation"
                                Text="{Binding SelectedSong.FilePath}" />
                        </syncf:SfEffectsView>
                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            Style="{StaticResource SectionHeader}"
                            Text="Size:" />
                        <Label
                            Grid.Row="1"
                            Grid.Column="1"
                            Text="{Binding SelectedSong.FileSize, Converter={StaticResource FileSizeConverter}}" />

                        <Label
                            Grid.Row="2"
                            Grid.Column="0"
                            Style="{StaticResource SectionHeader}"
                            Text="Format:" />
                        <Label
                            Grid.Row="2"
                            Grid.Column="1"
                            Text="{Binding SelectedSong.FileFormat, StringFormat='{0}'}">
                            <!--<Label.BindingContext>
                            <MultiBinding>
                                <Binding Path="SelectedSong.FileFormat"/>
                                <Binding Path="SelectedSong.BitRate"/>
                            </MultiBinding>
                        </Label.BindingContext>-->
                        </Label>

                        <Label
                            Grid.Row="3"
                            Grid.Column="0"
                            Style="{StaticResource FieldLabel}"
                            Text="Date Added:" />
                        <Label
                            Grid.Row="3"
                            Grid.Column="1"
                            Text="{Binding SelectedSong.DateCreated, Converter={StaticResource DateTimeConverter}}" />
                    </Grid>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <Grid Grid.Row="1">
            <Grid
                x:Name="ArtistAlbumView"
                IsVisible="False"
                RowDefinitions="auto,*">

                <VerticalStackLayout Grid.Row="0">
                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">

                        <Label
                            FontSize="Header"
                            HorizontalTextAlignment="Center"
                            IsVisible="True"
                            Text="{Binding SelectedSong.ArtistName}" />

                        <Label
                            HorizontalOptions="End"
                            Text="{Binding SearchResults.Count, StringFormat='{0} Songs'}"
                            VerticalOptions="Center" />
                    </HorizontalStackLayout>

                </VerticalStackLayout>
                <CollectionView
                    x:Name="SongsColView"
                    Grid.Row="1"
                    ItemTemplate="{StaticResource GridOfFour}"
                    ItemsSource="{Binding SearchResults}">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout
                            HorizontalItemSpacing="10"
                            Orientation="Vertical"
                            Span="6"
                            VerticalItemSpacing="10" />
                    </CollectionView.ItemsLayout>
                </CollectionView>

            </Grid>

            <syncf:SfTabView
                x:Name="SongTabView"
                BackgroundColor="Transparent"
                EnableSwiping="True"
                IsVisible="True"
                SelectedIndex="{Binding SingleSongPageTabIndex}"
                SelectionChanged="SongTabView_SelectionChanged"
                TabBarPlacement="Top">

                <syncf:SfTabItem Header="Overview">
                    <syncf:SfTabItem.Content>
                        <Grid RowDefinitions="auto,*">


                            <Grid
                                Grid.Row="1"
                                Grid.ColumnSpan="2"
                                Margin="10">
                                <Grid RowDefinitions="auto,*" RowSpacing="10">
                                    <Grid
                                        Grid.Row="0"
                                        ColumnDefinitions="*,*"
                                        ColumnSpacing="10">
                                        <Border
                                            Grid.Column="0"
                                            Padding="10"
                                            Stroke="{Binding CurrentPlaySongDominantColor}">

                                            <VerticalStackLayout>


                                                <HorizontalStackLayout Spacing="10">
                                                    <VerticalStackLayout>

                                                        <Label Text="{Binding SelectedSong.EddingtonNumber, StringFormat='Eddington Number : {0}'}" />
                                                        <Label Text="{Binding SelectedSong.PopularityScore, StringFormat='Popularity Score : {0}'}" />
                                                        <Label Text="{Binding SelectedSong.TrackNumber, StringFormat='Popularity Score : {0}'}" />
                                                    </VerticalStackLayout>

                                                    <VerticalStackLayout>

                                                        <Label Text="{Binding SongAverageListenThrough.Name}" />
                                                        <Label Text="{Binding SongAverageListenThrough.Value, StringFormat='{0:n2}%'}" />

                                                    </VerticalStackLayout>

                                                </HorizontalStackLayout>




                                            </VerticalStackLayout>

                                        </Border>
                                        <Border
                                            Grid.Column="1"
                                            Padding="10"
                                            Stroke="{Binding CurrentPlaySongDominantColor}"
                                            ToolTipProperties.Text="{Binding SelectedSong.SyncLyrics, StringFormat='Lyrics: {0}'}">

                                            <VerticalStackLayout>
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="Medium"
                                                    Text="Length" />
                                                <Label Text="{Binding SelectedSong.DurationInSeconds, StringFormat='{0}', Converter={converters:DurationConverterFromMsToTimeSpan}}" />

                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="Medium"
                                                    Text="Lyrics" />
                                                <HorizontalStackLayout>

                                                    <Label Text="{Binding SelectedSong.SyncLyrics.Length, StringFormat='{0} Xters'}" />
                                                    <ImageButton
                                                        x:Name="ViewLyricsIndex"
                                                        Clicked="ViewLyricsIndex_Clicked"
                                                        HeightRequest="30"
                                                        Source="roundaltarrowright.png" />
                                                </HorizontalStackLayout>



                                            </VerticalStackLayout>

                                        </Border>
                                    </Grid>

                                    <Grid Grid.Row="1" ColumnDefinitions="*,*">

                                        <CollectionView
                                            Grid.Column="0"
                                            HorizontalOptions="Start"
                                            ItemsSource="{Binding SelectedSong.PlayEvents}"
                                            WidthRequest="340">
                                            <CollectionView.ItemsLayout>
                                                <LinearItemsLayout ItemSpacing="10" Orientation="Vertical" />
                                            </CollectionView.ItemsLayout>
                                            <CollectionView.ItemTemplate>
                                                <DataTemplate x:DataType="models:DimmerPlayEventView">
                                                    <Border
                                                        Margin="10,10"
                                                        BackgroundColor="Transparent"
                                                        Stroke="DarkSlateBlue"
                                                        StrokeThickness="1">
                                                        <Border.Triggers>
                                                            <DataTrigger
                                                                Binding="{Binding PlayTypeStr}"
                                                                TargetType="Border"
                                                                Value="Play">
                                                                <Setter Property="Stroke" Value="DarkSlateBlue" />
                                                            </DataTrigger>
                                                            <DataTrigger
                                                                Binding="{Binding PlayTypeStr}"
                                                                TargetType="Border"
                                                                Value="Completed">
                                                                <Setter Property="Stroke" Value="ForestGreen" />
                                                            </DataTrigger>
                                                            <DataTrigger
                                                                Binding="{Binding PlayTypeStr}"
                                                                TargetType="Border"
                                                                Value="Skipped">
                                                                <Setter Property="Stroke" Value="LightCoral" />
                                                            </DataTrigger>


                                                            <DataTrigger
                                                                Binding="{Binding PlayTypeStr}"
                                                                TargetType="Border"
                                                                Value="Seeked">
                                                                <Setter Property="Stroke" Value="LightSteelBlue" />
                                                            </DataTrigger>

                                                            <DataTrigger
                                                                Binding="{Binding PlayTypeStr}"
                                                                TargetType="Border"
                                                                Value="Pause">
                                                                <Setter Property="Stroke" Value="RosyBrown" />
                                                            </DataTrigger>


                                                        </Border.Triggers>
                                                        <HorizontalStackLayout Padding="10" Spacing="10">
                                                            <Label Text="{Binding PlayTypeStr}" WidthRequest="80" />
                                                            <Label Text="{Binding DatePlayed, Converter={converters:DateTimeOffsetToLocalDateConverter}}" WidthRequest="180" />
                                                            <Label IsVisible="False" Text="{Binding PositionInSeconds, StringFormat='{0:n2}s'}">
                                                                <Label.Triggers>
                                                                    <DataTrigger
                                                                        Binding="{Binding PlayTypeStr}"
                                                                        TargetType="Label"
                                                                        Value="Seeked">
                                                                        <Setter Property="IsVisible" Value="True" />
                                                                    </DataTrigger>
                                                                    <DataTrigger
                                                                        Binding="{Binding PlayTypeStr}"
                                                                        TargetType="Label"
                                                                        Value="Pause">
                                                                        <Setter Property="IsVisible" Value="True" />
                                                                    </DataTrigger>
                                                                </Label.Triggers>
                                                            </Label>
                                                        </HorizontalStackLayout>
                                                    </Border>
                                                </DataTemplate>
                                            </CollectionView.ItemTemplate>
                                        </CollectionView>

                                        <VerticalStackLayout Grid.Column="1">
                                            <Label Text="Collection View Filters" />
                                            <CheckBox x:Name="ShowOnlyCompletedPlays" CheckedChanged="ShowOnlyCompletedPlays_CheckedChanged" />
                                            <CheckBox x:Name="ShowOnlySkippedPlays" CheckedChanged="ShowOnlySkippedPlays_CheckedChanged" />

                                        </VerticalStackLayout>

                                    </Grid>
                                </Grid>
                            </Grid>

                        </Grid>
                    </syncf:SfTabItem.Content>
                </syncf:SfTabItem>


                <syncf:SfTabItem Header="Edit Lyrics">
                    <syncf:SfTabItem.Content>
                        <Grid
                            Margin="5"
                            ColumnDefinitions="*,*"
                            ColumnSpacing="10">

                            <VerticalStackLayout Grid.Column="0" Spacing="10">

                                <HorizontalStackLayout Spacing="10">

                                    <Button
                                        x:Name="PasteFromClipBoard"
                                        BackgroundColor="Transparent"
                                        BorderWidth="1"
                                        Clicked="PasteFromClipBoard_Clicked"
                                        HeightRequest="40"
                                        ImageSource="clipboard.png"
                                        Text="Paste From Clipboard"
                                        ToolTipProperties.Text="Paste From Clipboard"
                                        VerticalOptions="Start">
                                        <Button.Behaviors>
                                            <toolkit:IconTintColorBehavior TintColor="DarkSlateBlue" />
                                        </Button.Behaviors>
                                    </Button>
                                    <Button
                                        x:Name="LoadFromTxtFile"
                                        BackgroundColor="Transparent"
                                        BorderWidth="1"
                                        Command="{Binding LoadPlainLyricsFromFileCommand}"
                                        HeightRequest="40"
                                        ImageSource="fileinfoa.png"
                                        Text="Load From Text File"
                                        VerticalOptions="Start">
                                        <Button.Behaviors>
                                            <toolkit:IconTintColorBehavior TintColor="DarkSlateBlue" />
                                        </Button.Behaviors>
                                    </Button>
                                    <Button
                                        x:Name="GoogleOnline"
                                        BackgroundColor="Transparent"
                                        BorderWidth="1"
                                        Command="{Binding LoadPlainLyricsFromFileCommand}"
                                        HeightRequest="40"
                                        ImageSource="google.png"
                                        Text="Find Online"
                                        VerticalOptions="Start">
                                        <Button.Behaviors>
                                            <toolkit:IconTintColorBehavior TintColor="DarkSlateBlue" />
                                        </Button.Behaviors>
                                    </Button>

                                </HorizontalStackLayout>
                                <Editor
                                    x:Name="PlainLyricsEditor"
                                    HeightRequest="400"
                                    Placeholder="Paste Plain Lyrics Here" />
                            </VerticalStackLayout>


                            <Grid
                                Grid.Column="1"
                                RowDefinitions="*,auto"
                                RowSpacing="10">

                                <CollectionView ItemsSource="{Binding LyricsInEditor}">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate x:DataType="models:LyricEditingLineViewModel">
                                            <Grid
                                                Margin="10"
                                                ColumnDefinitions="auto,*,auto,auto"
                                                ColumnSpacing="10">

                                                <Label Grid.Column="0" Text="{Binding Timestamp}" />
                                                <Editor
                                                    x:Name="SyncLyricEditor"
                                                    Grid.Column="1"
                                                    Text="{Binding Text}"
                                                    TextChanged="SyncLyricEditor_TextChanged" />
                                                <ImageButton
                                                    x:Name="DeleteCurrentLyricLineBtn"
                                                    Grid.Column="2"
                                                    Clicked="DeleteCurrentLyricLineBtn_Clicked"
                                                    CommandParameter="{Binding .}"
                                                    Source="delete.png" />
                                                <ImageButton
                                                    x:Name="TimestampCurrentLyricLineBtn"
                                                    Grid.Column="3"
                                                    Clicked="TimestampCurrentLyricLineBtn_Clicked"
                                                    CommandParameter="{Binding .}"
                                                    Source="time.png" />
                                            </Grid>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>

                                <HorizontalStackLayout
                                    Grid.Row="1"
                                    HorizontalOptions="Center"
                                    Spacing="10">

                                    <Button Command="{Binding SaveTimestampedLyricsCommand}" Text="Save Lyrics" />
                                    <Button
                                        BackgroundColor="DarkRed"
                                        Command="{Binding CancelLyricsEditingSessionCommand}"
                                        Text="Cancel" />
                                </HorizontalStackLayout>
                            </Grid>
                        </Grid>
                    </syncf:SfTabItem.Content>
                </syncf:SfTabItem>


                <syncf:SfTabItem Header="Lyrics search">
                    <syncf:SfTabItem.Content>
                        <VerticalStackLayout
                            Grid.Row="0"
                            Padding="15"
                            IsVisible="True">
                            <Label Style="{StaticResource SectionHeader}" Text="Find Lyrics Online" />
                            <VerticalStackLayout
                                HorizontalOptions="Start"
                                Spacing="10"
                                WidthRequest="300">
                                <Entry
                                    x:Name="SongTitleEntry"
                                    Focused="SongTitleEntry_Focused"
                                    HorizontalOptions="Fill"
                                    Placeholder="Song Title"
                                    Text="{Binding LyricsTrackNameSearch}" />
                                <Entry
                                    x:Name="SongArtistNameEntry"
                                    Focused="SongArtistNameEntry_Focused"
                                    HorizontalOptions="Fill"
                                    Placeholder="Artist Name"
                                    ReturnCommandParameter="art"
                                    Text="{Binding LyricsArtistNameSearch}" />
                                <Entry
                                    x:Name="SongAlbumName"
                                    Focused="SongAlbumName_Focused"
                                    HorizontalOptions="Fill"
                                    Placeholder="Album Name"
                                    ReturnCommandParameter="alb"
                                    Text="{Binding LyricsAlbumNameSearch}" />
                                <Button Command="{Binding SearchLyricsCommand}" Text="Search" />
                            </VerticalStackLayout>
                            <ActivityIndicator IsRunning="{Binding IsLyricsSearchBusy}" />
                            <CollectionView EmptyView="No results found." ItemsSource="{Binding LyricsSearchResults}">
                                <CollectionView.ItemsLayout>
                                    <GridItemsLayout
                                        HorizontalItemSpacing="10"
                                        Orientation="Vertical"
                                        Span="3"
                                        VerticalItemSpacing="10" />
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="models:LrcLibSearchResult">
                                        <Border>
                                            <VerticalStackLayout>
                                                <Label Text="{Binding Name}" />
                                                <Label Text="{Binding ArtistName}" />
                                                <Label Text="{Binding Duration, Converter={converters:DurationConverterFromMsToTimeSpan}}" />
                                                <Label Text="{Binding Instrumental, StringFormat='Is Instrumental: {0}'}" />
                                                <Label Text="{Binding SyncedLyrics}" />
                                                <BoxView HeightRequest="2" Color="DarkSlateBlue" />
                                            </VerticalStackLayout>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>

                    </syncf:SfTabItem.Content>
                </syncf:SfTabItem>

                <syncf:SfTabItem Header="Stats">
                    <syncf:SfTabItem.Content>
                        <Grid RowDefinitions="auto,*">
                            <syncf:SfPolarChart>
                                <syncf:PolarLineSeries ItemsSource="{Binding SelectedSong.PlayEvents}" XBindingPath="" />
                            </syncf:SfPolarChart>
                        </Grid>
                    </syncf:SfTabItem.Content>
                </syncf:SfTabItem>
                <!--  TAB 0: METADATA EDITOR  -->
                <syncf:SfTabItem Header="Edit Metadata">
                    <syncf:SfTabItem.Content>
                        <ScrollView>
                            <Grid>
                                <Image
                                    Aspect="AspectFit"
                                    IsVisible="False"
                                    Opacity="0.10"
                                    Source="{Binding SelectedSong.CoverImagePath}" />

                                <VerticalStackLayout Padding="15" Spacing="10">
                                    <Label Text="Edit the core information for this song. These changes will be saved directly to the audio file's tags." />

                                    <Grid
                                        ColumnDefinitions="Auto,*"
                                        RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,*"
                                        RowSpacing="10">
                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Style="{StaticResource FieldLabel}"
                                            Text="Title" />
                                        <Entry
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Text="{Binding SelectedSong.Title}" />

                                        <Label
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Style="{StaticResource FieldLabel}"
                                            Text="Artist(s)" />
                                        <HorizontalStackLayout Grid.Row="1" Grid.Column="1">
                                            <Entry Placeholder="e.g. Artist A, Artist B" Text="{Binding SelectedSong.OtherArtistsName}" />
                                            <Picker ItemDisplayBinding="{Binding Name}" ItemsSource="{Binding AllArtistsInDb}" />
                                            <Button Command="{Binding LoadAllArtistsFromOurDatabaseCommand}" />
                                        </HorizontalStackLayout>
                                        <Label
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            Style="{StaticResource FieldLabel}"
                                            Text="Album" />
                                        <Entry
                                            Grid.Row="2"
                                            Grid.Column="1"
                                            Text="{Binding SelectedSong.AlbumName}" />


                                        <Label
                                            Grid.Row="4"
                                            Grid.Column="0"
                                            Style="{StaticResource FieldLabel}"
                                            Text="Genre" />
                                        <Entry
                                            Grid.Row="4"
                                            Grid.Column="1"
                                            Text="{Binding SelectedSong.GenreName}" />

                                        <Label
                                            Grid.Row="5"
                                            Grid.Column="0"
                                            Style="{StaticResource FieldLabel}"
                                            Text="Year" />
                                        <Entry
                                            Grid.Row="5"
                                            Grid.Column="1"
                                            Keyboard="Numeric"
                                            Text="{Binding SelectedSong.ReleaseYear}" />

                                        <Label
                                            Grid.Row="6"
                                            Grid.Column="0"
                                            Style="{StaticResource FieldLabel}"
                                            Text="Tags"
                                            VerticalOptions="Start" />
                                        <VerticalStackLayout
                                            Grid.Row="6"
                                            Grid.Column="1"
                                            Spacing="10">
                                            <syncf:SfChipGroup ItemsSource="{Binding SelectedSong.UserNoteAggregatedText}">

                                                <syncf:SfChipGroup.ItemTemplate>
                                                    <DataTemplate x:DataType="models:UserNoteModelView">
                                                        <Label Margin="10" Text="{Binding UserMessageText}">
                                                            <!--<FlyoutBase.ContextFlyout>
                                                                    <MenuFlyout>
                                                                        <MenuFlyoutItem Text="Edit"/>
                                                                        <MenuFlyoutItem IsDestructive="True"
                            Text="Delete"/>
                                                                    </MenuFlyout>
                                                                </FlyoutBase.ContextFlyout>-->
                                                        </Label>
                                                    </DataTemplate>
                                                </syncf:SfChipGroup.ItemTemplate>
                                            </syncf:SfChipGroup>
                                            <HorizontalStackLayout IsVisible="False">
                                                <Entry
                                                    HorizontalOptions="Fill"
                                                    Placeholder="Add a new tag..."
                                                    Text="{Binding CurrentNoteToSave}" />

                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>
                                    </Grid>

                                    <HorizontalStackLayout
                                        Margin="0,20,0,0"
                                        HorizontalOptions="Center"
                                        Spacing="10">
                                        <Button Text="Reset" />
                                        <Button FontAttributes="Bold" Text="Save Changes" />
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </Grid>
                        </ScrollView>
                    </syncf:SfTabItem.Content>
                </syncf:SfTabItem>

                <!--  TAB 1: LYRICS MANAGEMENT  -->
                <syncf:SfTabItem Header="Lyrics" IsVisible="True">
                    <syncf:SfTabItem.Content>
                        <Grid RowDefinitions="Auto, *">
                            <VerticalStackLayout>
                                <Label Text="{Binding SelectedSong.SyncLyrics.Length, StringFormat='Sync Lyrics Count: {0}'}" />
                            </VerticalStackLayout>
                            <Grid Grid.Row="1" ColumnDefinitions="*">

                                <Grid Grid.Column="0" ColumnDefinitions="auto,*">
                                    <VerticalStackLayout Grid.Column="0" Spacing="20">
                                        <Button Command="{Binding ContributeToLrcLibCommand}" Text="Contribute To LrcLib" />

                                        <ScrollView HeightRequest="500">

                                            <Label CharacterSpacing="2" Text="{Binding SelectedSong.SyncLyrics}" />

                                        </ScrollView>
                                    </VerticalStackLayout>
                                    <CollectionView Grid.Column="1" ItemsSource="{Binding SelectedSong.EmbeddedSync}">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate x:DataType="models:LyricPhraseModelView">
                                                <Grid ColumnDefinitions="0.3*,*,0.3*">
                                                    <Border Grid.Column="0" StrokeThickness="1">
                                                        <Label Text="{Binding TimeStampMs}" />
                                                    </Border>

                                                    <Border Grid.Column="1">

                                                        <Label Text="{Binding Text}" TextColor="{AppThemeBinding Dark=White, Light=Black}" />
                                                    </Border>

                                                    <HorizontalStackLayout Grid.Column="2">
                                                        <ImageButton Source="edit.png" />
                                                    </HorizontalStackLayout>
                                                </Grid>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </Grid>
                            </Grid>
                        </Grid>
                    </syncf:SfTabItem.Content>
                </syncf:SfTabItem>



                <!--  Tab 3: Cover Image Management  -->
                <syncf:SfTabItem Header="Cover Image">
                    <syncf:SfTabItem.Content>
                        <Grid RowDefinitions="auto,*">
                            <Image
                                Aspect="AspectFit"
                                Opacity="0.2"
                                Source="{Binding SelectedSong.CoverImagePath}" />
                            <VerticalStackLayout Grid.Row="0" Spacing="10">

                                <Editor Text="{Binding SelectedSong.Title}" />

                                <Editor Text="{Binding SelectedSong.ArtistName}" />

                                <Editor Text="{Binding SelectedSong.AlbumName}" />


                                <HorizontalStackLayout Spacing="15">
                                    <ImageButton
                                        x:Name="SearchSongOnline"
                                        Clicked="SearchSongOnline_Clicked"
                                        Source="searchd.png">
                                        <ImageButton.Behaviors>
                                            <toolkit:IconTintColorBehavior TintColor="DarkSlateBlue" />
                                        </ImageButton.Behaviors>
                                    </ImageButton>
                                    <ImageButton
                                        x:Name="PickSongImageFromFolder"
                                        Command="{Binding PickSongImageFromFolderCommand}"
                                        Source="folderopen.png">
                                        <ImageButton.Behaviors>
                                            <toolkit:IconTintColorBehavior TintColor="DarkSlateBlue" />
                                        </ImageButton.Behaviors>
                                    </ImageButton>

                                    <ImageButton
                                        x:Name="SaveCurrentCoverToDisc"
                                        Clicked="SaveCurrentCoverToDisc_Clicked"
                                        Source="savea.png">
                                        <ImageButton.Behaviors>
                                            <toolkit:IconTintColorBehavior TintColor="DarkSlateBlue" />
                                        </ImageButton.Behaviors>
                                    </ImageButton>
                                </HorizontalStackLayout>

                                <HorizontalStackLayout Spacing="40">
                                    <VerticalStackLayout>
                                        <FlyoutBase.ContextFlyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem
                                                    x:Name="ApplyCurrentImageToCurrPlayingSong"
                                                    Clicked="ApplyCurrentImageToCurrentPlayingSong_Clicked"
                                                    Text="Apply This Image To Current Playing Song" />
                                                <MenuFlyoutItem
                                                    x:Name="ApplyCurrentImageToAllSongsInAlbum"
                                                    Clicked="ApplyCurrentImageToAllSongsInAlbum_Clicked"
                                                    Text="Apply This Image To All Songs In Album" />
                                                <MenuFlyoutItem
                                                    x:Name="ApplyCurrentImageToMainArtist"
                                                    Clicked="ApplyCurrentImageToMainArtist_Clicked"
                                                    Text="Apply This Image To Main Artist In Album" />
                                            </MenuFlyout>
                                        </FlyoutBase.ContextFlyout>
                                        <Label FontSize="Header" Text="Current Image" />
                                        <Image Aspect="Center" Source="{Binding SelectedSong.CoverImagePath}" />
                                    </VerticalStackLayout>
                                    <VerticalStackLayout>
                                        <Label FontSize="Header" Text="Current Image" />
                                        <Image
                                            HeightRequest="400"
                                            Source="{Binding SelectedSongLastFMData.Images[5].Url}"
                                            WidthRequest="400" />
                                    </VerticalStackLayout>
                                </HorizontalStackLayout>

                            </VerticalStackLayout>

                            <CollectionView Grid.Row="1" ItemsSource="{Binding SelectedSongLastFMData.Images}">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="lastfmmodels:Image">
                                        <Border
                                            Margin="5"
                                            StrokeShape="RoundRectangle 8"
                                            StrokeThickness="0">
                                            <VerticalStackLayout>

                                                <Image
                                                    Aspect="AspectFill"
                                                    HeightRequest="200"
                                                    Source="{Binding Url}"
                                                    WidthRequest="200" />

                                                <HorizontalStackLayout>

                                                    <syncf:SfChip
                                                        x:Name="SaveImageFromLastFM"
                                                        Clicked="SaveImageFromLastFM_Clicked"
                                                        CommandParameter="{Binding .}"
                                                        ImageSource="savea.png" />

                                                </HorizontalStackLayout>
                                            </VerticalStackLayout>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </Grid>

                    </syncf:SfTabItem.Content>
                </syncf:SfTabItem>
                <syncf:SfTabItem Header="Duplicate Finder">



                    <Grid RowDefinitions="Auto, *">

                        <!--  1. The Initiation Controls  -->
                        <VerticalStackLayout Grid.Row="0" Spacing="10">
                            <ActivityIndicator IsRunning="{Binding IsFindingDuplicates}" IsVisible="{Binding IsFindingDuplicates}" />
                            <Label Text="Find songs with the same title and duration. You can then choose which versions to keep or delete." />
                            <Label Text="{Binding DuplicateSets.Count, StringFormat='# Duplicates found : {0}'}" />
                            <Button
                                Command="{Binding FindDuplicatesForSongCommand}"
                                CommandParameter="{Binding SelectedSong}"
                                Text="Find Duplicates" />


                            <Button
                                BackgroundColor="DarkRed"
                                Command="{Binding ApplyDuplicateActionsCommand}"
                                Text="Apply Changes" />
                        </VerticalStackLayout>

                        <CollectionView Grid.Row="1" ItemsSource="{Binding DuplicateSets}">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout
                                    HorizontalItemSpacing="5"
                                    Orientation="Vertical"
                                    Span="3"
                                    VerticalItemSpacing="5" />
                            </CollectionView.ItemsLayout>

                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="libSanity:DuplicateSetViewModel">

                                    <!--  This is the card for a single set of duplicates  -->
                                    <Border
                                        Margin="10"
                                        Padding="10"
                                        Stroke="LightGray"
                                        StrokeThickness="1">
                                        <VerticalStackLayout Spacing="5">
                                            <Label FontAttributes="Bold" FontSize="Default">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <Span Text="Duplicate Set: " />
                                                        <Span Text="{Binding Title}" />
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>

                                            <!--  This is the inner list of the actual song files  -->
                                            <CollectionView HeightRequest="410" ItemsSource="{Binding Items}">
                                                <CollectionView.ItemTemplate>
                                                    <DataTemplate x:DataType="libSanity:DuplicateItemViewModel">
                                                        <Grid Padding="5" ColumnDefinitions="Auto, *, Auto">

                                                            <!--  Visual cue for Original vs Duplicate  -->
                                                            <Image
                                                                Grid.Column="0"
                                                                Margin="0,0,10,0"
                                                                HeightRequest="30"
                                                                Source="addcircle.png"
                                                                VerticalOptions="Center">
                                                                <Image.Triggers>
                                                                    <DataTrigger
                                                                        Binding="{Binding Status}"
                                                                        TargetType="Image"
                                                                        Value="Duplicate">
                                                                        <Setter Property="IsVisible" Value="False" />
                                                                    </DataTrigger>
                                                                </Image.Triggers>
                                                            </Image>

                                                            <!--  The crucial song info  -->
                                                            <VerticalStackLayout Grid.Column="1" Spacing="12">
                                                                <Label
                                                                    FontAttributes="Bold"
                                                                    FontSize="12"
                                                                    Text="{Binding Song.FilePath}" />

                                                                <Label>
                                                                    <Label.FormattedText>
                                                                        <FormattedString>
                                                                            <Span Text="Size: " />
                                                                            <Span Text="{Binding Song.FileSize, Converter={converters:BytesToMegabytesConverter}, StringFormat='{0} MB'}" />
                                                                            <!--  Add a converter for bytes to MB  -->
                                                                            <Span Text="  |  Bitrate: " />
                                                                            <Span Text="{Binding Song.BitRate, StringFormat='{0} kbps'}" />
                                                                            <Span Text="  |  Added: " />
                                                                            <Span Text="{Binding Song.DateCreated, StringFormat='{0:yyyy-MM-dd}'}" />
                                                                        </FormattedString>
                                                                    </Label.FormattedText>
                                                                </Label>
                                                            </VerticalStackLayout>

                                                            <!--  The Action Selector  -->
                                                            <HorizontalStackLayout Grid.Column="2" VerticalOptions="Center">
                                                                <!--  Note: RadioButton binding can be complex. You might need a command on the item viewmodel  -->
                                                                <!--  or use a Picker for simplicity  -->
                                                                <Picker FontSize="Small" SelectedItem="{Binding Action, Mode=TwoWay}">
                                                                    <Picker.ItemsSource>
                                                                        <x:Array Type="{x:Type libSanity:DuplicateAction}">
                                                                            <libSanity:DuplicateAction>Keep</libSanity:DuplicateAction>
                                                                            <libSanity:DuplicateAction>Delete</libSanity:DuplicateAction>
                                                                            <libSanity:DuplicateAction>Ignore</libSanity:DuplicateAction>
                                                                        </x:Array>
                                                                    </Picker.ItemsSource>
                                                                </Picker>
                                                            </HorizontalStackLayout>
                                                        </Grid>
                                                    </DataTemplate>
                                                </CollectionView.ItemTemplate>
                                            </CollectionView>
                                        </VerticalStackLayout>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>

                            <CollectionView.EmptyView>
                                <Label
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"
                                    Text="Click 'Find Duplicates' to begin."
                                    VerticalOptions="Center" />
                            </CollectionView.EmptyView>

                        </CollectionView>

                        <!--  3. The Finalization Button  -->

                    </Grid>

                </syncf:SfTabItem>

            </syncf:SfTabView>
        </Grid>

        <syncf:SfPopup x:Name="SongDetailsPopup">
            <syncf:SfPopup.HeaderTemplate>
                <DataTemplate>
                    <VerticalStackLayout>
                        <Label FontSize="20" Text="Song Details" />

                    </VerticalStackLayout>
                </DataTemplate>
            </syncf:SfPopup.HeaderTemplate>
            <syncf:SfPopup.ContentTemplate>
                <DataTemplate>
                    <Border>

                        <VerticalStackLayout>
                            <Grid ColumnDefinitions="*,*">
                                <Label Grid.Column="0" Text="" />
                                <Label Grid.Column="1" Text="{Binding SelectedSong.Title}" />
                            </Grid>
                            <Grid ColumnDefinitions="*,*">
                                <Label Grid.Column="0" Text="" />
                                <Label Grid.Column="1" Text="{Binding SelectedSong.ArtistName}" />
                            </Grid>
                            <Grid ColumnDefinitions="*,*">
                                <Label Grid.Column="0" Text="" />
                                <Label Grid.Column="1" Text="{Binding SelectedSong.AlbumName}" />
                            </Grid>
                            <Grid ColumnDefinitions="*,*">
                                <Label Grid.Column="0" Text="" />
                                <Label Grid.Column="1" Text="{Binding SelectedSong.OtherArtistsName}" />
                            </Grid>
                            <Grid ColumnDefinitions="*,*">
                                <Label Grid.Column="0" Text="File Path" />
                                <Button
                                    x:Name="OpenFileInFileExplorer"
                                    Grid.Column="1"
                                    BackgroundColor="Transparent"
                                    Clicked="OpenFileInFileExplorer_Clicked"
                                    Text="{Binding SelectedSong.FilePath}"
                                    ToolTipProperties.Text="{Binding SelectedSong.FilePath}" />
                            </Grid>
                            <Grid ColumnDefinitions="*,*">
                                <Label Grid.Column="0" Text="Cover Image" />
                                <ImageButton
                                    Grid.Column="1"
                                    Clicked="SaveCurrentCoverToDisc_Clicked"
                                    Source="{Binding SelectedSong.CoverImagePath}"
                                    ToolTipProperties.Text="{Binding SelectedSong.CoverImagePath}" />
                            </Grid>
                            <Grid ColumnDefinitions="*,*">
                                <Label Grid.Column="0" Text="" />
                                <ImageButton Grid.Column="1" Source="{Binding SelectedSong.DurationInSeconds, Converter={converters:DurationConverterFromMsToTimeSpan}}" />
                            </Grid>
                            <Grid ColumnDefinitions="*,*">
                                <Label Grid.Column="0" Text="Total Dims" />
                                <ImageButton Grid.Column="1" Source="{Binding SelectedSong.PlayCompletedCount}" />
                            </Grid>
                            <Grid ColumnDefinitions="*,*">
                                <Label Grid.Column="0" Text="Last Played" />
                                <ImageButton Grid.Column="1" Source="{Binding SelectedSong.LastPlayed, Converter={converters:DateTimeOffsetToLocalDateConverter}}" />
                            </Grid>
                            <Grid ColumnDefinitions="*,*">
                                <Label Grid.Column="0" Text="Skip Count" />
                                <ImageButton Grid.Column="1" Source="{Binding SelectedSong.SkipCount}" />
                            </Grid>
                        </VerticalStackLayout>

                    </Border>
                </DataTemplate>
            </syncf:SfPopup.ContentTemplate>
        </syncf:SfPopup>
    </Grid>
</ContentPage>
