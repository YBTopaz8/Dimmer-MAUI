<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="Dimmer.WinUI.Views.ControlPanelWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Dimmer.WinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:winmgt="using:Dimmer.WinUI.Utils.StaticUtils"
    Title="ControlPanelWindow"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Padding="15" DataContext="{x:Bind MyViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            FontSize="18"
            FontWeight="Bold"
            Text="Active Windows" />

        <ListView
            x:Name="WindowList"
            Grid.Row="1"
            ItemsSource="{x:Bind MyViewModel.AllWindows, Mode=OneWay}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="winmgt:WindowEntry">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Width="200" Text="{x:Bind Title}" />
                        <Button Click="Focus_Click" Content="Focus" />
                        <Button Click="Snap_Click" Content="Snap" />
                        <Button Click="Close_Click" Content="Close" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Right"
            Orientation="Horizontal"
            Spacing="8">
            <Button Click="{x:Bind MyViewModel.SaveAllWindows}" Content="Save All" />
            <Button Click="{x:Bind MyViewModel.RefreshWindows}" Content="Refresh" />
        </StackPanel>
    </Grid>
</Window>
