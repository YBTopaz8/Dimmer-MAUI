<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Dimmer.WinUI.Views.WinuiPages.LibraryStatsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Dimmer.WinUI.Views.WinuiPages"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    
    mc:Ignorable="d">

    <ScrollViewer>
        <Grid Padding="24" RowSpacing="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!--  Header  -->
                <RowDefinition Height="Auto" />
                <!--  Row 1: Big Overview  -->
                <RowDefinition Height="Auto" />
                <!--  Row 2: Radar & Pie  -->
                <RowDefinition Height="Auto" />
                <!--  Row 3: Top Lists  -->
                <RowDefinition Height="Auto" />
                <!--  Row 4: Specifics  -->
                <RowDefinition Height="Auto" />

                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Header  -->
            <StackPanel Spacing="4">
                <TextBlock Style="{ThemeResource TitleLargeTextBlockStyle}" Text="Listening Habits" />
                <TextBlock Foreground="Gray" Text="{x:Bind ViewModel.Stats.Subtitle, Mode=OneWay}" />
            </StackPanel>

            <!--  Row 1: The Big Daily Activity Chart  -->
            <Grid
                Grid.Row="1"
                Height="300"
                Padding="16"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="Activity Timeline" />
                <lvc:CartesianChart
                    Grid.Row="1"
                    Series="{x:Bind ViewModel.DailyActivitySeries, Mode=OneWay}"
                    XAxes="{x:Bind ViewModel.DailyDateAxis, Mode=OneWay}"
                    ZoomMode="X" />
            </Grid>

            <!--  Row 2: 3 Columns  -->
            <Grid
                Grid.Row="2"
                Height="300"
                ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Genre Radar  -->
                <Grid
                    Padding="16"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8">
                    <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="Genre Taste" />
                    <lvc:PolarChart
                        AngleAxes="{x:Bind ViewModel.GenrePolarAxis, Mode=OneWay}"
                        InitialRotation="-90"
                        Series="{x:Bind ViewModel.GenreRadarSeries, Mode=OneWay}" />
                </Grid>

                <!--  Hourly Activity  -->
                <Grid
                    Grid.Column="1"
                    Padding="16"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8">
                    <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="Day Clock" />
                    <lvc:CartesianChart Series="{x:Bind ViewModel.HourlyClockSeries, Mode=OneWay}" XAxes="{x:Bind ViewModel.HourlyAxis, Mode=OneWay}" />
                </Grid>

                <!--  Play vs Skip  -->
                <Grid
                    Grid.Column="2"
                    Padding="16"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8">
                    <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="Engagement" />
                    <lvc:PieChart LegendPosition="Bottom" Series="{x:Bind ViewModel.PlaySkipSeries, Mode=OneWay}" />
                </Grid>
            </Grid>

            <!--  Row 3: Top Lists (Horizontal Bars)  -->
            <Grid
                Grid.Row="3"
                Height="350"
                ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Top Artists  -->
                <Grid
                    Padding="16"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8">
                    <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="Top Artists" />
                    <lvc:CartesianChart
                        Series="{x:Bind ViewModel.TopArtistsSeries, Mode=OneWay}"
                        TooltipPosition="Right"
                        YAxes="{x:Bind ViewModel.TopArtistsAxis, Mode=OneWay}" />
                </Grid>

                <!--  Top Albums  -->
                <Grid
                    Grid.Column="1"
                    Padding="16"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8">
                    <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="Top Albums" />
                    <lvc:CartesianChart
                        Series="{x:Bind ViewModel.TopAlbumsSeries, Mode=OneWay}"
                        TooltipPosition="Right"
                        YAxes="{Binding TopAlbumsAxis}" />
                </Grid>
            </Grid>

            <!--  Row 4: Misc Stats  -->
            <Grid
                Grid.Row="4"
                Height="250"
                ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Decades  -->
                <Grid
                    Padding="16"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8">
                    <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="Eras" />
                    <lvc:CartesianChart Series="{x:Bind ViewModel.DecadeSeries, Mode=OneWay}" XAxes="{x:Bind ViewModel.DecadeAxis, Mode=OneWay}" />
                </Grid>

                <!--  Day of Week  -->
                <Grid
                    Grid.Column="1"
                    Padding="16"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8">
                    <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="Weekly Routine" />
                    <!--  Add DayOfWeekSeries binding here  -->
                </Grid>

                <!--  Custom Stat (e.g. Discovery)  -->
                <Grid
                    Grid.Column="2"
                    Padding="16"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8">
                    <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="Discovery" />
                    <!--  Add DiscoverySeries binding here  -->
                </Grid>
            </Grid>

            <Grid
                Grid.Row="5"
                Height="250"
                ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  7. Decades  -->
                <Grid
                    Padding="16"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8">
                    <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="Eras" />
                    <lvc:CartesianChart Series="{x:Bind ViewModel.DecadeSeries, Mode=OneWay}" XAxes="{x:Bind ViewModel.DecadeAxis, Mode=OneWay}" />
                </Grid>

                <!--  8. Weekly Routine  -->
                <Grid
                    Grid.Column="1"
                    Padding="16"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8">
                    <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="Weekly Rhythm" />
                    <lvc:CartesianChart Series="{x:Bind ViewModel.DayOfWeekSeries, Mode=OneWay}" XAxes="{x:Bind ViewModel.DayOfWeekAxis, Mode=OneWay}" />
                </Grid>

                <!--  12. Time Investment  -->
                <Grid
                    Grid.Column="2"
                    Padding="16"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8">
                    <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="Time Sink" />
                    <lvc:CartesianChart Series="{x:Bind ViewModel.TimeInvestmentSeries, Mode=OneWay}" XAxes="{x:Bind ViewModel.TimeInvestmentAxis, Mode=OneWay}" />
                </Grid>
            </Grid>

            <!--  Row 5: Deep Insights (Skipped, Rediscovered, Burnout)  -->
            <Grid
                Grid.Row="6"
                Height="300"
                ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  9. Skipped Artists  -->
                <Grid
                    Padding="16"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8">
                    <TextBlock
                        Foreground="IndianRed"
                        Style="{ThemeResource SubtitleTextBlockStyle}"
                        Text="Most Skipped" />
                    <lvc:CartesianChart Series="{x:Bind ViewModel.SkippedArtistsSeries, Mode=OneWay}" YAxes="{x:Bind ViewModel.SkippedArtistsAxis, Mode=OneWay}" />
                </Grid>

                <!--  10. Rediscovered  -->
                <Grid
                    Grid.Column="1"
                    Padding="16"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8">
                    <TextBlock
                        Foreground="Goldenrod"
                        Style="{ThemeResource SubtitleTextBlockStyle}"
                        Text="Rediscovered" />
                    <lvc:CartesianChart Series="{x:Bind ViewModel.RediscoveredSeries, Mode=OneWay}" YAxes="{x:Bind ViewModel.RediscoveredAxis, Mode=OneWay}" />
                </Grid>

                <!--  11. Burnout  -->
                <Grid
                    Grid.Column="2"
                    Padding="16"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8">
                    <TextBlock
                        Foreground="Gray"
                        Style="{ThemeResource SubtitleTextBlockStyle}"
                        Text="Burnout Track" />
                    <lvc:CartesianChart Series="{x:Bind ViewModel.BurnoutSeries, Mode=OneWay}" YAxes="{x:Bind ViewModel.BurnoutAxis, Mode=OneWay}" />
                </Grid>
            </Grid>

        </Grid>
    </ScrollViewer>
</Page>