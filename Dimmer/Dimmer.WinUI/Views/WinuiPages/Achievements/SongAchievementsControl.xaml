<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Dimmer.WinUI.Views.WinuiPages.Achievements.SongAchievementsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Dimmer.WinUI.Views.WinuiPages.Achievements"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Dimmer.Data.ModelView"
    mc:Ignorable="d">
    <StackPanel Spacing="10">
        <TextBlock
            Margin="0,0,0,5"
            Style="{StaticResource SubtitleTextBlockStyle}"
            Text="Song Milestones" />

        <ItemsControl ItemsSource="{x:Bind ViewModel.SongAchievements, Mode=OneWay}">
            <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="models:AchievementDisplayItem">
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  1. Status Icon  -->
                        <!--  If Unlocked, show Tier Icon. If Locked, show Padlock.  -->
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Opacity="{x:Bind Opacity}"
                            Text="{x:Bind TierIcon}" />

                        <!--  2. Name  -->
                        <TextBlock
                            Grid.Column="1"
                            Margin="8,0,0,0"
                            VerticalAlignment="Center"
                            Opacity="{x:Bind Opacity}"
                            Text="{x:Bind DisplayTitle}" />

                        <!--  3. Checkmark if done  -->
                        <FontIcon
                            Grid.Column="2"
                            FontSize="14"
                            Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                            Glyph="&#xE73E;"
                            Visibility="{x:Bind IsUnlocked}" />
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>