<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Dimmer.WinUI.Views.WinuiPages.FeedbackBoardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:convertersWinUI="using:Dimmer.WinUI.Utils.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Dimmer.WinUI.Views.WinuiPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Dimmer.DimmerLive.Models;assembly=Dimmer"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <convertersWinUI:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <convertersWinUI:BoolToInverseVisibilityConverter x:Key="BoolToInverseVisibilityConverter" />
            <convertersWinUI:StatusToColorConverter x:Key="StatusToColorConverter" />
            <convertersWinUI:TypeToColorConverter x:Key="TypeToColorConverter" />
        </ResourceDictionary>
    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Padding="20">
            <Button
                x:Name="BackBtn"
                Background="DarkSlateBlue"
                BorderBrush="DarkSlateBlue"
                Click="BackBtn_Click"
                Content="Back"
                CornerRadius="0,5,5,0" />
            <TextBlock
                Margin="0,10,0,0"
                FontSize="32"
                FontWeight="Bold"
                Text="Feedback Board" />
            <TextBlock
                FontSize="14"
                Foreground="Gray"
                Text="Submit bugs, request features, and see what others are asking for" />
        </StackPanel>

        <!-- Filter and Search Bar -->
        <StackPanel Grid.Row="1" Padding="20,0,20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Search Box -->
                <TextBox
                    x:Name="SearchBox"
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,0,10,10"
                    PlaceholderText="Search feedback..."
                    Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.KeyboardAccelerators>
                        <KeyboardAccelerator Key="Enter" Invoked="SearchBox_EnterKeyInvoked" />
                    </TextBox.KeyboardAccelerators>
                </TextBox>

                <!-- Search Button -->
                <Button
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0,0,10,10"
                    Click="SearchButton_Click"
                    Content="Search" />

                <!-- Submit Button -->
                <Button
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="0,0,0,10"
                    Background="DarkSlateBlue"
                    Click="SubmitFeedbackButton_Click"
                    Content="Submit Feedback"
                    FontWeight="Bold" />

                <!-- Filters -->
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Orientation="Horizontal"
                    Spacing="10">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="Type:" />
                    <ComboBox
                        x:Name="TypeFilter"
                        Width="120"
                        SelectedItem="{Binding SelectedType, Mode=TwoWay}"
                        SelectionChanged="TypeFilter_SelectionChanged">
                        <ComboBoxItem Content="All" IsSelected="True" />
                        <ComboBoxItem Content="Bug" />
                        <ComboBoxItem Content="Feature" />
                    </ComboBox>

                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="Status:" />
                    <ComboBox
                        x:Name="StatusFilter"
                        Width="120"
                        SelectedItem="{Binding SelectedStatus, Mode=TwoWay}"
                        SelectionChanged="StatusFilter_SelectionChanged">
                        <ComboBoxItem Content="All" IsSelected="True" />
                        <ComboBoxItem Content="open" />
                        <ComboBoxItem Content="planned" />
                        <ComboBoxItem Content="in-progress" />
                        <ComboBoxItem Content="shipped" />
                        <ComboBoxItem Content="rejected" />
                    </ComboBox>

                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        Text="Sort by:" />
                    <ComboBox
                        x:Name="SortFilter"
                        Width="120"
                        SelectedItem="{Binding SortBy, Mode=TwoWay}"
                        SelectionChanged="SortFilter_SelectionChanged">
                        <ComboBoxItem Content="recent" IsSelected="True" />
                        <ComboBoxItem Content="upvotes" />
                        <ComboBoxItem Content="status" />
                    </ComboBox>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Issues List -->
        <ScrollViewer Grid.Row="2" Padding="20,0,20,20">
            <StackPanel>
                <!-- Loading Indicator -->
                <ProgressRing
                    Width="50"
                    Height="50"
                    HorizontalAlignment="Center"
                    IsActive="{Binding IsLoading}"
                    Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}" />

                <!-- Empty State -->
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="16"
                    Foreground="Gray"
                    Text="No feedback found. Be the first to submit!"
                    Visibility="{Binding IsLoading, Converter={StaticResource BoolToInverseVisibilityConverter}}" />

                <!-- Issues ItemsControl -->
                <ItemsControl x:Name="IssuesListView" ItemsSource="{Binding FilteredIssues}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="models:FeedbackIssue">
                            <Border
                                Margin="0,0,0,10"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                CornerRadius="8"
                                PointerPressed="IssueCard_PointerPressed"
                                Tag="{Binding}"
                                Translation="0,0,12">
                                <Border.Shadow>
                                    <ThemeShadow />
                                </Border.Shadow>
                                <Grid Padding="15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Upvote Count -->
                                    <StackPanel
                                        Grid.Column="0"
                                        Margin="0,0,15,0"
                                        VerticalAlignment="Top">
                                        <FontIcon FontSize="16" Glyph="&#xE74A;" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontSize="16"
                                            FontWeight="Bold"
                                            Text="{Binding UpvoteCount}" />
                                    </StackPanel>

                                    <!-- Issue Content -->
                                    <StackPanel Grid.Column="1" Spacing="5">
                                        <TextBlock
                                            FontSize="18"
                                            FontWeight="SemiBold"
                                            Text="{Binding Title}"
                                            TextWrapping="Wrap" />
                                        <TextBlock
                                            FontSize="14"
                                            Foreground="Gray"
                                            Text="{Binding Description}"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="Wrap" />
                                        <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                            <TextBlock
                                                Margin="0,0,10,0"
                                                FontSize="12"
                                                Foreground="Gray"
                                                Text="{Binding AuthorUsername}" />
                                            <TextBlock
                                                Margin="0,0,10,0"
                                                FontSize="12"
                                                Foreground="Gray"
                                                Text="{Binding Platform}" />
                                            <FontIcon
                                                Margin="0,0,5,0"
                                                FontSize="12"
                                                Foreground="Gray"
                                                Glyph="&#xE8F2;" />
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="Gray"
                                                Text="{Binding CommentCount}" />
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Status Badge -->
                                    <StackPanel Grid.Column="2" VerticalAlignment="Top">
                                        <Border
                                            Padding="10,5"
                                            Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                            CornerRadius="4">
                                            <TextBlock
                                                FontSize="12"
                                                FontWeight="SemiBold"
                                                Foreground="White"
                                                Text="{Binding Status}" />
                                        </Border>
                                        <Border
                                            Margin="0,5,0,0"
                                            Padding="8,4"
                                            Background="{Binding Type, Converter={StaticResource TypeToColorConverter}}"
                                            CornerRadius="4">
                                            <TextBlock
                                                FontSize="11"
                                                FontWeight="SemiBold"
                                                Foreground="White"
                                                Text="{Binding Type}" />
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
