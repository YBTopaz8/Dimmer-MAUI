<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Dimmer.WinUI.Views.WinuiPages.SingleSongPage.EditSongPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Dimmer.WinUI.Views.WinuiPages.SingleSongPage"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel>

            <StackPanel Grid.Column="0" Margin="20">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="25"
                    Text="Song Core Edits" />
                <Grid>
                    <Image x:Name="detailedImage" Source="{x:Bind DetailedSong.CoverImagePath}" />

                    <Button Width="60" Height="60">
                        <Image Source="/Dimmer/Resources/Images/edit.svg" />
                    </Button>
                </Grid>
                <TextBlock FontWeight="SemiBold" Text="Title:" />
                <TextBox x:Name="TitleTextBox" Margin="0,5,0,15" />
                <Button
                    Width="120"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Left"
                    Content="Save Changes" />
            </StackPanel>


            <StackPanel>
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="25"
                    Text="Song Artist Edits" />
                <ItemsRepeater ItemsSource="{x:Bind MyViewModel.SelectedSong.ArtistToSong}">

                    <ItemsRepeater.ItemTemplate>

                        <DataTemplate>
                            <Button
                                Margin="0,10,0,0"
                                BorderThickness="1"
                                CornerRadius="15">
                                <StackPanel
                                    Background="Transparent"
                                    Orientation="Horizontal"
                                    Spacing="15">
                                    <Image
                                        Width="50"
                                        Height="50"
                                        Source="{Binding ImagePath}"
                                        Visibility="{Binding ImagePath, Converter={StaticResource StringNullOrEmptyToVisibility}}" />
                                    <TextBlock FontSize="26" Text="{Binding Name}" />
                                    <TextBlock FontSize="26" Text="{Binding TotalSongsByArtist}" />
                                    <TextBlock FontSize="26" Text="{Binding TotalAlbumsByArtist}" />


                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </StackPanel>

            <StackPanel>
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="25"
                    Text="Song Album Edits" />
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock FontWeight="SemiBold" Text="Album:" />
                    <TextBox
                        x:Name="AlbumTextBox"
                        Margin="0,5,0,15"
                        Text="{x:Bind MyViewModel.SelectedSong.Album.Name}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="10">
                    <Button x:Name="ViewAlbum" Content="View" />
                    <Button x:Name="AssignNewAlbumToSong" Content="Update" />
                    <Button x:Name="RemoveFromAlbum" Content="Remove From Album" />
                </StackPanel>

            </StackPanel>

            <StackPanel>
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="25"
                    Text="Song Genre Edit" />
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock FontWeight="SemiBold" Text="Album:" />
                    <TextBox
                        x:Name="GenreTextBox"
                        Margin="0,5,0,15"
                        Text="{x:Bind MyViewModel.SelectedSong.Genre.Name}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="10">
                    <Button x:Name="ViewAlbum" Content="View" />
                    <Button x:Name="AssignNewAlbumToSong" Content="Update" />
                    <Button x:Name="RemoveFromAlbum" Content="Remove From Album" />
                </StackPanel>

            </StackPanel>
        </StackPanel>


    </ScrollViewer>
</Page>
