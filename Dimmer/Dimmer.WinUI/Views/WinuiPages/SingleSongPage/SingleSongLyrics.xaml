<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Dimmer.WinUI.Views.WinuiPages.SingleSongPage.SingleSongLyrics"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Dimmer.WinUI.Views.WinuiPages.SingleSongPage"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="Transparent" RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <SelectorBar
            x:Name="SelectorBar2"
            Grid.Row="0"
            SelectionChanged="SelectorBar2_SelectionChanged">

            <SelectorBarItem
                x:Name="LyricsEditorPage"
                IsSelected="True"
                Text="Online Lyric via LibLRC" />
            <SelectorBarItem
                x:Name="OnlineLyricsSearchPage"
                Text="OnlineLyricsSearch Page"
                Visibility="Collapsed" />
            <SelectorBarItem x:Name="LyricsManualSyncPage" Text="LyricsManualSync Page" />
            <SelectorBarItem
                x:Name="SelectorBarItemPage5"
                Text="Page5"
                Visibility="Collapsed" />
        </SelectorBar>

        <Frame
            x:Name="ContentFrame"
            Grid.Row="1"
            IsNavigationStackEnabled="False" />
    </Grid>
</Page>
