<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Dimmer.WinUI.Views.WinuiPages.SingleSongPage.SubPage.LyricsManualSyncPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Dimmer.WinUI.Views.WinuiPages.SingleSongPage.SubPage"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Dimmer.Data.ModelView"
    xmlns:modelsLyrics="using:Dimmer.Data.ModelView"
    mc:Ignorable="d">

    <Page.Resources>
        <!--  Converter to highlight the Current Line  -->
        <SolidColorBrush x:Key="SystemAccentColor" Color="{ThemeResource SystemAccentColor}" />
    </Page.Resources>

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Manual Sync Studio" />
            <TextBlock
                Opacity="0.6"
                Style="{StaticResource CaptionTextBlockStyle}"
                Text="Tap 'Sync' or press Spacebar when the line is sung." />
            
            <!--  Paste from Clipboard Button  -->
            <Button
                Margin="0,10,0,0"
                Command="{x:Bind MyViewModel.PasteLyricsFromClipboardCommand}"
                HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <FontIcon Glyph="&#xE77F;" />
                    <TextBlock Text="Paste Lyrics from Clipboard" />
                </StackPanel>
            </Button>
        </StackPanel>

        <Grid Grid.Row="1" ColumnSpacing="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <!--  Lyrics List  -->
                <ColumnDefinition Width="1*" />
                <!--  Controls  -->
            </Grid.ColumnDefinitions>

            <!--  LYRICS LIST  -->
            <Border
                Grid.Column="0"
                Background="{ThemeResource LayerFillColorDefaultBrush}"
                BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  Batch Actions Toolbar (visible when items are selected)  -->
                    <Grid
                        x:Name="BatchActionsToolbar"
                        Grid.Row="0"
                        Padding="10"
                        Background="{ThemeResource AccentFillColorDefaultBrush}"
                        Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Button
                                x:Name="RepeatSelectedBtn"
                                Click="RepeatSelectedBtn_Click">
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <FontIcon Glyph="&#xE8E9;" />
                                    <TextBlock Text="Repeat Selected" />
                                </StackPanel>
                            </Button>
                            <Button
                                x:Name="DeleteSelectedBtn"
                                Click="DeleteSelectedBtn_Click">
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <FontIcon Foreground="Red" Glyph="&#xE74D;" />
                                    <TextBlock Text="Delete Selected" />
                                </StackPanel>
                            </Button>
                            <Button
                                x:Name="ClearSelectionBtn"
                                Click="ClearSelectionBtn_Click"
                                Content="Clear Selection" />
                        </StackPanel>
                    </Grid>

                    <ListView
                        x:Name="LyricsListView"
                        Grid.Row="1"
                        ItemsSource="{x:Bind MyViewModel.LyricsInEditor, Mode=OneWay}"
                        SelectionChanged="LyricsListView_SelectionChanged"
                        SelectionMode="Multiple">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="modelsLyrics:LyricEditingLineViewModel">
                                <Grid Padding="10,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100" />
                                        <!--  Time  -->
                                        <ColumnDefinition Width="*" />
                                        <!--  Text  -->
                                        <ColumnDefinition Width="Auto" />
                                        <!--  Repeat  -->
                                        <ColumnDefinition Width="Auto" />
                                        <!--  Delete  -->
                                    </Grid.ColumnDefinitions>

                                    <!--  Timestamp  -->
                                    <TextBlock
                                        x:Name="TimeDisplay"
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        FontFamily="Consolas"
                                        Opacity="{x:Bind IsTimed, Mode=OneWay, Converter={StaticResource BoolOpacityConverter}}"
                                        Text="{x:Bind Timestamp, Mode=OneWay}" />

                                    <!--  Lyric Text (Editable)  -->
                                    <TextBox
                                        x:Name="TextDisplay"
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Text="{x:Bind Text, Mode=TwoWay}" />

                                    <!--  Repeat Button  -->
                                    <Button
                                        Grid.Column="2"
                                        Margin="5,0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Command="{Binding ElementName=LyricsListView, Path=DataContext.RepeatLineCommand}"
                                        CommandParameter="{x:Bind}"
                                        ToolTipService.ToolTip="Repeat this line">
                                        <FontIcon
                                            FontSize="12"
                                            Glyph="&#xE8E9;"
                                            Opacity="0.5" />
                                    </Button>

                                    <!--  Delete Button  -->
                                    <Button
                                        Grid.Column="3"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Command="{Binding ElementName=LyricsListView, Path=DataContext.DeleteTimestampFromLineCommand}"
                                        CommandParameter="{x:Bind}"
                                        ToolTipService.ToolTip="Delete this line">
                                        <FontIcon
                                            FontSize="12"
                                            Foreground="Red"
                                            Glyph="&#xE74D;"
                                            Opacity="0.5" />
                                    </Button>

                                    <!--  Visual State Manager for Current Line Highlighting  -->
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup>
                                            <VisualState x:Name="Normal">
                                                <VisualState.StateTriggers>
                                                    <StateTrigger IsActive="{x:Bind IsCurrentLine, Converter={StaticResource BoolInverterConverter}}" />
                                                </VisualState.StateTriggers>
                                            </VisualState>
                                            <VisualState x:Name="Active">
                                                <VisualState.StateTriggers>
                                                    <StateTrigger IsActive="{x:Bind IsCurrentLine}" />
                                                </VisualState.StateTriggers>
                                                <VisualState.Setters>
                                                    <Setter Target="TextDisplay.FontWeight" Value="Bold" />
                                                    <Setter Target="TextDisplay.Foreground" Value="{StaticResource SystemAccentColor}" />
                                                    <Setter Target="TimeDisplay.Foreground" Value="{StaticResource SystemAccentColor}" />
                                                </VisualState.Setters>
                                            </VisualState>
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <!--  CONTROLS SIDEBAR  -->
            <StackPanel
                Grid.Column="1"
                VerticalAlignment="Center"
                Spacing="15">

                <!--  Current Song Info  -->
                <Image
                    Height="150"
                    Margin="0,0,0,10"
                    Source="{x:Bind MyViewModel.SelectedSong.CoverImagePath, Mode=OneWay}" />
                <TextBlock
                    FontWeight="Bold"
                    Text="{x:Bind MyViewModel.SelectedSong.Title, Mode=OneWay}"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
                <TextBlock
                    Opacity="0.7"
                    Text="{x:Bind MyViewModel.SelectedSong.ArtistName, Mode=OneWay}"
                    TextAlignment="Center" />

                <MenuFlyoutSeparator />

                <!--  MAIN SYNC BUTTON  -->
                <Button
                    x:Name="SyncBtn"
                    Height="60"
                    HorizontalAlignment="Stretch"
                    Click="SyncButton_Click"
                    Style="{StaticResource AccentButtonStyle}">
                    <StackPanel>
                        <FontIcon FontSize="24" Glyph="&#xE916;" />
                        <TextBlock FontWeight="Bold" Text="SYNC NEXT LINE (Space)" />
                    </StackPanel>
                </Button>

                <!--  REPEAT BUTTON (The requested feature)  -->
                <Button Height="50" HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <FontIcon Glyph="&#xE8E9;" />
                        <TextBlock Text="Repeat Previous Line" />
                    </StackPanel>
                    <ToolTipService.ToolTip>
                        <ToolTip Content="Duplicates the previously synced line and syncs it NOW." />
                    </ToolTipService.ToolTip>
                </Button>

                <!--  Playback Controls  -->
                <Grid ColumnSpacing="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Grid.Column="0"
                        HorizontalAlignment="Stretch"
                        Content="-5s" />
                    <Button
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        Content="+5s" />
                </Grid>

                <Button
                    HorizontalAlignment="Stretch"
                    Command="{x:Bind MyViewModel.PlayPauseToggleCommand}"
                    Visibility="{x:Bind MyViewModel.IsDimmerPlaying, Mode=OneWay, Converter={StaticResource BoolToVis}}">
                    <FontIcon Glyph="&#xF5B0;" />
                </Button>


                <Button
                    HorizontalAlignment="Stretch"
                    Command="{x:Bind MyViewModel.PlayPauseToggleCommand}"
                    Visibility="{x:Bind MyViewModel.IsDimmerPlaying, Mode=OneWay, Converter={StaticResource BoolToInverseVisibilityConverter}}">
                    <FontIcon Glyph="&#xF8AE;" />
                </Button>

            </StackPanel>
        </Grid>

        <!--  FOOTER ACTIONS  -->
        <StackPanel
            Grid.Row="2"
            Margin="0,10,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal"
            Spacing="10">
            <Button
                Click="Cancel_Click"
                Command="{x:Bind MyViewModel.CancelLyricsEditingSessionCommand}"
                Content="Cancel Session" />

            <Button
                Command="{x:Bind MyViewModel.SaveTimestampedLyricsCommand}"
                CommandParameter="{x:Bind MyViewModel.CurrentSongPlainLyricsEdit, Mode=OneWay}"
                Content="Save to LRC"
                Style="{StaticResource AccentButtonStyle}" />
        </StackPanel>
    </Grid>
</Page>