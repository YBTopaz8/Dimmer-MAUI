<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Dimmer.WinUI.Views.WinuiPages.SingleSongPage.SubPage.Stats.SongJourneyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:Dimmer.WinUI.Utils.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Dimmer.WinUI.Views.WinuiPages.SingleSongPage.SubPage.Stats"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <converters:PlayTypeToBrushConverter x:Key="TypeToBrush" />
        <converters:PlayTypeToGlyphConverter x:Key="TypeToGlyph" />
    </Page.Resources>

    <ScrollViewer>
        <StackPanel Padding="0,0,0,40">
            <TextBlock
                Margin="0,0,0,20"
                Style="{ThemeResource TitleTextBlockStyle}"
                Text="The Journey" />

            <!--  The Timeline  -->
            <ItemsRepeater x:Name="PlaybackEvents">
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate>
                        <Grid Height="60">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <!--  Date  -->
                                <ColumnDefinition Width="40" />
                                <!--  Line/Icon  -->
                                <ColumnDefinition Width="*" />
                                <!--  Details  -->
                            </Grid.ColumnDefinitions>

                            <!--  Date Column  -->
                            <StackPanel
                                Margin="0,0,15,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                                <TextBlock
                                    HorizontalAlignment="Right"
                                    FontWeight="Bold"
                                    Text="{Binding DatePlayed, Converter={StaticResource EventDateToTimeAgoConverter}}" />
                                <TextBlock
                                    HorizontalAlignment="Right"
                                    FontSize="11"
                                    Opacity="0.5"
                                    Text="{Binding DatePlayed, Converter={StaticResource EventDateToTimeAgoConverter}}" />
                            </StackPanel>

                            <!--  Timeline Graphic  -->
                            <Grid Grid.Column="1">
                                <!--  Vertical Line  -->
                                <Rectangle
                                    Width="2"
                                    HorizontalAlignment="Center"
                                    Fill="{ThemeResource SurfaceStrokeColorDefaultBrush}" />

                                <!--  The Node  -->
                                <Ellipse
                                    Width="24"
                                    Height="24"
                                    Fill="{ThemeResource LayerFillColorDefaultBrush}"
                                    Stroke="{Binding PlayType, Converter={StaticResource TypeToBrush}}"
                                    StrokeThickness="2" />
                                <FontIcon
                                    FontSize="10"
                                    Foreground="{Binding PlayType, Converter={StaticResource TypeToBrush}}"
                                    Glyph="{Binding PlayType, Converter={StaticResource TypeToGlyph}}" />
                            </Grid>

                            <!--  Details Column  -->
                            <StackPanel
                                Grid.Column="2"
                                Margin="15,0,0,0"
                                VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock FontWeight="SemiBold" Text="{Binding PlayType}" />
                                    <Border
                                        Padding="4,0"
                                        VerticalAlignment="Center"
                                        Background="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                                        CornerRadius="4">
                                        <TextBlock FontSize="10" Text="{Binding DeviceName}" />
                                    </Border>
                                </StackPanel>

                                <!--  Show duration if skipped  -->
                                <TextBlock
                                    FontSize="11"
                                    Opacity="0.6"
                                    Text="{Binding PositionInSeconds, Converter={StaticResource DurationConverter}}"
                                    Visibility="{Binding WasSkipped, Converter={StaticResource BoolToVis}}" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>

            <!--  End of line dot  -->
            <Ellipse
                Width="8"
                Height="8"
                Margin="116,0,0,0"
                HorizontalAlignment="Left"
                Fill="Gray"
                Opacity="0.5" />
        </StackPanel>
    </ScrollViewer>
</Page>