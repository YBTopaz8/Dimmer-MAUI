<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Dimmer.WinUI.Views.WinuiPages.Wrapped.WrappedTopArtistView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Dimmer.WinUI.Views.WinuiPages.Wrapped"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource SolidBackgroundFillColorBaseBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Left: The #1 Artist Spotlight  -->
        <Grid Grid.Column="0" Margin="0,0,0,0">
            <Image
                Opacity="0.5"
                Source="{Binding TopArtist.ImagePath}"
                Stretch="UniformToFill" />
            <Rectangle Fill="{ThemeResource SolidBackgroundFillColorBaseBrush}" Opacity="0.7" />

            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="10">
                <PersonPicture
                    Width="180"
                    Height="180"
                    ProfilePicture="{Binding TopArtist.ImagePath}" />
                <TextBlock
                    HorizontalAlignment="Center"
                    CharacterSpacing="2"
                    Opacity="0.7"
                    Text="TOP ARTIST" />
                <TextBlock
                    FontSize="48"
                    FontWeight="Black"
                    Text="{Binding TopArtist.Name}"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />

                <Border
                    Margin="0,20,0,0"
                    Padding="20,10"
                    HorizontalAlignment="Center"
                    Background="{ThemeResource AccentFillColorDefaultBrush}"
                    CornerRadius="20">
                    <TextBlock Foreground="White" Text="You couldn't get enough." />
                </Border>
            </StackPanel>
        </Grid>

        <!--  Right: The List & Top Album  -->
        <Grid
            Grid.Column="1"
            Padding="32"
            Background="{ThemeResource LayerFillColorDefaultBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock
                Margin="0,0,0,24"
                Style="{StaticResource SubtitleTextBlockStyle}"
                Text="YOUR TOP 5" />

            <!--  Top Artists List  -->
            <ListView
                Grid.Row="1"
                ItemsSource="{Binding Top5Artists}"
                SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="20"
                                FontWeight="Bold"
                                Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                Text="{Binding Rank}" />
                            <TextBlock
                                Grid.Column="1"
                                Margin="12,0,0,0"
                                VerticalAlignment="Center"
                                FontSize="18"
                                Text="{Binding ArtistName}" />
                            <TextBlock
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                Opacity="0.6"
                                Text="{Binding Count}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!--  Top Album Mini-Card  -->
            <Grid
                Grid.Row="2"
                Margin="0,20,0,0"
                Padding="12"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image Source="{Binding TopAlbum.CoverImagePath}" />
                <StackPanel
                    Grid.Column="1"
                    Margin="12,0,0,0"
                    VerticalAlignment="Center">
                    <TextBlock
                        FontSize="10"
                        Opacity="0.6"
                        Text="TOP ALBUM" />
                    <TextBlock FontWeight="SemiBold" Text="{Binding TopAlbum.Name}" />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
