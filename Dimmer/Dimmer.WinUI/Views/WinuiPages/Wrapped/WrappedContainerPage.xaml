<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Dimmer.WinUI.Views.WinuiPages.Wrapped.WrappedContainerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Dimmer.WinUI.Views.WinuiPages.Wrapped"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:Dimmer.WinUI.Views.WinuiPages.Wrapped"
    mc:Ignorable="d">


    <Grid>
        <FlipView>
            <FlipViewItem>
                <views:WrappedTopSongView DataContext="{Binding}" />
            </FlipViewItem>
            <FlipViewItem>
                <views:WrappedTopArtistView DataContext="{Binding}" />
            </FlipViewItem>
            <FlipViewItem>
                <views:WrappedSummaryView DataContext="{Binding}" />
            </FlipViewItem>
        </FlipView>

        <!--  Optional: Close/Back Button Overlay  -->
        <Button
            Margin="24"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="CloseButton_Click"
            Content="Close" />
    </Grid>
</Page>