<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Dimmer_MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Dimmer_MAUI"
    xmlns:viewsD="clr-namespace:Dimmer_MAUI.Views.Desktop"    
    xmlns:m="clr-namespace:UraniumUI.Icons.MaterialSymbols;assembly=UraniumUI.Icons.MaterialSymbols"

    Shell.FlyoutBehavior="Disabled"
    FlyoutBackgroundColor="Blue"
    Shell.NavBarIsVisible="False" 
    Shell.TabBarBackgroundColor="#1f1f1f"    
    >

    <FlyoutItem FlyoutDisplayOptions="AsSingleItem" x:Name="shelltabbar">
        <Tab Title="Home" x:Name="homeTab">
            <Tab.Icon>
                <FontImageSource FontFamily="MaterialRounded" Glyph="{x:Static m:MaterialRounded.Music_note}"/>
            </Tab.Icon>
            <ShellContent
                ContentTemplate="{DataTemplate viewsD:HomeD}"
                Route="HomePageD">
            </ShellContent>
        </Tab>

        <Tab Title="Artists" x:Name="albumTab" >
            <Tab.Icon>
                <FontImageSource FontFamily="MaterialRounded" Glyph="{x:Static m:MaterialRounded.Person}"/>
            </Tab.Icon>
            <ShellContent ContentTemplate="{DataTemplate viewsD:ArtistsPageD}"/>
        </Tab>

        <Tab Title="Playlists" x:Name="playlistsTab">
            <Tab.Icon>
                <FontImageSource FontFamily="MaterialRounded" Glyph="{x:Static m:MaterialRounded.Queue_music}"/>
            </Tab.Icon>
            <ShellContent 
                ContentTemplate="{DataTemplate viewsD:PlaylistsPageD}"
                Route="PlaylistsD"/>
            
        </Tab>
        <Tab Title="Stats" x:Name="statsTab">
            <Tab.Icon>
                <FontImageSource FontFamily="MaterialRounded" Glyph="{x:Static m:MaterialRounded.Show_chart}"/>
            </Tab.Icon>
            <ShellContent ContentTemplate="{DataTemplate viewsD:FullStatsD}"
                Route="StatsD"/>
        </Tab>
        <Tab Title="Settings" x:Name="settingsTab">
            <Tab.Icon>
                <FontImageSource FontFamily="MaterialRounded" Glyph="{x:Static m:MaterialRounded.Settings}"/>
            </Tab.Icon>
            <ShellContent ContentTemplate="{DataTemplate viewsD:SettingsPageD}"
                Route="SettingsD"/>
        </Tab>

        <!--<Tab>
            <ShellContent Title="Exit"/>
        </Tab>-->
    </FlyoutItem>
</Shell>
